<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record model="report.paperformat" id="paperformat_monoblock_report">
            <field name="name">paperformat.receipt.a4</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_right">10</field>
            <field name="margin_left">10</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <record id="action_monoblock_report" model="ir.actions.report">
                <field name="name">Monoblock Quotation Report</field>
                <field name="model">monoblock</field>
                <field name="report_name">web_custom.monoblock_report</field>
                <field name="report_file">web_custom.monoblock_report</field>
                <field name="print_report_name">'%s' % object.name</field>
                <field name="binding_model_id" ref="model_monoblock"/>
                <field name="binding_type">report</field>
                <field name="paperformat_id" eval="paperformat_monoblock_report"/>
            </record>

        <template id="monoblock_report">
            <t t-call="web.basic_layout"> 
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <!-- <body> -->
                        <center>
                            <h3> MONOBLOCK QUOTATION REPORT </h3>
                        </center>  
                                                
                        <table class="table-condensed" width="100%" style="font-size:18px">
                            <thead>
                                <tr>
                                    <td style="border : 1px solid black" class="text-center">
                                        <span><strong>Category</strong></span>
                                    </td>
                                    <td  style="border : 1px solid black" class="text-center">
                                        <span><strong>Items</strong></span>
                                    </td>
                                    <td  style="border : 1px solid black" class="text-center">
                                        <span><strong>Price Unit</strong></span>
                                    </td>
                                    <td  style="border : 1px solid black" class="text-center">
                                        <span><strong>Subtotal</strong></span>
                                    </td>
                                    <td  style="border : 1px solid black" class="text-center">
                                        <span><strong>Total</strong></span>
                                    </td>
                                </tr>
                            </thead>
                            <tbody> 
                                <t t-set="total_basic" t-value="0"/> 
                                <t t-set="total_material" t-value="0"/> 
                                <t t-set="total_tip_type" t-value="0"/> 
                                <t t-set="total_single_multi" t-value="0"/> 
                                <t t-set="total_dust_cup" t-value="0"/> 
                                <t t-set="total_kposition" t-value="0"/> 
                                <t t-set="total_head_flat" t-value="0"/> 
                                <t t-set="total_kconfig" t-value="0"/> 
                                <t t-set="total_heat_treatment" t-value="0"/> 
                                <t t-set="total_surface" t-value="0"/> 
                                <t t-set="total_custom_adj" t-value="0"/> 
                                <t t-set="total_fat_option" t-value="0"/> 
                                <t t-set="total_hobb" t-value="0"/> 
                                <t t-set="total_drawing" t-value="0"/> 
                                <t t-set="subtotal_price" t-value="0"/> 
                                <t t-set="total_price" t-value="0"/> 
                                    <t t-set="total_basic" t-value="total_basic + (doc.punch * doc.price_basic)"/> 
                                    <t t-set="total_material" t-value="total_material + (doc.punch * doc.price_material)"/> 
                                    <t t-set="total_tip_type" t-value="total_tip_type + (doc.punch * doc.price_tip_type)"/> 
                                    <t t-set="total_single_multi" t-value="total_single_multi + (doc.punch * doc.price_single_multi)"/> 
                                    <t t-set="total_dust_cup" t-value="total_dust_cup + (doc.punch * doc.price_dust_cup)"/> 
                                    <t t-set="total_kposition" t-value="total_kposition + (doc.punch * doc.price_kposition)"/> 
                                    <t t-set="total_head_flat" t-value="total_head_flat + (doc.punch * doc.price_head_flat)"/> 
                                    <t t-set="total_kconfig" t-value="total_kconfig + (doc.punch * doc.price_kconfig)"/> 
                                    <t t-set="total_heat_treatment" t-value="total_heat_treatment + (doc.punch * doc.price_heat_treatment)"/> 
                                    <t t-set="total_surface" t-value="total_surface + (doc.punch * doc.price_surface)"/> 
                                    <t t-set="total_custom_adj" t-value="total_custom_adj + (doc.punch * doc.price_custom_adj)"/> 
                                    <t t-set="total_fat_option" t-value="total_fat_option + (doc.punch * doc.price_fat_option)"/> 
                                    <t t-set="total_hobb" t-value="total_hobb + (doc.punch * doc.price_hobb)"/> 
                                    <t t-set="total_drawing" t-value="total_drawing + (doc.punch * doc.price_drawing)"/>
                                    <t t-set="subtotal_price" t-value="subtotal_price + (doc.price_basic + doc.price_material + doc.price_tip_type + doc.price_single_multi + doc.price_dust_cup + doc.price_kposition + doc.price_head_flat + doc.price_kconfig + doc.price_heat_treatment + doc.price_surface + doc.price_custom_adj + doc.price_fat_option + doc.price_hobb + doc.price_drawing)"/> 
                                    <t t-set="total_price" t-value="total_price + (total_basic + total_material + total_tip_type + total_single_multi + total_dust_cup + total_kposition + total_head_flat + total_kconfig + total_heat_treatment + total_surface + total_custom_adj + total_fat_option + total_hobb + total_drawing)"/>
                                    <tr>
                                        <td style="border : 1px solid black" class="text-left">
                                            <span>Basic Specification</span>
                                        </td>
                                        <td style="border: 1px solid black;" class="text-left">
                                            <span t-field="doc.basic_specification_id.name"/>
                                        </td>
                                        <td style="border: 1px solid black;" class="text-right pr-1">
                                            <span t-field="doc.price_basic"/>
                                        </td>
                                        <td style="border: 1px solid black;" class="text-right pr-1">
                                            <span t-field="doc.price_basic"/>
                                        </td>
                                        <td style="border: 1px solid black;" class="text-right pr-1">
                                            <span t-esc="'{0:,.1f}'.format(float(total_basic))"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="border : 1px solid black" class="text-left">
                                            <span>Material</span>
                                        </td>
                                        <td style="border: 1px solid black;" class="text-left">
                                            <span t-field="doc.material_id.name"/>
                                        </td>
                                        <td style="border: 1px solid black;" class="text-right pr-1">
                                            <span t-field="doc.price_material"/>
                                        </td>
                                        <td style="border: 1px solid black;" class="text-right pr-1">
                                            <span t-field="doc.price_material"/>
                                        </td>
                                        <td style="border: 1px solid black;" class="text-right pr-1">
                                            <span t-esc="'{0:,.1f}'.format(float(total_material))"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="border : 1px solid black" class="text-left">
                                            <span>Tip Type</span>
                                        </td>
                                        <td style="border: 1px solid black;" class="text-left">
                                            <span t-field="doc.tip_type_id.name"/>
                                        </td>
                                        <td style="border: 1px solid black;" class="text-right pr-1">
                                            <span t-field="doc.price_tip_type"/>
                                        </td>
                                        <td style="border: 1px solid black;" class="text-right pr-1">
                                            <span t-field="doc.price_tip_type"/>
                                        </td>
                                        <td style="border: 1px solid black;" class="text-right pr-1">
                                            <span t-esc="'{0:,.1f}'.format(float(total_tip_type))"/>
                                        </td>
                                    </tr>
                                    <tr>
