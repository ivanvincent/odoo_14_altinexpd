<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="mrp_production_move_line_before_form">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="inherit_mrp.mrp_production_inherit_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/div[@name='button_box']" position="inside">
                    <button type="object" name="action_view_inspecting" attrs="{'invisible':[('state', 'not in', ('progress', 'done'))]}" class="oe_stat_button" icon="fa-cubes">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value" widget="statinfo">
                                <field name="is_inspecting" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Inspecting</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="mrp_production_sizing_move_line_before_form">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="inherit_mrp.mrp_production_sizing_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/div[@name='button_box']" position="inside">
                    <button type="object" name="action_view_inspecting" attrs="{'invisible':[('state', 'not in', ('progress', 'done'))]}" class="oe_stat_button" icon="fa-cubes">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value" widget="statinfo">
                                <field name="is_inspecting" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Inspecting</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>


        <record model="ir.ui.view" id="mrp_production_weaving_move_line_before_form">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="inherit_mrp.mrp_production_weaving_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/div[@name='button_box']" position="inside">
                    <button type="object" name="action_view_inspecting" attrs="{'invisible':[('state', 'not in', ('progress', 'done'))]}" class="oe_stat_button" icon="fa-cubes">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value" widget="statinfo">
                                <field name="is_inspecting" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Inspecting</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="mrp_production_inherit_tree">
            <field name="name">mrp.production.inherit.tree</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_finished']" position="after">
                    <field name="progress_production_twisting" widget="progressbar"/>
                </xpath>
            </field>
        </record>


        <record model="ir.ui.view" id="inherit_mrp_production_twisting_ity_form">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="inherit_mrp.mrp_production_twisting_ity_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_assign']" position="before">
                    <button name="action_dopping" string="Dopping" type="object" class="oe_highlight" attrs="{'invisible':[('state', '=', 'done')]}"/>
                </xpath>

                <xpath expr="//field[@name='user_id']" position="after">
                    <label for="progress_production_twisting" string="Progress" />
                    <div>
                        <field name="progress_production_twisting" widget="progressbar" class="oe_inline" />
                    </div>
                </xpath>

                <xpath expr="//group[@name='twisting']" position="after">
                    <group string="Hasil Twisting">
                        <field name="total_interlace_in" />
                        <field name="total_interlace_out" />
                    </group>
                </xpath>

                <xpath expr="//page[@name='components']" position="after">
                    <page string="Interlace">
                        <field name="interlace_move_line_before_ids" readonly="1">
                            <tree editable="bottom">
                                <field name="type_dopping"/>
                                <field name="type_transfer"/>
                                <field name="employee_id"/>
                                <field name="shift"/>
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>


        <record model="ir.ui.view" id="mrp_production_twisting_move_line_before_form">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="inherit_mrp.mrp_production_twisting_tfo_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_assign']" position="before">
                    <button name="action_dopping" string="Dopping" type="object" class="oe_highlight" attrs="{'invisible':[('state', '=', 'done')]}"/>
                </xpath>

                <xpath expr="//field[@name='user_id']" position="after">
                    <label for="progress_production_twisting" string="Progress" />
                    <div>
                        <field name="progress_production_twisting" widget="progressbar" class="oe_inline" />
                    </div>
                </xpath>

                <xpath expr="//group[@name='twisting']" position="after">
                    <group string="Hasil Twisting">
                        <field name="total_pw_in" />
                        <field name="total_pw_out" />
                        <field name="total_tfo_in" />
                        <field name="total_tfo_out" />
                        <field name="total_vhs_in" />
                        <field name="total_vhs_out" />
                        <field name="total_jumbo_in" />
                        <field name="total_jumbo_out" />
                    </group>
                </xpath>

                <xpath expr="//page[@name='components']" position="after">
                    <page string="Pirn Winder">
                        <field name="pw_move_line_before_ids" readonly="1">
                            <tree editable="bottom">
                                <field name="type_dopping"/>
                                <field name="type_transfer"/>
                                <field name="employee_id"/>
                                <field name="shift"/>
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </page>
                    <page string="TFO">
                        <field name="tfo_move_line_before_ids" readonly="1">
                            <tree editable="bottom">
                                <field name="type_dopping"/>
                                <field name="type_transfer"/>
                                <field name="employee_id"/>
                                <field name="shift"/>
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </page>
                    <page string="VHS">
                        <field name="vhs_move_line_before_ids" readonly="1">
                            <tree editable="bottom">
                                <field name="type_dopping"/>
                                <field name="type_transfer"/>
                                <field name="employee_id"/>
                                <field name="shift"/>
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Jumbo" attrs="{'invisible':[('jenis_order', '=', 'lusi')]}">
                        <field name="jumbo_move_line_before_ids" readonly="1">
                            <tree editable="bottom">
                                <field name="type_dopping"/>
                                <field name="type_transfer"/>
                                <field name="employee_id"/>
                                <field name="shift"/>
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <!-- <xpath expr="//sheet/div[@name='button_box']" position="inside">
                    <button type="object" name="action_view_inspecting" attrs="{'invisible':[('state', 'not in', ('progress', 'done'))]}" class="oe_stat_button" icon="fa-cubes">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value" widget="statinfo">
                                <field name="is_inspecting" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Inspecting</span>
                        </div>
                    </button>
                </xpath> -->
            </field>
        </record>
    </data>
</odoo>