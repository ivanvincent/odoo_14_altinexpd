<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_sale_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//page[@name='other_information']/group/group/field[@name='require_signature']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='other_information']/group/group/field[@name='require_payment']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <!--
            <xpath expr="//page[@name='other_information']/group/group[@name='utm_link']" position="attributes">
                <attribute name="invisible">1</attribute>                        
            </xpath>
-->
            </field>
        </record>


    </data>
</odoo>