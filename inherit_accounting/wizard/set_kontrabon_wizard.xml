    <record id="set_kontrabon_wizard_kp" model="ir.actions.act_window">
        <field name="name">Set Kontrabon</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">set.kontrabon.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_account_move" />
        <field name="binding_view_types">list</field>
        <field name="view_id" ref="view_set_kontrabon_form"/>
    </record>




</odoo>
