<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="update_address_form" model="ir.ui.view">
            <field name="name">update_address.form</field>
            <field name="model">update.address.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="partner_address_id"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_update_address" type="object" string="Update" class="oe_highlight"/>
                        <button name="acton_reset_address" type="object" string="Reset Address" class="bg-danger"/>
                        <button name="cancel" type="special" string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="update_address_action" model="ir.actions.act_window">
            <field name="name">Update Address</field>
            <field name="res_model">update.address.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="update_address_form"/>
            <field name="target">new</field>
        </record>
    
    </data>
    

</odoo>
