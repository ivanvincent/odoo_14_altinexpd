<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="account_move_line_form">
            <field name="name">account.move.inherit.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']/tree/field[@name='partner_id']" position="after">
                    <field name="location_src_id"/>
                    <field name="location_dest_id"/>
                    <field name="location_id"/>
                </xpath>

                        
                <xpath expr="//field[@name='line_ids']/tree" position="attributes">
                    <attribute name="default_order">debit desc</attribute>
                </xpath>
                
                <xpath expr="//field[@name='payment_reference']" position="attributes">
                    <attribute name="string">Received No</attribute>
                </xpath>

                <xpath expr="//group[@id='header_left_group']/label[@for='ref']" position="attributes">
                    <attribute name="string">No Inv Supplier</attribute>
                </xpath>

                <xpath expr="//field[@name='amount_residual']" position="after">
                    <field name="terbilang" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='ref']" position="after">
                    <field name="stock_move_id"/>
                </xpath>

                <xpath expr="//button[@name='button_draft']" position="after">
                    <field name="partner_id" invisible="1"/>
                    <field name="id" invisible="1"/>
                    <button name="%(inherit_accounting.update_address_action)d" type="action" string="Update Address" class="oe_highlight" context="{'partner_id': partner_id, 'move_id': id}"/>
                </xpath>

                <xpath expr="//field[@name='name']" position="replace">
                    <field name="name" readonly="1"/>
                </xpath>
            </field>
        </record>
    
        <record id="account_move_line_image_form" model="ir.ui.view">
            <field name="name">account.move.images.form</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <form string="" create="false" edit="false">
                    <header>
                    </header>
                    <sheet>
                        <field name="image_ids" readonly="0">
                            <tree editable="bottom">
                                <field name="filename"/>
                                <field name="image_binary" widget="image" class="oe_avatar" readonly="0"/>
                                <field name="image_desc"/>
                            </tree>
                        </field>
                    </sheet>
                    <!--<footer>-->
                    <!--    <button name="close" type="special" string="Close" special="cancel" class="oe_highlight"/>-->
                    <!--</footer>-->
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="account_move_in_inherit_tree">
            <field name="name">account.move.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_state']" position="replace">
                    <field name="payment_state" widget="badge"/>
                </xpath>
            </field>
        </record>
        
        
        <record model="ir.ui.view" id="account_move_search">
            <field name="name">account.move.search</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='duedate']" position="after">
                <filter string="State Kb" name="state_kb" context="{'group_by': 'state_kb'}"/>
                <filter string="Payment State" name="payment_state" context="{'group_by': 'payment_state'}"/>
                </xpath>
            </field>
        </record>

        <record id="account_move_action" model="ir.actions.act_window">
            <field name="name">Images</field>
            <field name="res_model">account.move.line</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="inherit_accounting.account_move_line_image_form"/>
        </record>

    </data>
</odoo>