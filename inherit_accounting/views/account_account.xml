<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="account_account_form">
            <field name="name">account.account.inherit.form</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="analytic_account_id"/>
                </xpath>
            </field>
        </record>

        <record id="account_move_search" model="ir.ui.view">
            <field name="name">account.move.search</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="kontrabon_id" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>