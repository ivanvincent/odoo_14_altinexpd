<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="mutasi_persediaan_form" model="ir.ui.view">
            <field name="name">mutasi.persediaan.form</field>
            <field name="model">mutasi.persediaan</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="action_generate" type="object" string="Generate"/>
                        <button name="action_export_xlsx" type="object" string="Export Xlsx" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <field name="name"/>
                        </div>
                        <group>
                            <group>
                                <field name="date_start" />
                                <field name="date_end" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Line">
                                <field name="line_ids" readonly="1">
                                    <tree>
                                        <field name="account_id"/>
                                        <field name="account" invisible="1"/>
                                        <field name="location_id"/>
                                        <field name="lok" invisible="1"/>
                                        <field name="categ_id"/>
                                        <field name="product_id"/>
                                        <field name="qty_start" sum="1"/>
                                        <field name="saldo_awal" sum="1"/>
                                        <field name="qty_in" sum="1"/>
                                        <field name="penerimaan" sum="1"/>
                                        <field name="qty_out" sum="1"/>
                                        <field name="pengeluaran" sum="1"/>
                                        <field name="qty_balance" sum="1"/>
                                        <field name="saldo_akhir" sum="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="mutasi_persediaan_tree" model="ir.ui.view">
            <field name="name">mutasi.persediaan.tree</field>
            <field name="model">mutasi.persediaan</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </tree>
            </field>
        </record>

        <record id="mutasi_persediaan_action" model="ir.actions.act_window">
            <field name="name">Mutasi Persediaan</field>
            <field name="res_model">mutasi.persediaan</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="mutasi_persediaan_menu"
            name="Mutasi Persediaan"
            parent="accounting_pdf_reports.menu_finance_legal_statement"
            action="mutasi_persediaan_action"
            sequence="20"
        />
    
    </data>
    

</odoo>
