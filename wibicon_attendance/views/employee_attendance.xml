    <data>

        <record id="view_hr_employee_attendance_tree" model="ir.ui.view">
            <field name="name">employee.attendance.tree</field>
            <field name="model">hr.employee.attendance</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Employee Attendance">
                    <field name="code"/>
                    <field name="employee_name"/>
                    <field name="workdate"/>
                    <field name="check_in"/>
                    <field name="check_out"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_payslip_form_inherit">
            <field name="name">hr.payslip.form.inherit</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="sh_hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='number']" position="before">
                    <field name="prev_period"/>
                </xpath>
            </field>
        </record>

