        <record id="view_hr_employee_attendance_form" model="ir.ui.view">
            <field name="name">employee.attendance.form</field>
            <field name="model">hr.employee.attendance</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
            <form string="Employee Attendance Form">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="nip"/>
                            <field name="employee_name"/>
                            <field name="department"/>
                        </group>                    
                        <group>
                            <field name="location"/>
                            <field name="workdate"/>
                            <field name="check_in"/>
                            <field name="check_out"/>
                        </group>
                    </group>
                </sheet>
            </form>
            </field>
        </record>

        <record id="action_employee_attendance_list" model="ir.actions.act_window">
            <field name="name">Finger Print</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.attendance</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click create button to add a new employee attendance
                </p>
            <p>klik tombol create untuk menambah absensi karyawan baru</p>
            </field>
        </record> 
