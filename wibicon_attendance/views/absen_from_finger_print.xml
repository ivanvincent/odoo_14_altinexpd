<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">
        <record id="checkinout_view_form" model="ir.ui.view">
            <field name="name">checkinout.view.form</field>
            <field name="model">checkinout</field>
            <field name="arch" type="xml">
                <form string="Checkinout">
                    <!-- <header>
                        <button name="action_generate_absensi" string="Generate Absen" type="object"/>
                        <button name="action_import_employees" string="Import to Employees" type="object"/>
                    </header> -->
                    <sheet>
                        <group>
                            <field name="employee_id"/>
                            <field name="user_id"/>
                            <field name="checktime"/>
                            <field name="checktype"/>
                            <field name="verifycode"/>
                            <field name="sensor_id"/>
                            <field name="workcode"/>
                            <field name="sn"/>
                            <field name="userexfmt"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="checkinout_view_tree" model="ir.ui.view">
            <field name="name">checkinout.view.tree</field>
            <field name="model">checkinout</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <field name="user_id"/>
                    <field name="checktime"/>
                    <field name="checktype"/>
                    <field name="verifycode"/>
                    <field name="sensor_id"/>
                    <field name="workcode"/>
                    <field name="sn"/>
                    <field name="userexfmt"/>
                </tree>
            </field>
        </record>

        <record id="checkinout_action" model="ir.actions.act_window">
            <field name="name">Checkinout</field>
            <field name="res_model">checkinout</field>
            <field name="view_mode">tree,form</field>
        </record>   

        <menuitem
            id="absen_from_finger_menu"
            name="Absent"
            parent="hr_attendance.menu_hr_attendance_manage_attendances"
            action="checkinout_action"
            sequence="50"
        />        
    </data>
</odoo>