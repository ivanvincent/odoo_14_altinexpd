<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report id="action_sppm_report" model="stock.picking" string="Print SPPM 2" name="inherit_stock.report_sppm_template" report_type="qweb-pdf" />

        <template id="report_sppm_template">
            <t t-call="web.html_container">
              <t t-foreach="docs" t-as="doc">
                <style>
                    @font-face {
                        font-family: 'Courier New';
                        font-style: normal;
                        font-weight: 400;
                        src: local('Courier New'), local('CourierNewPSMT'), url(http://themes.googleusercontent.com/licensed/font?kit=p0pJArTTK5Heq6xbYtNwnp0EAVxt0G0biEntp43Qt6E) format('truetype');
                    }

                    .Courier {
                        font-family: Courier New;
                    }
                </style>
                <div class="header">
                        <div class="row mt32">
                            
                            <div class="col-7">
                              <div class="col-xs-1" style="margin-left: -10px">
                                <img src="/web/binary/company_logo" style="width : 100px; height:100px; padding-top:2px;" align="left"/>
                              </div>
                              <div class="col-xs-8 col-xs-offset-1 font-small">
                                <span style="padding-left:10px; padding-bottom:5px; font-size:18px"><strong>PT. ALTINEX</strong></span><br/>
                                <!--<div class="line" style="border-bottom: thin solid #222;"/>-->
                                <span style="padding-left:10px; font-size:16px">Jl. Panghegar No.7, Kota Bandung, 40613</span><br/>
                                <span style="padding-left:10px; font-size:16px">JAWA BARAT - INDONESIA</span>
                              </div>
                            </div>
                            <div class="col-5" align="right">
                                    <span style="padding-right:0px; padding-bottom:5px; font-size:20px; font-weight: bold"><strong>SURAT PERMINTAAN PERMERIKSAAN MATERIAL</strong></span><br/>
                                    <span t-field="doc.name" style="padding-right:10px; padding-bottom:5px; font-size:20px;"/>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    
                <div class="article">
                    <table class="table-condensed" style="width: 100%">
                        <thead class="text-center">
                            <tr>
                                <th style="border: 1px solid black; padding-left : 5px ; padding-right : 5px" rowspan="2">No.</th>
                                <th style="border: 1px solid black; padding-left : 5px ; padding-right : 5px" rowspan="2">Nama Barang</th>
                                <th style="border: 1px solid black; padding-left : 5px ; padding-right : 5px" rowspan="2">Sat</th>
                                <th style="border: 1px solid black; padding-left : 5px ; padding-right : 5px" rowspan="2">Qty</th>
                                <th style="border: 1px solid black; padding-left : 5px ; padding-right : 5px" rowspan="2">Supplier</th>
                                <th style="border: 1px solid black; padding-left : 5px ; padding-right : 5px" colspan="3">Hasil Periksa</th>
                                <th style="border: 1px solid black; padding-left : 5px ; padding-right : 5px" rowspan="2">Keterangan</th>
                            </tr>
                            <tr>
                                <th style="border: 1px solid black; padding-left : 5px ; padding-right : 5px">Pass</th>
                                <th style="border: 1px solid black; padding-left : 5px ; padding-right : 5px">Konsesi</th>
                                <th style="border: 1px solid black; padding-left : 5px ; padding-right : 5px">File</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="no" t-value="0"/>
                            <t t-foreach="docs" t-as="doc">
                                <t t-set="no" t-value="no + 1"/>
                                <tr>
                                    <td style="border: 1px solid black;" class="text-center"><span t-esc="no"/></td>
                                    <!--<td style="border: 1px solid black; padding-left:10px" class="text-left"><span t-esc="doc['name']"/></td>-->
                                    <!--<td style="border: 1px solid black; padding-right:10px" class="text-right"><span t-esc="doc['sat']"/></td>-->
                                    <!--<td style="border: 1px solid black; padding-right:10px" class="text-right"><span t-esc="'{0:,.2f}'.format(float(doc['qty']))" class="text-right pr-1"/></td>-->
                                    <td style="border: 1px solid black;"/>
                                    <td style="border: 1px solid black;"/>
                                    <td style="border: 1px solid black;"/>
                                    <td style="border: 1px solid black;"/>
                                    <td style="border: 1px solid black;"/>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                <div class="footer">
                    <div class="row text-center" style="border-top: 1px solid black;">
                        <div class="col col-3 offset-9 text-right">
                            <ul class="list-inline mt-2">
                                <li class="list-inline-item">Page:</li>
                                <li class="list-inline-item">
                                    <span class="page"/>
                                </li>
                                <li class="list-inline-item">/</li>
                                <li class="list-inline-item">
                                    <span class="topage"/>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
              </t>
            </t>
        </template>
    </data>
</odoo>