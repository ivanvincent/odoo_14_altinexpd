<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="stock_picking_inherit_inherit_form">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <button name="action_back_to_draft" states="cancel" string="Back to draft" groups="base.user_admin" type="object" />
                </xpath>

                <xpath expr="//field[@name='move_line_ids_without_package']" position="attributes">
                    <attribute name="context">{'name_product_without_code': 1,'display_default_code':False,'tree_view_ref': 'stock.view_stock_move_line_detailed_operation_tree', 'default_picking_id': id, 'default_location_id': location_id, 'default_location_dest_id': location_dest_id, 'default_company_id': company_id}</attribute>
                </xpath>

                <xpath expr="//field[@name='move_line_nosuggest_ids']" position="attributes">
                    <attribute name="context">{'name_product_without_code': 1,'display_default_code':False,'tree_view_ref': 'stock.view_stock_move_line_detailed_operation_tree', 'default_picking_id': id, 'default_location_id': location_id, 'default_location_dest_id': location_dest_id, 'default_company_id': company_id}</attribute>
                </xpath>

                <xpath expr="//field[@name='scheduled_date']" position="after">
                    <field name="date" invisible="1"/>
                </xpath>


                <xpath expr="//field[@name='move_ids_without_package']/tree//field[@name='product_uom']" position="attributes">
                    <attribute name="string">Satuan</attribute>
                </xpath>

                <xpath expr="//field[@name='origin']" position="after">
                    <!-- <field name="vehicle_id" groups="request_requisition.group_request_requisition_user_vehicle"/> -->
                </xpath>


                <xpath expr="//notebook/page[@name='note']" position="inside">
                    <field name="operation_code" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="display_product"/>
                </xpath>
            </field>
        </record>



        <record model="ir.ui.view" id="inherit_stock_move_line_tree">
            <field name="name">stock.move.line.tree</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="context">{'default_type':'product','name_product_without_code':1,'display_default_code':False}</attribute>
                </xpath>


                <xpath expr="//field[@name='product_uom_id']" position="attributes">
                    <attribute name="string">Satuan</attribute>
                </xpath>

                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="default_code"/>
                    <field name="picking_code" invisible="1"/>
                    <field name="qty_onhand" attrs="{'column_invisible': [('parent.picking_type_code', '=', 'incoming')]}"/>
                </xpath>
                <xpath expr="//field[@name='lot_id']" position="after">
                    <field name="pcs"/>
                </xpath>
                <xpath expr="//field[@name='product_uom_id']" position="after">
                    <field name="keterangan_wo"/>
                    <field name="waste"/>
                </xpath>
            </field>
        </record>

        <record id="create_journal_mutation_action_server" model="ir.actions.server">
            <field name="name">Create Journal Mutation</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_stock_picking"/>
            <field name="binding_model_id" ref="model_stock_picking"/>
            <field name="state">code</field>
            <field name="code">model.action_journal_mutation(records)</field>
        </record>

        <record id="stock_move_line_operation" model="ir.ui.view">
            <field name="name">stock.move.operations.nosuggest.form </field>
                <field name="model">stock.move.line</field>
                <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree" />
                <field name="arch" type="xml">
                    <xpath expr="//field[@name='location_dest_id']" position="after">
                        <field name="heat_number"/>
                    </xpath>
                </field>
        </record>
    </data>
</odoo>