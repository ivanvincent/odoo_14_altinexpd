<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dh_fpt_machine_finger_form" model="ir.ui.view">
        <field name="name">dh.fpt.machine.finger.form</field>
        <field name="model">dh.fpt.machine.finger</field>
        <field name="arch" type="xml">
            <form string="Device Machine Master Finger">
                <sheet>
                    <div class="oe_title">
                        <label for="employee_id"/>
                        <h1>
                            <field name="employee_id"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name" invisible="True"/>
                            <field name="fpt_uid"/>
                            <field name="fpt_fid"/>
                        </group>
                        <group>
                            <field name="fpt_valid"/>
                            <field name="fpt_size"/>
                        </group>
                            <field name="fpt_template"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dh_fpt_machine_finger_tree" model="ir.ui.view">
        <field name="name">dh.fpt.machine.finger.tree</field>
        <field name="model">dh.fpt.machine.finger</field>
        <field name="arch" type="xml">
            <tree string="Device Machine Master Finger">
                <field name="employee_id"/>
                <field name="fpt_uid"/>
                <field name="fpt_fid"/>
                <field name="fpt_valid"/>
                <field name="fpt_size"/>
            </tree>
        </field>
    </record>

    <record id="dh_fpt_machine_finger_action" model="ir.actions.act_window">
        <field name="name">Device Machine Master Finger</field>
        <field name="res_model">dh.fpt.machine.finger</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="dh_fpt_machine_finger_sub_menu" parent="dh_fpt_machine_menu" name="Device Machine Master Finger"
              action="dh_fpt_machine_finger_action"
              sequence="3"/>
</odoo>