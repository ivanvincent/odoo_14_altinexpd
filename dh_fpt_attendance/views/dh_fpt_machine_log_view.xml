<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dh_fpt_machine_log_form" model="ir.ui.view">
        <field name="name">dh.fpt.machine.log.form</field>
        <field name="model">dh.fpt.machine.log</field>
        <field name="arch" type="xml">
            <form string="Device Machine Log">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Machine IP"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="address_id"/>
                        </group>
                        <group>
                            <field name="fpt_uid"/>
                            <field name="fpt_user_id"/>
                            <field name="fpt_punch"/>
                            <field name="fpt_status"/>
                            <field name="fpt_timestamp"/>
                            <field name="fpt_status_sync"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dh_fpt_machine_log_tree" model="ir.ui.view">
        <field name="name">dh.fpt.machine.log.tree</field>
        <field name="model">dh.fpt.machine.log</field>
        <field name="arch" type="xml">
            <tree string="Device Machine Log">
                <header>
                    <button name="send_log_attendance" type="object" string="Send Log to Attendance" class="btn-success"
                            icon="fa-send-o " confirm="Send to Attendance, Are you sure?"/>
                </header>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="address_id"/>
                <field name="fpt_uid"/>
                <field name="fpt_user_id"/>
                <field name="fpt_punch"/>
                <field name="fpt_status"/>
                <field name="fpt_timestamp"/>
                <field name="fpt_status_sync"/>
            </tree>
        </field>
    </record>

    <record id="dh_fpt_machine_log_action" model="ir.actions.act_window">
        <field name="name">Device Machine Log</field>
        <field name="res_model">dh.fpt.machine.log</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="dh_fpt_machine_log_sub_menu" parent="dh_fpt_machine_menu" name="Device Machine Log"
              action="dh_fpt_machine_log_action"
              sequence="2"/>
</odoo>