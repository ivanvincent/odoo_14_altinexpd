<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dh_fpt_machine_form" model="ir.ui.view">
        <field name="name">dh.fpt.machine.form</field>
        <field name="model">dh.fpt.machine</field>
        <field name="arch" type="xml">
            <form string="Device Machine">
                <header>
                    <button name="machine_clear_data_all" type="object" string="Clear Machine Data All"
                            class="btn-danger"
                            icon="fa-remove " confirm="Clear Data All, Are you sure?"/>
                    <button name="machine_clear_data_log" type="object" string="Clear Machine Data Log"
                            class="btn-danger"
                            icon="fa-trash " confirm="Clear Data Log, Are you sure?"/>
                    <button name="machine_upload_users" type="object" string="Upload Data User To Machine"
                            class="oe_highlight"
                            icon="fa-send-o " confirm="Upload Data User Ke Mesin, Are you sure?"/>
                    <button name="machine_download_users" type="object" string="Download Data User From Machine"
                            class="btn-info"
                            icon="fa-users " confirm="Download Data User, Are you sure?"/>
                    <button name="machine_download_log" type="object" string="Download Data Log From Machine"
                            class="btn-success"
                            icon="fa-download " confirm="Download Data Log, Are you sure?"/>
                    <button name="machine_sync_datetime" type="object" string="Sync Datetime Now To Machine"
                            class="btn-secondary"
                            icon="fa-clock-o " confirm="Sync Datetime Now To Machine, Are you sure?"/>
                    <button name="machine_test_connection" type="object" string="Test Connection" class="btn-secondary"
                            icon="fa-desktop "/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Machine IP"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="port_no"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="address_id"/>
                            <field name="device_checkin"/>
                            <field name="device_checkout"/>
                        </group>
                        <group>
                            <field name="device_auto_delete_log"/>
                            <field name="device_last_sync" readonly="True"/>
                            <field name="device_info" readonly="True"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dh_fpt_machine_tree" model="ir.ui.view">
        <field name="name">dh.fpt.machine.tree</field>
        <field name="model">dh.fpt.machine</field>
        <field name="arch" type="xml">
            <tree string="Device Machine">
                <field name="name"/>
                <field name="port_no"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="address_id"/>
                <field name="device_checkin"/>
                <field name="device_checkout"/>
                <field name="device_last_sync"/>
                <field name="device_auto_delete_log"/>
            </tree>
        </field>
    </record>

    <record id="dh_fpt_machine_action" model="ir.actions.act_window">
        <field name="name">Device Machine</field>
        <field name="res_model">dh.fpt.machine</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="dh_fpt_machine_hr_employee_inherit_form_view" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" position="inside">
                <group string="FingerPrint Data" name="dh_fpt_group">
                    <field name="fpt_uid" groups="hr.group_hr_manager"/>
                    <field name="fpt_user_id" groups="hr.group_hr_manager"/>
                    <field name="fpt_password" groups="hr.group_hr_manager"/>
                    <field name="fpt_card" groups="hr.group_hr_manager"/>
                    <field name="fpt_privilege" groups="hr.group_hr_manager"/>
                    <field name="fpt_machine_ids" widget="many2many_tags" options="{'no_create_edit': True}"
                           placeholder="Machines" groups="hr.group_hr_manager"/>
                    <field name="fpt_finger_line" groups="hr.group_hr_manager" readonly="True">
                        <tree string="Data Fingers Lines" editable="bottom">
                            <field name="employee_id" invisible="True"/>
                            <field name="fpt_uid" invisible="True"/>
                            <field name="fpt_fid"/>
                            <field name="fpt_size"/>
                            <field name="fpt_template" invisible="True"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

    <menuitem id="dh_fpt_machine_menu" parent="hr_attendance.menu_hr_attendance_root" sequence="50"
              name="Device FingerPrint"/>
    <menuitem id="dh_fpt_machine_sub_menu" parent="dh_fpt_machine_menu" name="Device Machine"
              action="dh_fpt_machine_action"
              sequence="1"/>
</odoo>