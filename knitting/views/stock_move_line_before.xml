<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="stock_production_lot_temp_tree">
            <field name="name">stock.production.lot.temp.tree</field>
            <field name="model">stock.production.lot.temp</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="stock_production_lot_temp_form">
            <field name="name">stock.production.lot.temp.form</field>
            <field name="model">stock.production.lot.temp</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="lot_id"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="stock_production_lot_temp_move_form">
            <field name="name">stock.move.line.before.form</field>
            <field name="model">stock.move.line.before</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="lot_id"/>
                            </group>
                            <group>
                                <field name="production_id"/>
                            </group>
                        </group>

                        <field name="lot_greige_ids">
                            <tree>
                                <field name="greige_id"/>
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="stock_production_lot_temp_action">
            <field name="name">Stock Production Lot Temp</field>
            <field name="res_model">stock.production.lot.temp</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>

        </record>


    </data>
</odoo>