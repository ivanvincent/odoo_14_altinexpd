<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="knitting_tree">
            <field name="name">produksi.knitting.tree</field>
            <field name="model">produksi.knitting</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="date" />
                    <field name="operator_id" />
                    <field name="tot_roll" />
                    <field name="total_quantity" />
                    <field name="keterangan" />
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="knitting_form">
            <field name="name">produksi.knitting.form</field>
            <field name="model">produksi.knitting</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name='action_confirm' type='object' class="oe_highlight" string='Confirm'
                            states="draft" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <field name="scale" class="oe_right" widget="scale_widget" />
                        <div class="oe_title" string="Ref">
                            <h1>
                                <field name="name" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date" />
                                <field name="operator_id" />
                            </group>
                            <group>
                                <field name="tot_roll" />
                                <field name="total_quantity" />
                                <field name="keterangan" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Produksi Knitting">
                                <field name="knitting_ids">
                                    <tree string="Produksi Knitting " editable="bottom" options="{'no_open':False}">
                                        <field name="name" invisible="1" />
                                        <field name="knitting_id" invisible="1" />
                                        <field name="barcode" />
                                        <field name="mrp_id" invisible="1" />
                                        <field name="greige_id" />
                                        <field name="shift" />
                                        <field name="operator_id" invisible="1" />
                                        <field name="machine_id" />
                                        <field name="tanggal_potong" invisible="1" />
                                        <field name="no_potong" />
                                        <field name="no_roll" />
                                        <field name="lot_id" />
                                        <field name="qty" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="knitting_action">
            <field name="name">Produksi Knitting</field>
            <field name="res_model">produksi.knitting</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- <menuitem id="submenu_knitting" name="Produksi Knitting" parent="mrp.menu_mrp_manufacturing"
            action="knitting_action" /> -->

    </data>
</odoo>