<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="inspect_tree">
            <field name="name">produksi.inspect.tree</field>
            <field name="model">produksi.inspect</field>
            <field name="arch" type="xml">
                <tree default_order="name desc">
                    <field name="name" />
                    <field name="date" />
                    <field name="production_id" />
                    <field name="product_id"/>
                    <field name="employee_id" />
                    <field name="tot_roll" sum="Total Roll"/>
                    <field name="total_quantity" sum="Total Qty"/>
                    <field name="state" widget="badge" decoration-info="state == 'confirm'" decoration-success="state == 'done'" />
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="inspect_form">
            <field name="name">produksi.inspect.form</field>
            <field name="model">produksi.inspect</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="to_return" invisible="1"/>
                        <button name='action_confirm' type='object' class="oe_highlight" string='Confirm' states="draft" />
                        <button name='action_produce' type='object' class="oe_highlight" string='Produce' attrs="{'invisible':['|',('inspecting_count', '=', 0),('state','!=','confirm')]}"/>
                        <button name='action_transfer' class="oe_highlight" type='object' string='Transfer' attrs="{'invisible':['|',('produced_count', '=', 0),('state','!=','confirm')]}"/>
                        <button name='action_cancel_production' type='object' string='Cancel Produced' states="confirm" />
                        <!-- <button name='action_return_production' type='object' string='Return' attrs="{'invisible':[('state', '=', 'open')]}" /> -->
                        <!-- <button name='action_draft' type='object' string='Set to draft' states="confirm" /> -->
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" icon="fa-list" attrs="{'invisible':[('moveline_before_ids', '=', [])]}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="tot_roll"/>
                                    </span>
                                    <span class="o_stat_text">Roll</span>
                                </div>
                            </button>
                            <button class="oe_stat_button" icon="fa-cubes" attrs="{'invisible':[('moveline_before_ids', '=', [])]}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="total_quantity" widget="statinfo" nolabel="1" class="mr4"/>
                                        <field name="product_uom_id"/>
                                    </span>
                                    <span class="o_stat_text">Inspected</span>
                                </div>
                            </button>

                            <button type="object" name="action_view_picking" class="oe_stat_button" icon="fa-truck" attrs="{'invisible':[('picking_ids', '=', [])]}">
                                <field name="picking_count" widget="statinfo" string="Transfer" help="Transfer"/>
                                <field name="picking_ids" invisible="1"/>
                            </button>
                        </div>
                        <div class="oe_title" string="Ref">
                            <h1>
                                <field name="name" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="production_has_finish" invisible="1" />
                                <field name="inspecting_count" invisible="1" />
                                <field name="transferred_count" invisible="1" />
                                <field name="produced_count" invisible="1" />
                                <field name="date" />
                                <field name="production_id" domain="[('state', '=', 'done'),('type_id.name','=','DYEING')]" options="{'no_open': True, 'no_create': True}"/>
                                <field name="product_id"/>
                                <label for="production_qty" string="Order Quantity"/>
                                <div class="o_row no-gutters d-flex">
                                    <field name="total_quantity" class="text-left"/>
                                    <div class="o_row">
                                        Of
                                    </div>
                                    <field name="production_qty" class="oe_inline text-left " decoration-success="state != False"/>
                                    <label for="product_uom_id" string="" class="oe_inline"/>
                                    <field name="product_uom_id" class="oe_inline"/>
                                </div>
                                <label for="remaining_qty" string="Remaining"/>
                                <div class="o_row no-gutters d-flex">
                                    <field name="remaining_qty" class="text-left"/>
                                    <label for="product_uom_id" string="" class="oe_inline"/>
                                    <field name="product_uom_id" class="oe_inline"/>
                                </div>
                                <field name="employee_id" options="{'no_open': True, 'no_create': True}" required="1"/>
                                <field name="location_id"/>
                                <field name="production_type_id" options="{'no_open': True, 'no_create': True}" invisible="1"/>
                                <field name="allowed_over_qty" />
                            </group>
                            <group>
                                <field name="inspect_category"/>
                                <field name="inspect_type" widget="radio" options="{'horizontal':True}" attrs="{'invisible':[('moveline_before_ids', '=', False)]}"/>
                                <label for="amount_gen_roll"/>
                                <div name="Generate Roll">
                                    <field name="amount_gen_roll" class="oe_inline" attrs="{'invisible':[('inspect_type', '!=', 'generate')]}"/>
                                    <button name="generate_roll" icon="fa-arrow-right" type="object" class="oe_inline">
                                        <span>
                                            Generate
                                        </span>
                                    </button>
                                </div>
                                <field name="quantity_gen"/>
                                <field name="keterangan" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Barcode Greige">
                                <field name="move_raw_line_ids">
                                    <tree>
                                        <field name="reference"/>
                                        <field name="lot_id"/>
                                        <field name="product_uom_qty" string="Quantity"/>
                                        <field name="product_uom_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Details">
                                <field name="moveline_before_ids">
                                    <tree string="Details" editable="bottom" options="{'no_open':False}" create="false">
                                        <field name="name" invisible="1" />
                                        <field name="inspect_id" invisible="1" />
                                        <field name="production_id" readonly="1"/>
                                        <!-- <field name="lot_id" attrs="{'column_invisible':[('parent.state', '=', 'draft')]}" readonly="1"/> -->
                                        <field name="lot_name" readonly="1"/>
                                        <!-- <field name="lot_name" attrs="{'column_invisible':[('parent.state', '!=', 'draft')]}" readonly="1"/> -->
                                        <field name="product_id" readonly="1"/>
                                        <field name="employee_id" readonly="1"/>
                                        <field name="shift" />
                                        <field name="machine_id" />
                                        <field name="quantity" sum="Total Qty"/>
                                        <field name="product_uom_id" />
                                        <field name="defect_ids" widget="many2many_tags"/>
                                        <field name="grade_id" options="{'no_open': True, 'no_create': True}"/>
                                        <field name="state" widget="badge" decoration-success="state == 'transfer'" decoration-info="state == 'produced'" />
                                        <button name="action_show_details" type="object" icon="fa-list" context="{'default_production_id': production_id}" attrs="{'invisible': [('production_id', '=', False)]}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="inspect_action">
            <field name="name">Inspect Finish Goods</field>
            <field name="res_model">produksi.inspect</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('production_type_id', '=', 2)]</field>
            <field name="context">{'default_production_type_id':2}</field>
        </record>


        <menuitem id="inspect_main_menu" name="Inspect" parent="mrp.menu_mrp_root">
            <menuitem id="inspect_fgoods_menu" name="Finish Goods" action="inspect_action" />
        </menuitem>

    </data>
</odoo>