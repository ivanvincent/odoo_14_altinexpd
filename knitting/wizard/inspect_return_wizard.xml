<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="inspect_return_wizard" model="ir.ui.view">
            <field name="name">inspect.return.wizard</field>
            <field name="model">inspect.return.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="inspect_id" readonly="1" options="{'no_open': True, 'no_create': True}"/>
                            <field name="production_id" readonly="1" options="{'no_open': True, 'no_create': True}"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Line">
                            <field name="line_ids" readonly="1" widget="one2many">
                                <tree>
                                    <field name="lot_id"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="product_uom_id"/>
                                    <field name="grade_id"/>
                                    <field name="state" widget="badge" decoration-info="state == 'produced'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button type="object" name="action_return" string="Return" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>