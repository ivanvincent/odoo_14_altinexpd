<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="inherit_product_form">
            <field name="name">product.product.inherit.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="group_product_id"/>
                    <field name="line_product_id"/>
                    <field name="merk_product_id"/>
                    <label for="lead_days" string="Lead"/>
                    <div class="o_row no-gutters d-flex">
                        <field name="lead_days" class="oe_inline" groups="base.group_system"/>
                        <span class="text-bf">Days</span>
                    </div>
                    <field name="alias"/>
                    <field name="min_stock"/>
                    <field name="diameter"/>
                    <field name="variable"/>
                    <field name="usage_daily"/>
                    <field name="order_time"/>
                    <field name="lead_time" string="Lead Purchase"/>
                    <field name="drum_liter"/>
                    <field name="pl_liter"/>
                </xpath>
            </field>
        </record>


        <record id="view_template_min_stock_form" model="ir.ui.view">
            <field name="name">product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form" />
            <field name="arch" type="xml">
                <field name="categ_id" position="after">
                    <field name="alias"/>
                    <field name="min_stock" attrs="{'invisible': [('type', '!=', 'product')]}" />
                </field>
            </field>
        </record>


        <record model="ir.ui.view" id="inherit_product_supplier_info_tree">
            <field name="name">product.supplierinfo.tree</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='price']" position="after">
                    <field name="usage_daily"/>
                    <field name="order_time"/>
                </xpath>
            </field>
        </record>



    </data>
</odoo>