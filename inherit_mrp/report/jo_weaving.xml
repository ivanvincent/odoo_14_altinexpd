<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="paperformat_jo_weaving" model="report.paperformat">
            <field name="name">JO weaving</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">23</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <report id="action_report_mo_weaving" model="mrp.production" string="Print MO Weaving" report_type="qweb-pdf" name="inherit_mrp.jo_weaving" file="inherit_mrp.jo_weaving" />

        <record id="action_report_mo_weaving" model="ir.actions.report">
            <field name="paperformat_id" eval="paperformat_jo_weaving" />
        </record>

        <template id="jo_weaving">
            <t t-call="web.basic_layout">
                <style>
                    @font-face {
                        font-family: 'Courier New';
                        font-style: normal;
                        font-weight: 400;
                        src: local('Courier New'), local('CourierNewPSMT'), url(http://themes.googleusercontent.com/licensed/font?kit=p0pJArTTK5Heq6xbYtNwnp0EAVxt0G0biEntp43Qt6E) format('truetype');
                    }

                    .Courier {
                        font-family: Courier New;
                    }

                    .table-head td {
                        padding-left: 5px;
                    }

                    .table-data th,
                    .table-data td {
                        border: 1px solid black;
                        text-align: center;
                    }
                </style>
                <t t-foreach="docs" t-as="o">

                    <div class="page Courier">
                        <div class="text-right">PPC-11.1 REV-00</div>
                        <h4 class="text-center" style="font-weight bold">JOB ORDER WEAVING</h4>
                        <h4 class="text-center" style="font-weight bold">No :</h4>
                        <br />
                        <table class="table-condensed" style="border-top : 3px solid black ; border-bottom : 3px solid black ;" width="100%">
                            <tr>
                                <td width="50%">
                                    <table class="table-condensed" width="100%">
                                        <tr>
                                            <td width="20%">
                                                <span>Tanggal</span>
                                                <br />
                                                <span>Kepada</span>
                                                <br />
                                                <span>Unit</span>
                                                <br />
                                                <span>Perihal</span>
                                                <br />
                                            </td>
                                            <td width="80%">
                                                <span>:</span>
                                                <br />
                                                <span>:</span>
                                                <br />
                                                <span>:</span>
                                                <br />
                                                <span>:</span>
                                                <br />
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td width="50%">
                                    <table class="table-condensed" width="100%">
                                        <tr>
                                            <td width="20%">No. OM</td>
                                            <td width="80%">:</td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                        <div>Dengan ini kami informasikan bahwa telah turun Repeat Order dengan konstruksi sebagai
                            berikut :</div>
                    </div>

                </t>
            </t>
        </template>

    </data>
</odoo>