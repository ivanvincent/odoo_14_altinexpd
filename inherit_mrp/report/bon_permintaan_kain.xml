<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="paperformat_a4_bon_permintaan_kain" model="report.paperformat">
            <field name="name">Permintaan Kain A4</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <report
            id="action_report_bom_permintaan_kain"
            model="bon.permintaan.kain"
            string="Print Bon Permintaan Kain"
            report_type="qweb-pdf"
            name="inherit_mrp.report_bon_permintaan_kain"
            file="inherit_mrp.report_bon_permintaan_kain"
        />

        <record id="action_report_bom_permintaan_kain" model="ir.actions.report">
            <field name="paperformat_id" eval="paperformat_a4_bon_permintaan_kain" />
        </record>
    
        <template id="report_bon_permintaan_kain">
            <t t-call="web.basic_layout">
                <style>
                    .title {
                    padding: 0
                }

                .table-data {
                    border: 1px solid black;
                    text-align: center;
                    margin-bottom: 1rem;
                }

                .table-data th, .table-data td {
                    border: 1px solid black;
                    padding: 0;
                }

                .column-ttd {
                    padding: 2rem
                }
                </style>
                <div class="page">
                    <div class="title text-center">
                        <h5 class="font-weight-bold">BON PERMINTAAN KAIN</h5>
                        <h6 class="font-weight-bold">Tanggal <span t-esc="date_start"/> sampai <span t-esc="date_end"/></h6>
                    </div>

                    <div class="data">
                        <table class="table-data" width="100%">
                            <thead>
                                <th>No</th>
                                <th>Kode Kain</th>
                                <th>Jenis Corak</th>
                                <th>No. OM</th>
                                <th>Yard</th>
                                <th>Partai</th>
                                <th>Jumlah</th>
                                <th>Ket</th>
                            </thead>
                            <tbody>
                                <t t-set="tot_partai" t-value="0"/>
                                <t t-set="tot_jumlah" t-value="0"/>

                                <tr t-foreach="docs" t-as="doc">
                                    <t t-set="tot_partai" t-value="tot_partai +  doc.get('partai', '')"/>
                                    <t t-set="tot_jumlah" t-value="tot_jumlah + doc.get('jumlah', '')"/>

                                    <td><span t-esc="doc.get('no', '')" /></td>
                                    <td class="text-left pl-1"><span t-esc="doc.get('default_code', '')" /></td>
                                    <td class="text-left pl-1"><span t-esc="doc.get('greige_id', '')" /></td>
                                    <td><span t-esc="doc.get('sale_id', '')" /></td>
                                    <td class="text-right pr-1"><span t-esc="doc.get('qty_yard_kp', '')" /></td>
                                    <td><span t-esc="doc.get('partai', '')" /></td>
                                    <td class="text-right pr-1"><span t-esc="doc.get('jumlah', '')" /></td>
                                    <td class="text-left pl-1"><span t-esc="doc.get('ket', '')" /></td>
                                </tr>
                                <tr>
                                    <td colspan="5"></td>
                                    <td><span t-esc="tot_partai"/></td>
                                    <td class="text-right pr-1"><span t-esc="tot_jumlah"/></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="ttd text-center float-right">
                        <div class="column-ttd">
                            <span>Pembuat Data, </span><br/>
                            <span t-esc="today"/><br/><br/><br/><br/>
                            <span class="pr-5">(       </span><span class="pl-5">       )</span>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    
    </data>
    


</odoo>
