<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report id="mrp_workcenter_print" model="mrp.workcenter" string="Print WorkCenter Barcode" name="inherit_mrp.report_workcenter_barcode" report_type="qweb-pdf" print_report_name="'Print WorkCenter - %s' % (object.name)"/>
        />

        <template id="report_simple_barcode">
            <div style="width: 32%; display: inline-table; height: 10rem;">
                <table class="table table-bordered mb-0" style="border: 2px solid black;">
                    <tr>
                        <th class="table-active text-left" style="height: 4rem;">
                            <strong t-field="workcenter.name"/>
                        </th>
                    </tr>
                    <tr>
                        <td class="text-center align-middle" style="height: 6rem;">
                            <t t-if="workcenter.name">
                                <img alt="Barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(workcenter.name or ''), 600, 150)" style="width:100%;height:4rem;"/>
                                <span t-field="workcenter.name"/>
                            </t>
                            <t t-else="">
                                <span class="text-muted">No barcode available</span>
                            </t>
                        </td>
                    </tr>
                </table>
            </div>
        </template>

        <template id="report_workcenter_barcode">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="workcenter">
                        <t t-call="inherit_mrp.report_simple_barcode">
                            <t t-set="workcenter" t-value="workcenter"/>
                        </t>
                    </t>
                </div>
            </t>
        </template>
    </data>
</odoo>