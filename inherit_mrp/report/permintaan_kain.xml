<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="paperformat_a4_permintaan_kain" model="report.paperformat">
            <field name="name">Permintaan Kain A4</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <report
            id="action_report_permintaan_kain"
            model="permintaan.kain"
            string="Print Permintaan Kain"
            report_type="qweb-pdf"
            name="inherit_mrp.report_permintaan_kain"
            file="inherit_mrp.report_permintaan_kain"
        />

        <record id="action_report_permintaan_kain" model="ir.actions.report">
            <field name="paperformat_id" eval="paperformat_a4_permintaan_kain" />
        </record>
    
        <template id="report_permintaan_kain">
            <t t-call="web.basic_layout">
                <style>
                    .title {
                    padding: 0
                }

                .table-data {
                    border: 1px solid black;
                    text-align: center;
                    margin-bottom: 1rem;
                }

                .table-data th, .table-data td {
                    border: 1px solid black;
                    padding: 0;
                }

                .column-ttd {
                    padding: 2rem
                }
                </style>
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <div class="title text-center">
                            <h5 class="font-weight-bold">BON PERMINTAAN KAIN</h5>
                            <h6 class="font-weight-bold">Tanggal <span t-field="doc.date_start"/> sampai <span t-field="doc.date_end"/></h6>
                        </div>

                        <div class="data">
                            <table class="table-data" width="100%">
                                <thead>
                                    <th>No</th>
                                    <th>Kode Kain</th>
                                    <th>Jenis Corak</th>
                                    <th>No. OM</th>
                                    <th>Yard</th>
                                    <th>Partai</th>
                                    <th>Jumlah</th>
                                    <th>Ket</th>
                                </thead>
                                <tbody>
                                    <t t-set="no" t-value="0"/>
                                    <t t-set="tot_partai" t-value="0"/>
                                    <t t-set="tot_jumlah" t-value="0"/>

                                    <tr t-foreach="doc.line_ids" t-as="line">
                                        <t t-set="no" t-value="no + 1"/>
                                        <t t-set="tot_partai" t-value="tot_partai +  line.partai"/>
                                        <t t-set="tot_jumlah" t-value="tot_jumlah + line.jumlah"/>

                                        <td><span t-esc="no" /></td>
                                        <td class="text-left pl-1"><span t-field="line.default_code" /></td>
                                        <td class="text-left pl-1"><span t-field="line.greige_id" /></td>
                                        <td><span t-field="line.sale_id" /></td>
                                        <td class="text-right pr-1"><span t-field="line.qty_yard_kp" /></td>
                                        <td><span t-field="line.partai" /></td>
                                        <td class="text-right pr-1"><span t-field="line.jumlah" /></td>
                                        <td class="text-left pl-1"><span t-field="line.ket" /></td>
                                    </tr>
                                    <tr>
                                        <td colspan="5"></td>
                                        <td><span t-esc="tot_partai"/></td>
                                        <td class="text-right pr-1"><span t-esc="tot_jumlah"/></td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="ttd text-center float-right">
                            <div class="column-ttd">
                                <span>Pembuat Data, </span><br/>
                                <span t-esc="today"/><br/><br/><br/><br/>
                                <span class="pr-5">(       </span><span class="pl-5">       )</span>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    
    </data>
    


</odoo>
