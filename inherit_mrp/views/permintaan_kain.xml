<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="permintaan_kain_form" model="ir.ui.view">
            <field name="name">permintaan.kain.form</field>
            <field name="model">permintaan.kain</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="action_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
                        <button name="action_print_kartu_proses" type="object" string="Print Kartu Proses" states="confirm" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" attrs="{'readonly': [('state', '=', 'confirm')]}"/></h1>
                        </div>
                        <group>
                            <field name="date_start" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                            <field name="date_end" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                        </group>
                        <notebook>
                            <page string="Line">
                                <field name="line_ids" readonly="1">
                                    <tree>
                                        <field name="default_code"/>
                                        <field name="greige_id"/>
                                        <field name="sale_id"/>
                                        <field name="qty_yard_kp"/>
                                        <field name="partai"/>
                                        <field name="jumlah"/>
                                        <field name="ket"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="permintaan_kain_tree" model="ir.ui.view">
            <field name="name">permintaan.kain.tree</field>
            <field name="model">permintaan.kain</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </tree>
            </field>
        </record>


        <record id="permintaan_kain_action" model="ir.actions.act_window">
            <field name="name">Permintaan Kain</field>
            <field name="res_model">permintaan.kain</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="permintaan_kain_menu"
            name="Permintaan Kain"
            action="permintaan_kain_action"
            parent="mrp.menu_mrp_reporting"
            sequence="13"/>
    
    </data>
    

</odoo>
