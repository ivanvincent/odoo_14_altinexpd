<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="mrp_workcenter_inherit_form">
            <field name="name">mrp.workcenter.form</field>
            <field name="model">mrp.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="production_type_id"/>
                </xpath>
                <xpath expr="//field[@name='alternative_workcenter_ids']" position="after">
                    <field name="is_planning"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="mrp_workcenter_inherit_tree">
            <field name="name">mrp.workcenter.inherit.tree</field>
            <field name="model">mrp.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_workcenter_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="is_planning"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>