<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="mrp_production_beam_tree">
            <field name="name">mrp.production.beam.tree</field>
            <field name="model">mrp.production.beam</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="default_code"/>
                    <field name="type_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="mrp_production_beam_type_tree">
            <field name="name">mrp.production.beam.type.tree</field>
            <field name="model">mrp.production.beam.type</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="mrp_production_beam_form">
            <field name="name">mrp.production.beam.form</field>
            <field name="model">mrp.production.beam</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="default_code"/>
                            </group>
                            <group>
                                <field name="type_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="mrp_production_beam_type_form">
            <field name="name">mrp.production.beam.type.form</field>
            <field name="model">mrp.production.beam.type</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="mrp_production_beam_action">
            <field name="name">Beam Code</field>
            <field name="res_model">mrp.production.beam</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
        </record>

        <record model="ir.actions.act_window" id="mrp_production_beam_type_action">
            <field name="name">Beam Type</field>
            <field name="res_model">mrp.production.beam.type</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="main_mrp_production_beam" action="mrp_production_beam_action" parent="mrp.menu_mrp_configuration" />

        <menuitem id="main_mrp_production_beam_type" action="mrp_production_beam_type_action" parent="mrp.menu_mrp_configuration" />

    </data>
</odoo>