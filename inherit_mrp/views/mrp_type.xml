<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="mrp_type_tree">
            <field name="name">mrp.type.tree</field>
            <field name="model">mrp.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="picking_type_id"/>
                    <field name="component_location"/>
                    <field name="component_greige_location"/>
                    <field name="component_chemical_location"/>
                    <field name="component_product_category_ids" widget="many2many_tags"/>
                    <field name="finished_location"/>
                    <field name="finished_product_category_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="mrp_type_form">
            <field name="name">mrp.type.form</field>
            <field name="model">mrp.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <style>
                            .o_form_view .o_form_sheet_bg>.o_form_sheet {
                                width: 100%;
                            }
                        </style>
                        <group name="info" string="Info" col="3">
                            <group>
                                <field name="name"/>
                                <field name="request_sequence_id"/>
                                <field name="production_sequence_id"/>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="component_location"/>
                                <field name="component_product_category_ids" widget="many2many_tags"/>
                                <field name="component_chemical_category_ids" widget="many2many_tags"/>
                                <field name="shrinkage_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="picking_type_id"/>
                                <field name="finished_location"/>
                                <field name="finished_product_category_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <group col="3">
                            <group name="twisting_location" string="Twisting Location">
                                <field name="component_location_pw_id"/>
                                <field name="location_pw_id"/>
                                <field name="finished_location_pw_id"/>
                                <field name="location_tfo_id"/>
                                <field name="finished_location_tfo_id"/>
                                <field name="location_vhs_id"/>
                                <field name="finished_location_vhs_id"/>
                                <field name="location_jumbo_id"/>
                                <field name="finished_location_jumbo_id"/>
                                <field name="location_interlace_id"/>
                            </group>
                            <group name="location" string="Location">
                                <field name="component_greige_picking_type_id"/>
                                <field name="component_chemical_picking_type_id"/>
                                <field name="component_greige_location"/>
                                <field name="component_chemical_location"/>
                            </group>
                            <group name="finished" string="Finished">
                                <field name="picking_type_finished_id" string="Operation Type"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="mrp_type_action">
            <field name="name">Production Type</field>
            <field name="res_model">mrp.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Let's create one Production Type!
                </p>
                <p>
                Operation define that need to be done to realize a Work Order.
                Each operation is done at a specific Work Center and has a specific duration.
                </p>
            </field>
        </record>

        <!-- groups="group_mrp_routings" -->


        <menuitem id="menu_view_mrp_type" action="mrp_type_action" parent="mrp.menu_mrp_configuration" />
    </data>
</odoo>