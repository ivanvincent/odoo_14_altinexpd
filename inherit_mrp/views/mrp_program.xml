<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="mrp_program_tree">
            <field name="name">mrp.program.tree</field>
            <field name="model">mrp.program</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date"/>
                    <field name="name"/>
                    <field name="duration"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View -->
        <record model="ir.ui.view" id="mrp_program_form">
            <field name="name">mrp.program.form</field>
            <field name="model">mrp.program</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="duration"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Info">
                                <field name="line_ids">
                                    <tree>
                                        <field name="no_urut"/>
                                        <field name="name"/>
                                        <field name="time" sum="time"/>
                                        <field name="suhu"/>
                                        <field name="deviasi"/>
                                        <field name="tso_1"/>
                                        <field name="tso_2"/>
                                        <field name="tso_3"/>
                                        <field name="tso_4"/>
                                        <field name="tso_5"/>
                                        <field name="tso_6"/>
                                        <field name="tso_7"/>
                                        <field name="tso_8"/>
                                    </tree>
                                
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="mrp_program_action">
            <field name="name">Mrp Program</field>
            <field name="res_model">mrp.program</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_view_mrp_program" action="mrp_program_action" parent="mrp.menu_mrp_configuration" />

    </data>
</odoo>