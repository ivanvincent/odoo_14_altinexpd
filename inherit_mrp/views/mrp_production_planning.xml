<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="mrp_production_planning_tree">
            <field name="name">mrp.production.planning.tree</field>
            <field name="model">mrp.production.planning</field>
            <field name="arch" type="xml">
                <tree edit="false">
                    <field name="date_planned"/>
                    <field name="product_id"/>
                    <field name="variant_id"/>
                    <field name="greige_id"/>
                    <field name="machine_id"/>
                    <field name="code"/>
                    <field name="quantity"/>
                    <field name="uom_id"/>
                    <field name="batch_count"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="mrp_production_planning_form">
            <field name="name">mrp.production.planning.form</field>
            <field name="model">mrp.production.planning</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="variant_id"/>
                                <field name="machine_id"/>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="quantity"/>
                                <field name="uom_id"/>
                                <field name="batch_count"/>
                                <field name="state"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="mrp_production_planning_action">
            <field name="name">Machine Planning</field>
            <field name="res_model">mrp.production.planning</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
        </record>



    <record id="action_print_components_request" model="ir.actions.server">
        <field name="name">Print Components Request</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_mrp_production_planning"/>
        <field name="binding_model_id" ref="model_mrp_production_planning"/>
        <field name="groups_id" eval="[(4, ref('mrp.group_mrp_manager'))]"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_print_components_request()
        </field>
    </record>

        <!-- <menuitem 
                id="mrp_machine_planning_menu"
                action="mrp_production_planning_action"
                name="Machine Planning"
                parent="mrp.mrp_planning_menu_root"/> -->

    </data>
</odoo>