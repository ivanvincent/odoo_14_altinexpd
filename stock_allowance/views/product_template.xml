<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="inherit_product_template_form">
            <field name="name">product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock_no_negative.view_template_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='allow_negative_stock']" position="after">
                    <label for="allowance" string="Allowance"/>
                    <div class="o_row no-gutters d-flex">
                        <field name="allowance" class="oe_inline text-left"/>
                        <span class='text-bf'>%</span>
                    </div>
                    <field name="price_allowance"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>