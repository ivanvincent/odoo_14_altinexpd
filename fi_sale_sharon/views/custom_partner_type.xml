<odoo>
	<data>
		<record id="view_partner_type_form" model="ir.ui.view">
			<field name="name">res.partner.type.form</field>
			<field name="model">res.partner.type</field>
			<field name="arch" type="xml">
				<form string="Partner Type">
					<sheet>
						<group>
							<group>
								<field name="code"/>
								<field name="name"/>
								<field name="description"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_partner_type_tree" model="ir.ui.view">
			<field name="name">res.partner.type.tree</field>
			<field name="model">res.partner.type</field>
			<field name="arch" type="xml">
				<tree string="Partner Type">
					<field name="code"/>
					<field name="name"/>
					<field name="description"/>
				</tree>
			</field>
		</record>
		<record id="view_partner_type_search" model="ir.ui.view">
			<field name="name">res.partner.type.search</field>
			<field name="model">res.partner.type</field>
			<field name="arch" type="xml">
				<search string="Partner Type">
					<field name="name" filter_domain="[('name','ilike',self)]" string="Area Name"/>
					<field name="code"/>
					<field name="description"/>
				</search>
			</field>
		</record>
		<record id="action_partner_type" model="ir.actions.act_window">
            <field name="name">Partner Type</field>
            <field name="res_model">res.partner.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_partner_type_search"/>
            <field name="view_id" ref="view_partner_type_tree"/>
        </record>
        <menuitem action="action_partner_type" id="menu_action_partner_type" parent="menu_sale_config_partner_sti" sequence="19"/>
	</data>
</odoo>