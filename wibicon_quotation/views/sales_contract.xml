<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record model="report.paperformat" id="sales_contract" >
            <field name="name">Sales Quotation</field>
            <field name="default" eval="False" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">45</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
        </record>
        
        <record id="action_report_sales_contract" model="ir.actions.report">
            <field name="name">Sales Quotation</field>
            <field name="model">quotation</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">wibicon_quotation.report_sales_contract</field>
            <field name="report_file">wibicon_quotation.report_sales_contract</field>
            <field name="print_report_name">'%s' % object.name</field>
            <field name="binding_model_id" ref="wibicon_quotation.model_quotation"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="sales_contract"/>
        </record>

        <template id="report_sales_contract">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                    <t t-if="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id"/>
                    </t>
                    <t t-if="not o or not 'company_id' in o">
                        <t t-set="company" t-value="res_company"/>
                    </t>
                    
                    
                    <div class="header">
                        <div class="row mt32">
                            <div class="col-8">
                                <div class="col-xs-1" style="margin-left: -10px">
                                    <img src="/web/binary/company_logo" style="width : 250px; height:65px; padding-top:-4px;" align="left"/>
                                </div>
                            </div>
                            <div class="col-4" style="margin-top: 20px">
                                <span style="text-align: right; font-size: 25px">PENAWARAN HARGA</span>
                            </div>
                        </div>
                        <br/>
                        <div class="row mt32">
                            <div class="col-6">
                                <div style="border: 1px solid black; border-radius: 10px;">
                                    <span style="padding-left:10px; padding-bottom:5px; font-size:16px; height:1px; margin:0; padding-top:0; padding-bottom:0;"><strong>PT. ALTINEX</strong></span><br/>
                                    <!--<div class="line" style="border-bottom: thin solid #222;"/>-->
                                    <span style="padding-left:10px; font-size:14px; height:1px; margin:0; padding-top:0; padding-bottom:0;">Jalan Panghegar No.7, Mekarmulya, Gedebage, Bandung 40614</span><br/>
                                    <span style="padding-left:10px; font-size:14px; height:1px; margin:0; padding-top:0; padding-bottom:0;">Telepon : (022)87880241 / (022)87880243 </span><br/>
                                    <span style="padding-left:10px; font-size:14px; height:1px; margin:0; padding-top:0; padding-bottom:0;">Fax : (022)7803989 </span>
                                </div>
                            </div>
                            <div class="col-1"/>
                            <div class="col-5">
                                <div style="border: 1px solid black; border-radius: 10px;">
                                    <table class="table-condensed" width="100%">
                                        <tr>
                                            <td width="30%" style="font-size:20px; padding-left:10px;">Tanggal</td>
                                            <td>
                                                <span>:</span>
                                                <span t-field="doc.date" t-options='{"widget": "date","format": "dd/MM/yyyy"}' style="font-size:20px;"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td width="30%" style="font-size:20px; padding-left:10px;">Nomor</td>
                                            <td>
                                                <span>:</span>
                                                <span t-field="doc.no_quotation_accurate" style="font-size:20px"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td width="50%" style="font-size:20px; padding-left:10px;">Berlaku Sampai</td>
                                            <td>
                                                <span>:</span>
                                                <span t-field="doc.tanggal_berlaku" t-options='{"widget": "date","format": "dd/MM/yyyy"}' style="font-size:20px"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row mt32">
                            <div class="col-7">
                            <div style="border: 1px solid black; border-radius: 10px;">
                                <table class="table-condensed" width="100%">
                                    <tr>
                                        <td width="30%" style="font-size:16px; padding-left:10px;">Kepada</td>
                                        <td>
                                            <span>:</span>
                                            <span t-field="doc.partner_id" style="font-size:16px"/> <br/>
                                            <span t-field="doc.partner_id.street" style="font-size:16px"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="30%" style="font-size:16px; padding-left:10px;">Attn</td>
                                        <td>
                                            <span>:</span>
                                            <span style="font-size:16px" t-esc="doc.up_kpd.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="30%" style="font-size:16px; padding-left:10px;">Email</td>
                                        <td>
                                            <span>:</span>
                                            <span style="font-size:16px" t-esc="doc.partner_id.email"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="30%" style="font-size:16px; padding-left:10px;">Perihal</td>
                                        <td>
                                            <span>:</span>
                                            <span style="font-size:16px" t-esc="doc.perihal"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        </div>
                    </div>
                        
                    <style>
                        .table-data {
                            border: 1px solid black;
                            text-align: center;
                            margin-bottom: 1rem;
                            border-collapse: collapse;
                        }
                
                        .table-data th, .table-data td {
                            border: 1px solid black;
                            padding: 0;
                            border-collapse: collapse;
                        }
                    </style>
                    
                    <br/><br/><br/><br/>\<br/><br/><br/><br/>

                    <div class="row">
                        <table class="table-condensed" width="100%">
                            <tr>
                                <td style="font-size:16px; padding-left:30px;">Dear</td>
                                <td>
                                    <span style="font-size:16px"/> <br/>
                                </td>
                            </tr>
                            <tr/>
                            <tr>
                                <td style="font-size:16px; padding-left:30px;">
                                    <span>Berdasarkan hasil diskusi terakhir, dengan senang hati kami kirimkan 
                                            penawaran harga untuk produk di bawah ini sebagai referensi dan bahan pertimbangan
                                    </span>
                                </td>
                            </tr>
                        </table>
                    </div>
                    
                    <br/>
                    <table width="100%" class="table-data">
                        <thead>
                            <tr class="text-center">
                                <th style="vertical-align : middle" width="60%">Nama Barang</th>
                                <th style="vertical-align : middle" width="5%">Qty</th>
                                <th style="vertical-align : middle" width="10%">Harga Satuan/Pcs</th>
                                <th style="vertical-align : middle" width="10%">Total <br/> (Rp) </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.line_ids" t-as="line">
                                <tr>
                                    <td style="vertical-align : middle; text-align : left; padding-left:10px; padding-right:10px;">
                                        <span t-field="line.product_id"/> <span t-field="line.quotation_id.product_order_id.name"/> <span t-esc="line.embos"/> <span t-esc="line.lapisan"/>
                                    </td>
                                    <td style="vertical-align : middle">
                                        <span t-field="line.quantity"/>
                                    </td>
                                    <td style="vertical-align : middle; text-align : right; padding-right:10px;">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td style="vertical-align : middle; text-align : right; padding-right:10px;">
                                        <span t-field="line.sub_total"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2" rowspan="4" style="padding-left:10px; text-align : left">
                                  <span>Note : </span> <span t-esc="doc.note_so"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-right:10px; text-align : right">
                                <span>Subtotal : </span>
                                </td>
                                <td style="padding-right:10px; text-align : right">
                                <span t-field="doc.amount_untaxed"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-right:10px; text-align : right">
                                <span>PPN 11% : </span>
                                </td>
                                <td style="padding-right:10px; text-align : right">
                                <span t-field="doc.amount_tax"/> 
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-right:10px; text-align : right">
                                    <span>TOTAL : </span>
                                </td>
                                <td style="padding-right:10px; text-align : right">
                                    <span t-field="doc.amount_total"/>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    <br/>
                    
                    <div class="row">
                        <table class="table-condensed" width="100%">
                            <tr>
                                <td style="font-size:16px; padding-left:30px;" width="100%">
                                    <span>Kami harap penawaran harga ini dapat diterima dengan baik. Jika masih ada yang
                                            kurang jelas atau membutuhkan informasi lain, silahkan hubungi kami
                                    </span>
                                </td>
                            </tr>
                        </table>
                    </div>
                    
                    <div class="row">
                        <table class="table-condensed" width="100%">
                            <tr>
                                <td style="font-size:16px; padding-left:30px;" width="15%">Pengiriman</td>
                                <td>
                                    <span width="1%">:</span>
                                    <span style="font-size:16px"> 60 hari kerja setelah PO diterima dan drawing disetujui</span>
                                </td>
                            </tr>
                            <tr>
                                <td style="font-size:16px; padding-left:30px;" width="15%">Pembayaran</td>
                                <td>
                                    <span width="1%">:</span>
                                    <span style="font-size:16px"> 1 (Satu) bulan setelah penerimaan barang</span>
                                </td>
                            </tr>
                        </table>
                    </div>
                    
                    <br/><br/>
                    
                    <div class="row">
                        <span style="text-align: left; font-size: 16px; padding-left:30px;">Hormat Kami,</span>
                        <br/><br/><br/><br/><br/>
                        <span style="text-align: left; font-size: 16px; padding-left:30px; height:0.5px; margin:0; padding-top:0; padding-bottom:0; background-color:none;">Novi Lidya</span><br/>
                        <span style="text-align: left; font-size: 16px; padding-left:30px; height:0.5px; margin:0; padding-top:0; padding-bottom:0; background-color:none;">Sales Admin</span><br/>  
                        <span style="text-align: left; font-size: 16px; padding-left:30px; height:0.5px; margin:0; padding-top:0; padding-bottom:0; background-color:none;">+6289661966550</span><br/>
                        <span style="text-align: left; font-size: 16px; padding-left:30px; height:0.5px; margin:0; padding-top:0; padding-bottom:0; background-color:none;">PT.ALTINEX</span><br/>
                        <span style="text-align: left; font-size: 16px; padding-left:30px; height:0.5px; margin:0; padding-top:0; padding-bottom:0; background-color:none;">sales@altinex.co</span><br/> 
                    </div>
                

                </t>
            </t>
        </template>
        
    </data>
</odoo>