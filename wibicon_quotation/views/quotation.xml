<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="quotation_form" model="ir.ui.view">
            <field name="name">quotation.form</field>
            <field name="model">quotation</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="action_generate" type="object" string="Generate" class="oe_highlight"/>
                        <button name="action_confirm" type="object" string="Confirm" states="draft"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="date"/>
                                <field name="design_code_id"/>
                                <field name="image_binary" widget='image' class='oe_avatar'/>
                            </group>
                            <group>
                                <field name="size" required="1"/>
                                <field name="shape" required="1"/>
                                <field name="machine_id" required="1"/>
                                <field name="payment_term_id"/>
                                <field name="product_tmpl_ids" widget="many2many_tags"/>
                                <field name="request_engineering_id" readonly="1" attrs="{'invisible':[('request_engineering_id', '=', False)]}"/>
                                <field name="kd_bahan"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="Details" string="Details">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="embos"/>
                                        <!-- <field name="tip"/>
                                        <field name="size"/>
                                        <field name="shape"/> -->
                                        <field name="treatment_id"/>
                                        <field name="product_ingredient_id"/>
                                        <field name="qty_available"/>
                                        <field name="quantity"/>
                                        <field name="price_unit"/>
                                        <field name="tax_ids" widget="many2many_tags"/>
                                        <field name="sub_total"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="drawing" string="Drawing">
                                <group col="2">
                                    <group string="Design Approved">
                                        <field name="drawing_internal" widget="pdf_viewer"/>
                                    </group>
                                    <group string="Design Approved">
                                        <field name="drawing_external" widget="pdf_viewer"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                        <!-- <div class="oe_subtotal_footer oe_right">
                            <field name="amount_untaxed"/>
                            <field name="amount_tax"/>
                            <field name="amount_total"/>
                        </div> -->
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            <field name="currency_id" invisible="1"/>
                            <field name="amount_untaxed" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="amount_tax" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                <label for="amount_total"/>
                            </div>
                            <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <div class="oe_clear"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="quotation_tree" model="ir.ui.view">
            <field name="name">quotation.tree</field>
            <field name="model">quotation</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="design_code_id"/>
                </tree>
            </field>
        </record>

        <record id="quotation_action" model="ir.actions.act_window">
            <field name="name">Quotation</field>
            <field name="res_model">quotation</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem
            id="Quotation_menu"
            name="Quotation"
            sequence="30"
        />
        <menuitem
            id="quotation_1_menu"
            name="Quotation"
            action="quotation_action"
            parent="Quotation_menu"
            sequence="1"/>
    
    </data>
    

</odoo>


