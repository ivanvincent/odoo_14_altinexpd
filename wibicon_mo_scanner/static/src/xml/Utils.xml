<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- <input class="o_AutocompleteInput" t-on-blur="_onBlur" t-on-keydown="_onKeydown" t-att-placeholder="props.placeholder"/> -->
    <t t-name="Autocomplete" owl="1">
        <div class="relative w-full">
            <input t-att-value="props.value ? props.value : ''" t-on-input="handleShowOptions" t-on-click="handleShowOptions" t-att-placeholder="props.placeHolder" ref="input" tabindex="0" t-att-class="props.inputClass ? props.inputClass : 'w-full border border-gray-300 py-2 px-3 rounded-md focus:outline-none focus:shadow-outline'" />
            <span t-if="props.value" t-on-click.prevent="reset()" class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer">
      x
            </span>
            <div t-if="state.showOptions" tabindex="0" t-att-class="props.dropdownClass ? props.dropdownClass : 'w-full absolute z-50 max-h-40 bg-white border border-gray-300 mt-1 mh-48 overflow-auto overflow-y-scroll rounded-md shadow-md'">
                <ul class="py-1 overflow-auto z-50">
                    <li t-foreach="searchResults()" t-as="searchResult" t-on-click.prevent="handleClick(searchResult)" class="px-3 py-2 cursor-pointer hover:bg-gray-200">
                        <t t-if="props.field == 'shift'">

                            <t t-esc="searchResult"/>

                        </t>
                        <t t-else="">
                            <t t-esc="searchResult.text"/>

                        </t>
                    </li>
                    <li t-if="!searchResults().length" class="px-3 py-2 text-center">
          No Matching Results
                    </li>
                </ul>
            </div>
        </div>

    </t>

</templates>