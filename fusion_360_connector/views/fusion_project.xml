<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="fusion_project_form" model="ir.ui.view">
            <field name="name">fusion.project.form</field>
            <field name="model">fusion.project</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="fusion_project_tree" model="ir.ui.view">
            <field name="name">fusion.project.tree</field>
            <field name="model">fusion.project</field>
            <field name="arch" type="xml">
                <tree string="" default_order="name asc">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="fusion_project_action" model="ir.actions.act_window">
            <field name="name">Fusion Project</field>
            <field name="res_model">fusion.project</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="fusion_root_menu"
            name="Fusion"
            sequence="40"/>

        <menuitem
            id="fusion_poject_menu"
            name="Fusio Project"
            action="fusion_project_action"
            parent="fusion_root_menu"
            sequence="10"/>
    
    </data>
    

</odoo>
