<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="product_defect_tree">
            <field name="name">product.defect.tree</field>
            <field name="model">product.defect</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="product_defect_form">
            <field name="name">product.defect.form</field>
            <field name="model">product.defect</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="description"/>
                                <field name="is_active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="product_defect_action">
            <field name="name">Product Defect</field>
            <field name="res_model">product.defect</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_view_product_defect" action="product_defect_action" parent="mrp.menu_mrp_configuration" />


    </data>
</odoo>