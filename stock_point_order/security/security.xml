<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record model="ir.module.category" id="module_stock_point_order">
            <field name="name">Stock Point Order</field>
            <field name="sequence">88</field>
        </record>

        <record model="res.groups" id="group_stock_point_order_user">
            <field name="name">User: Own Documents Only</field>
            <field name="category_id" ref="module_stock_point_order"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">the user will have access to his own data in the stock point application.</field>
        </record>

        <record model="res.groups" id="group_stock_point_order_manager">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_stock_point_order"/>
            <field name="implied_ids" eval="[(4, ref('stock_point_order.group_stock_point_order_user')),(4, ref('base.group_system'))]"/>
            <field name="comment">the user will have access to all records of everyone in the stock point application.</field>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record model="res.groups" id="group_stock_point_order_approver">
            <field name="name">Approver</field>
            <field name="category_id" ref="module_stock_point_order"/>
            <field name="implied_ids" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <record id="stock_point_order_personal_rule" model="ir.rule">
            <field name="name">Personal Orders</field>
            <field ref="model_stock_point_order" name="model_id"/>
            <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('stock_point_order.group_stock_point_order_user'))]"/>
        </record>


        <record id="stock_point_order_personal_rule" model="ir.rule">
            <field name="name">All Document</field>
            <field name="domain_force">[(1,'=',1)]</field>
            <field ref="model_stock_point_order" name="model_id"/>
            <field name="groups" eval="[(4, ref('stock_point_order.group_stock_point_order_manager'))]"/>
        </record>


    </data>
</odoo>