                <script type="text/javascript" src="/wibicon_kanban_production/static/src/js/kanban_production.js"></script>
            </xpath>
        </template>

        <record id="kanban_production_client" model="ir.actions.client">
            <field name="name">Kanban Production</field>
            <field name="tag">kanban_production_view</field>
