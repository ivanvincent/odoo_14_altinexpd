<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hr_contract_payroll" model="ir.ui.view">
            <field name="name">hr.contract.payroll.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[1]" position="after">
                    <page string="Allowance &amp; Deduction" name="alw_ded">
                        <group name="allowance" string="Allowance">
                            <group>
                                <field name="t_jabatan"/>
                                <field name="t_fungsional"/>
                                <field name="t_komunikasi"/>
                                <field name="t_transport"/>
                                <field name="t_kost"/>
                            </group>
                            <group>
                                <field name="t_makan"/>
                                <field name="t_luar_kota"/>
                                <field name="t_kendaraan_dinas"/>
                                <field name="t_masa_kerja"/>
                            </group>    
                        </group>
                        <group name="deduction" string="Deduction">
                            <group>
                                <field name="potongan_sukarela"/>
                                <field name="potongan_inhealth"/>
                            </group>
                            <group>
                                <field name="potongan_makan"/>
                                <field name="potongan_zakat"/>
                            </group>    
                        </group>
                        <group name="bpjs" string="BPJS">
                            <group>
                                <field name="bpjs_ketenagakerjaan"/>
                            </group>
                            <group>
                                <field name="bpjs_kesehatan"/>
                            </group>    
                        </group>
                    </page>
                </xpath>              
            </field>
        </record>

    </data>
</odoo>