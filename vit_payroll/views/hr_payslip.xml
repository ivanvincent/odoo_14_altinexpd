<odoo>
    <data>

        <record id="additional_form_hr_payslip" model="ir.ui.view">
            <field name="name">additional.form.view.hr.payslip</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <field name="struct_id" position="after">
                    <field name="net" invisible="1"/>
                    <field name="kasbon" invisible="1"/>
                </field>
            </field>
        </record>

        <record id="view_hr_payslip_tree" model="ir.ui.view">
            <field name="name">new.hr.payslip.tree.view</field>
            <field name="model">hr.payslip</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="net"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
