<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sellingout_tree_view" model="ir.ui.view">
            <field name="name">sellingout.tree</field>
            <field name="model">sellingout</field>
            <field name="arch" type="xml">
                <tree string="Data Sellingout" create="false" import="false">
                    <field name="selling_date" />
                    <field name="week" optional="hide" />
                    <field name="template" optional="hide" />
                    <field name="user_id" optional="hide" />
                    <field name="cust_int_id" optional="show" />
                    <field name="cust_ext_id" optional="show" />
                    <field name="product_nm"/>
                    <field name="prod_int_id"/>
                    <field name="prod_ext_id" optional="hide" />
                    <field name="customer_nm"/>
                    <field name="stock_qty"/>
                    <field name="selling_qty"/>
                    <field name="maximum_qty"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="sellingout_form_view" model="ir.ui.view">
            <field name="name">sellingout.form</field>
            <field name="model">sellingout</field>
            <field name="arch" type="xml">
                <form string="Data Selling Out" delete="false" duplicate="false">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_read_only" states="draft" />
                        <button name="action_todraft" string="Set to Draft" type="object" class="oe_read_only" states="confirm,cancel" />
                        <button name="action_cancel" string="Cancel" type="object" class="oe_read_only" states="confirm" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>

                        <group col="4">
                            <label for="selling_date" />
                            <div class="o_row">
                                <field name="selling_date" readonly="1" />
                                <field name="week" readonly="1" />
                            </div>
                            <field name="template" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        </group>

                        <group col="4">
                            <!-- comment dulu -->
                            <!-- <field name="customer_nm" attrs="{'readonly': [('state', '!=', 'draft')]}" domain="[('customer_rank', '>', 0)]" options="{'no_open': True,}" /> -->
                            <field name="cust_ext_id" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <!-- <field name="product_nm" attrs="{'readonly': [('state', '!=', 'draft')]}" domain="[('sale_ok', '=', True)]" options="{'no_open': True,}" /> -->
                            <field name="prod_ext_id" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        </group>

                        <group col="6">
                            <field name="maximum_qty" attrs="{'readonly': [('state', '!=', 'draft')]}" options='{"type": "number", "step": 1}' />
                            <field name="stock_qty" attrs="{'readonly': [('state', '!=', 'draft')]}" options='{"type": "number", "step": 1}' />
                            <field name="selling_qty" attrs="{'readonly': [('state', '!=', 'draft')]}" options='{"type": "number", "step": 1}' />
                        </group>

                        <separator string="Remark" />
                        <field name="remark" attrs="{'readonly': [('state', '=', 'cancel')]}" />

                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id='sellingout_search_view' model='ir.ui.view' >
            <field name="name">sellingout.search</field>
            <field name="model">sellingout</field>
            <field name="arch" type="xml">
                <search string="Sellingout">
                    <!-- 
                    <field name="selling_date"/>
                    <field name="week"/>
                     -->
                    <field name="customer_nm" />
                    <field name="cust_int_id" />
                    <field name="cust_ext_id" />
                    <field name="product_nm" />
                    <field name="prod_int_id" />
                    <field name="prod_ext_id" />

                    <filter string="Indomaret" name="filter_mydocument" domain="[('template', '=', 'INDOMARET')]"/>
                    <separator/>
                    <filter string="Today" name="filter_today" domain="[('selling_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),('selling_date', '&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:23:59'))]"/>
                    <separator/>
                    <filter string="Confirm" name="sellingout_confirm" domain="[('state','=','confirm')]" />
                    <filter string="Draft" name="sellingout_draft" domain="[('state','=','draft')]" />
                    <filter string="Cancel" name="sellingout_cancel" domain="[('state','=','cancel')]" />
                    <separator/>
                    <filter string="Date" name="sellingout_date" date="selling_date"/>

                    <group expand="0" string="Group By">
                        <filter string="Status" name="state" domain="[]" context="{'group_by':'state'}"/>
                        <separator/>
                        <filter string="Date" name="selling_date" domain="[]" context="{'group_by':'selling_date'}"/>
                        <separator/>
                        <filter string="Customer" name="customer_nm" domain="[]" context="{'group_by':'customer_nm'}"/>
                        <!-- 
                        <filter string="Group" name="group_nm" domain="[]" context="{'group_by':'group_nm'}"/>
                        <filter string="Route" name="jalur_nm" domain="[]" context="{'group_by':'jalur_nm'}"/>
                        <filter string="Cluster" name="cluster_nm" domain="[]" context="{'group_by':'cluster_nm'}"/>
 -->
                        <separator/>
                        <filter string="Product" name="product_nm" domain="[]" context="{'group_by':'product_nm'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="sellingout_pivot_view" model="ir.ui.view">
            <field name="name">sellingout.pivot</field>
            <field name="model">sellingout</field>
            <field name="arch" type="xml">
                <pivot string="Sellingout">
                    <field name="selling_date" type="row"/>
                    <field name="customer_nm" type="row"/>
                    <field name="prod_int_id" type="row"/>
                    <field name="selling_qty" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="sellingout_graph_view" model="ir.ui.view">
            <field name="name">sellingout.graph</field>
            <field name="model">sellingout</field>
            <field name="arch" type="xml">
                <graph string="Sellingout">
                    <field name="selling_date" />
                    <field name="customer_nm" />
                    <field name="prod_int_id" />
                </graph>
            </field>
        </record>

        <record id="sellingout_action" model="ir.actions.act_window">
            <field name="name">Sellingout</field>
            <field name="res_model">sellingout</field>
            <field name="view_mode">tree,pivot,graph,form</field>
            <field name="context">{
                                    'search_default_filter_mydocument':1,
                                }
            </field>
            <field name="domain">[]</field>
        </record>

        <!-- <act_window id="action_sellingout_upload" name="Upload" res_model="sellingout.xls" binding_model="sellingout" view_mode="form" target="new" binding_views="list" /> -->

        <!-- <menuitem id="sellingout_menu" action="sellingout_action" parent="mdev_sharon.so_sharon_idm_menu" sequence="9"/> -->
  
    </data>
</odoo>