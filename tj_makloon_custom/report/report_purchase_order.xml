<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<report
            string="Purchase Order Textile"
            id="action_report_po_textile1"
            model="purchase.order"
            report_type="qweb-pdf"
            name="tj_makloon_custom.report_po_textile1"
            file="tj_makloon_custom.report_po_textile1"
        />
    <data>

    <template id="report_po_textile1">
        <t t-foreach="docs" t-as="o">
            <t t-call="tj_makloon_custom.report_po_textile_document1" t-lang="o.partner_id.lang"/>
        </t>

    </template>

    <template id="report_po_textile_document1">

        <t t-call="report.html_container">
            <t t-call="report.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                <div class="page">
                    <div class="oe_structure"/>
                    <h3>
                        <center><span t-if="o.type_id == 'benang'">Purchase Order Benang</span></center>
                        <center><span t-if="o.type_id == 'belikain'">Purchase Order Kain</span></center>
                        <center><span t-if="o.type_id == 'beligreige'">Purchase Order Greige</span></center>
                        <center><span t-if="o.type_id == 'printing'">Purchase Order Printing</span></center>
                        <center><strong> <span t-field="o.name"/></strong></center><br/>
                    </h3>
                        <div class="col-xs-4 pull-right">
                            <div>
                                <span><strong>Kepada Yth,</strong></span>
                            </div>
                            <div name="partner_header">
                                <div t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;fax&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                                <span><strong>Contact Person,</strong></span><br/>
                                 <div t-field="o.partner_contact.name"/>
                                 <div t-field="o.partner_contact.phone"/>
                                 <div t-field="o.partner_contact.mobile"/>
                             </div>
                        </div>
                    <td>
                        
                        <strong>Tanggal: </strong> <span t-field="o.date_order" t-field-options='{"format": "dd MMMM y"}'/><br/>
                        <strong>Delivery: </strong> <span t-field="o.date_planned" t-field-options='{"format": "dd MMMM y"}'/><br/>
                        <!--<strong>Contact Person: </strong> <span t-field="o.partner_contact"/>-->
                        <!--<span t-field="o.partner_contact.phone"/>,-->
                        <!--<span t-field="o.partner_contact.mobile"/><br/>-->
                    </td>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th t-if="o.type_id == 'benang'"><strong>Nama Benang</strong></th>
                                <!--<th t-if="o.type_id == 'belikain'"><strong>Jenis / Kain</strong></th>-->
                                <!--<th t-if="o.type_id == 'beligreige'"><strong>Jenis / Kain</strong></th>-->
                                <th t-if="o.type_id == ''"><strong>Product</strong></th>
                                <th t-if="o.type_id == 'belikain'"><strong>Product</strong></th>
                                <th t-if="o.type_id == 'beligreige'"><strong>Product</strong></th>
                                <th t-if="o.type_id == 'printing'"><strong>Product</strong></th>
                                <th t-if="o.type_id == 'benang'"><strong>Merk</strong></th>
                                <th t-if="o.type_id == 'benang'"><strong>Qty</strong></th>
                                <th t-if="o.type_id == 'benang'"><strong>Satuan</strong></th>
                                <th t-if="o.type_id == 'benang'"><strong>Jumlah(KG)</strong></th>
                                <th t-if="o.type_id == 'benang'"><strong>Harga @</strong></th>
                                <th t-if="o.type_id == 'benang'"><strong>PPN</strong></th>
                                <th t-if="o.type_id == 'benang'"><strong>Sub Total</strong></th>
                                <th t-if="o.type_id == 'belikain'"><strong>Warna</strong></th>
                                <th t-if="o.type_id == 'beligreige'"><strong>Warna</strong></th>
                                <th t-if="o.type_id == 'printing'"><strong>Warna</strong></th>
                                <th t-if="o.type_id == 'belikain'"><strong>Resep</strong></th>
                                <th t-if="o.type_id == 'belikain'"><strong>Setting</strong></th>
                                <th t-if="o.type_id == 'beligreige'"><strong>Setting</strong></th>
                                <th t-if="o.type_id == 'printing'"><strong>Setting</strong></th>
                                <th t-if="o.type_id == 'belikain'"><strong>Gramasi</strong></th>
                                <th t-if="o.type_id == 'beligreige'"><strong>Gramasi</strong></th>
                                <th t-if="o.type_id == 'printing'"><strong>Gramasi</strong></th>
                                <th t-if="o.type_id == 'belikain'"><strong>Qty</strong></th>
                                <th t-if="o.type_id == 'beligreige'"><strong>Qty</strong></th>
                                <th t-if="o.type_id == 'printing'"><strong>Qty</strong></th>
                                <th t-if="o.type_id == 'belikain'"><strong>Satuan</strong></th>
                                <th t-if="o.type_id == 'beligreige'"><strong>Satuan</strong></th>
                                <th t-if="o.type_id == 'printing'"><strong>Satuan</strong></th>
                                <th t-if="o.type_id != 'benang'"><strong>Roll</strong></th>
                                <th t-if="o.type_id != 'benang'"><strong>@Kg</strong></th>
                                <th t-if="o.type_id == 'belikain'"><strong>Harga Include</strong></th>
                                <th t-if="o.type_id == 'beligreige'"><strong>Harga Include</strong></th>
                                <th t-if="o.type_id == 'printing'"><strong>Harga Include</strong></th>
                                <th t-if="o.type_id == 'belikain'"><strong>Harga@</strong></th>
                                <th t-if="o.type_id == 'beligreige'"><strong>Harga@</strong></th>
                                <th t-if="o.type_id == 'printing'"><strong>Harga@</strong></th>
                                <th t-if="o.type_id == 'belikain'"><strong>Sub Total</strong></th>
                                <th t-if="o.type_id == 'beligreige'"><strong>Sub Total</strong></th>
                                <th t-if="o.type_id == 'printing'"><strong>Sub Total</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.order_line" t-as="l">
                                <td><span t-field="l.product_id"/></td>
                                <td t-if="o.type_id == 'benang'"><span t-field="l.product_merk_id"/></td>
                                <td t-if="o.type_id == 'benang'"><span t-field="l.product_qty"/></td>
                                <td t-if="o.type_id == 'benang'"><span t-field="l.product_uom"/></td>
                                <td t-if="o.type_id == 'benang'"><span t-field="l.product_kg"/></td>
                                <td t-if="o.type_id == 'benang'"><span t-field="l.price_include"/></td>
                                <td t-if="o.type_id == 'benang'"><span t-esc="', '.join(map(lambda x: x.name, l.taxes_id))"/></td>
                                <td t-if="o.type_id == 'benang'"><span t-field="l.price_subtotal"/></td>
                                <td t-if="o.type_id == 'belikain'"><span t-field="l.product_warna_id"/></td>
                                <td t-if="o.type_id == 'beligreige'"><span t-field="l.product_warna_id"/></td>
                                <td t-if="o.type_id == 'printing'"><span t-field="l.product_warna_id"/></td>
                                <td t-if="o.type_id == 'belikain'"><span t-field="l.product_resep_warna_id"/></td>
                                <td t-if="o.type_id == 'belikain'"><span t-field="l.product_setting_id"/></td>
                                <td t-if="o.type_id == 'beligreige'"><span t-field="l.product_setting_id"/></td>
                                <td t-if="o.type_id == 'printing'"><span t-field="l.product_setting_id"/></td>
                                <td t-if="o.type_id == 'belikain'"><span t-field="l.product_gramasi_id"/></td>
                                <td t-if="o.type_id == 'beligreige'"><span t-field="l.product_gramasi_id"/></td>
                                <td t-if="o.type_id == 'printing'"><span t-field="l.product_gramasi_id"/></td>
                                <td t-if="o.type_id == 'belikain'"><span t-field="l.product_qty"/></td>
                                <td t-if="o.type_id == 'beligreige'"><span t-field="l.product_qty"/></td>
                                <td t-if="o.type_id == 'printing'"><span t-field="l.product_qty"/></td>
                                <td t-if="o.type_id == 'belikain'"><span t-field="l.product_uom"/></td>
                                <td t-if="o.type_id == 'beligreige'"><span t-field="l.product_uom"/></td>
                                <td t-if="o.type_id == 'printing'"><span t-field="l.product_uom"/></td>
                                <td t-if="o.type_id != 'benang'"><span t-field="l.product_roll"/></td>
                                <td t-if="o.type_id != 'benang'"><span t-field="l.roll_kg_id"/></td>
                                <td t-if="o.type_id == 'belikain'"><i><span t-field="l.price_include"/></i></td>
                                <td t-if="o.type_id == 'beligreige'"><i><span t-field="l.price_include"/></i></td>
                                <td t-if="o.type_id == 'printing'"><i><span t-field="l.price_include"/></i></td>
                                <td t-if="o.type_id == 'belikain'"><span t-field="l.price_unit"/></td>
                                <td t-if="o.type_id == 'beligreige'"><span t-field="l.price_unit"/></td>
                                <td t-if="o.type_id == 'printing'"><span t-field="l.price_unit"/></td>
                                <td t-if="o.type_id == 'belikain'"><span t-field="l.price_subtotal"/></td>
                                <td t-if="o.type_id == 'beligreige'"><span t-field="l.price_subtotal"/></td>
                                <td t-if="o.type_id == 'printing'"><span t-field="l.price_subtotal"/></td>
                            </tr>

                        </tbody>
                    </table>

            <div class="row">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Total Without Taxes</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Taxes</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <p>
                Catatan
            </p>
            <p t-field="o.notes"/>

                    <table class="table">
                        <tr>
                            <td t-if="o.state=='purchase'">Disetujui,</td>
                            
                            <td t-if="o.state=='purchase'">Mengetahui,</td>

                            <td>Dibuat,</td>
                        </tr>
                        <tr style="padding-top:200px">
                            <!--<td>(ERIC SUTANTO)</td>-->
                            <td t-if="o.state=='purchase'"><img width="120" src="/tj_makloon_custom/static/src/img/eric.png"/><br/>
                                (ERIC SUTANTO)</td>
                            <td><br/><br/><br/>(_________)</td>    
                            <td><br/><br/><br/>( <span t-field="o.create_uid"/> )</td>
                        </tr>
                    </table>
                </div>
                <div class="oe_structure"/>
            </t>
         </t>
    </template>
    </data>
</odoo>
