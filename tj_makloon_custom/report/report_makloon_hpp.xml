<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <report
            id="action_report_makloon_hpp_menu"
            model="wiz.makloon.hpp"
            string="Makloon HPP"
            menu="False"
            report_type="qweb-pdf"
            name="tj_makloon_custom.report_makloon_hpp_menu"
            file="tj_makloon_custom.report_makloon_hpp_menu"
        />

   <template id="report_makloon_hpp_menu">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="report.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                 <h4>
                    <center><strong>HPP PENJUALAN</strong></center>
                </h4>
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>JENIS BAHAN</th>
                        <th>NAMA BAHAN</th>
                        <th>JENIS BENANG</th>
                        <th>SATUAN BENANG</th>
                        <th>KONVERS KG</th>
                        <th>KONVERS HPP</th>
                        <th>PROSENTASE</th>
                        <th>SETTING</th>
                        <th>GRAMASI</th>
                        <th>CORAK</th>
                        <th>DAFTAR HARGA</th>
                        <th>WARNA</th>
                        <th>RESEP WARNA</th>
                        <th>CATEGORY WARNA</th>
                        <th>MAKLOON CELUP</th>
                        <th>MAKLOON RAJUT</th>
                    </tr>
                </thead>
            <tbody>
                <!--<t t-set="sum_1" t-value="0"/>-->
                <tr t-foreach="o.hpp_ids" t-as="l">
                    <td>
                          <span t-field="l.jenis_bahan"/>
                    </td>
                    <td>
                          <span t-field="l.nama_bahan" />
                    </td>
                    <td>
                          <span t-field="l.jenis_benang"/>
                    </td>
                    <td>
                        <span t-field="l.satuan"/>
                    </td>
                    <td>
                        <span t-field="l.konvers_kg"/>
                    </td>
                    <td>
                        <span t-field="l.konvers_hpp"/>
                    </td>
                    <td>
                        <span t-field="l.persentase"/>
                    </td>
                    <td>
                        <span t-field="l.setting"/>
                    </td>
                    <td>
                        <span t-field="l.gramasi"/>
                    </td>
                    <td>
                        <span t-field="l.corak"/>
                    </td>
                    <td>
                        <span t-field="l.daftar_harga"/>
                    </td>
                    <td>
                        <span t-field="l.warna"/>
                    </td>
                    <td>
                        <span t-field="l.resep_warna"/>
                    </td>
                    <td>
                        <span t-field="l.category_warna"/>
                    </td>
                    <td>
                        <span t-field="l.makloon_celup"/>
                    </td>
                    <td>
                        <span t-field="l.makloon_rajut"/>
                    </td>

                </tr>
             </tbody>
            </table>
            <table class="table">
                    <tr>
                        <td>Created By</td>
                        <td>Approve By</td>
                    </tr>
                    <tr style="padding-top:200px">
                        <td>.................</td>
                        <td>.................</td>
                    </tr>
            </table>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </t>
    </template>
</odoo>