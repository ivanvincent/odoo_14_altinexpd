                            <!--&lt;!&ndash;<field name='po_ids' invisible="1"/>&ndash;&gt;-->
                  <!--</button>-->
            <!--</xpath>-->

             <!--<xpath expr="/form/*" position="before">-->
                        <!--<header>-->
                            <!--<button string="Confirm" type="object" name="button_confirm" attrs="{'invisible':[('state','=','confirm')]}" />-->
                            <!--<field name="state" widget="statusbar"/>-->
                        <!--</header>-->
             <!--</xpath>-->

         </field>
    </record>
</data>
