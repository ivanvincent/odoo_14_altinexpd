<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="tj_makloon_custom_makloon_operation_tree" model="ir.ui.view">
            <field name="name">makloon.operation.tree</field>
            <field name="model">makloon.operation</field>
            <field name="arch" type="xml">
                <tree string="operation">
                	<field name="name"/>
                    <field name="purchase_category_id"/>
                    <field name="sequence"/>
                </tree>
            </field>
        </record>
        
        <record id="tj_makloon_custom_makloon_operation_search" model="ir.ui.view">
            <field name="name">makloon.operation.search</field>
            <field name="model">makloon.operation</field>
            <field name="arch" type="xml">
                <search string="Search">
                	<field name="name"/>
                	<field name="sequence"/>
                </search>
            </field>
        </record>
        
        <record id="tj_makloon_custom_makloon_operation_form" model="ir.ui.view">
            <field name="name">makloon.operation.form</field>
            <field name="model">makloon.operation</field>
            <field name="arch" type="xml">
                <form string="operation">
                	<header>
						<!--<button name="action_move" states="done" type="object" string="Create Move" class="oe_highlight" icon="fa-cube"/>-->
                		<!--<button name="action_request" states="draft" type="object" string="Approve" icon="fa-check" />-->
						<!--<button name="action_cancel" states="done" type="object" string="Cancel" icon="fa-close"/>-->
						<!--<button name="action_reset_to_draft" states="cancel" type="object" string="Reset To Draft" icon="fa-undo"/>-->
                		<!--<field name="state" widget="statusbar" />-->
						<!--statusbar_visible="draft,done"-->
                	</header>
                	<sheet>
                		<div class="oe_title">
                           <!--<h1>-->
                           	<!--<field name="name" readonly="1"/>-->
                           <!--</h1>-->
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="sequence"/>
                                <field name="purchase_category_id"/>
                            </group>
                        </group>
						<notebook>
							<page string="Operation Lines">
								<field name="order_line">
                                    <tree string="Operation Lines" editable="bottom">
                                        <field name="product_material_id" />
                                        <field name="product_category_id" />
                                        <field name="name" />
                                    </tree>
								</field>
							</page>
	                    </notebook>
                	</sheet>
					 <!--<div class="oe_chatter">-->
                	 	<!--&lt;!&ndash; <field name="message_follower_ids" widget="mail_followers"/> &ndash;&gt;-->
                        <!--<field name="message_ids" widget="mail_thread"/>-->
                    <!--</div>-->
                </form>
            </field>
        </record>

    </data>
</odoo>    