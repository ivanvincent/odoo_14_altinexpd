<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="tj_makloon_custom_makloon_picking_list_tree" model="ir.ui.view">
            <field name="name">makloon.picking.list.tree</field>
            <field name="model">makloon.picking.list</field>
            <field name="arch" type="xml">
                <tree string="Picking List">
                	<field name="name"/>
                    <field name="product_id"/>
                    <field name="picking_id"/>
                </tree>
            </field>
        </record>

        <record id="tj_makloon_custom_makloon_picking_list_search" model="ir.ui.view">
            <field name="name">makloon.picking.list.search</field>
            <field name="model">makloon.picking.list</field>
            <field name="arch" type="xml">
                <search string="Search">
                	<field name="name"/>
                	<field name="product_id"/>
                    <field name="picking_id"/>
                </search>
            </field>
        </record>

