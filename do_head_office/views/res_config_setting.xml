<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.do.head.office</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="DO Head Office" data-key="do_head_office" string="DO">
                        <h2>DO</h2>
                        <div class="row mt16 o_settings_container" name="devices_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="do_filter_product"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="do_filter_product"/>
                                    <div class="text-muted">
                                        Force Domain of Product by Category
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6  o_setting_box">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Product Category</span>
                                    <div class="text-muted">
                                        <field name="do_product_category_ids" widget="many2many_tags"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="do_filter_warehouse"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="do_filter_warehouse"/>
                                    <div class="text-muted">
                                        Force Domain of Allowed Warehouse
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Allowed Warehouse</span>
                                    <div class="text-muted">
                                        <field name="do_warehouse_src_ids" widget="many2many_tags"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="vehicle_picking_type_id"/>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="vehicle_picking_type_id" required="1" class="o_light_label"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="vehicle_return_picking_type_id"/>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="vehicle_return_picking_type_id" required="1" class="o_light_label"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </xpath>
            </field>
        </record>

        <record id="do_head_office_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'do_head_office'}</field>
        </record>

        <menuitem id="do_head_office_config" name="Configuration" parent="do_main_menu" sequence="99" action="do_head_office_config_settings_action" groups="base.group_system"/>
    </data>
</odoo>