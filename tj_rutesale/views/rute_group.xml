<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_rute_group_tree" model="ir.ui.view">
            <field name="name">rute_group.tree</field>
            <field name="model">rute.group</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="rute_group">
                    <field name="name"/>
                    <field name="fleet_id"/>
                    <field name="sales_id"/>
                    <field name="state" />
                </tree>
            </field>
        </record>


        <record id="view_rute_group_form" model="ir.ui.view">
            <field name="name">rute_group.form</field>
            <field name="model">rute.group</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="rute_group">
                    <sheet>

                        <group col="4" string = "Group 1">
                            <field name="name"/>
                            <field name="fleet_id"/>
                            <field name="sales_id"/>
                            <field name="state" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>