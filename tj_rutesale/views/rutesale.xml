<?xml version="1.0" encoding="utf-8"?>
<openerp>
        <data>


                <record id="view_rute_sale_tree" model="ir.ui.view">
                        <field name="name">rute_sale.tree</field>
                        <field name="model">rute.sale</field>
                        <field name="type">tree</field>
                        <field name="priority" eval="8"/>
                        <field name="arch" type="xml">
                                <tree string="rute_sale" default_order="name desc">
                                        <field name="name"/>
                                        <field name="date_plan"/>
                                        <field name="date_actual" />
                                        <field name="date_pending" optional="hide"/>
                                        <field name="group_id" optional="hide"/>
                                        <field name="sales_id" />
                                        <field name="jumlah_toko" />
                                        <field name="jumlah_kunjungan" />
                                        <!-- <field name="jumlah_so" /> -->
                                        <field name="persen_kunjungan" optional="hide"/>
                                        <field name="persen_tepat" optional="hide"/>
                                        <field name="driver_id" optional="hide"/>
                                        <field name="helper_id" optional="hide"/>
                                        <!-- <field name="category" /> -->
                                        <!-- <field name="kontrabon_id" /> -->
                                        <field name="jumlah" />
                                        <field name="amount_rute" />
                                        <field name="count_pay" optional="hide"/>
                                        <field name="amount_pay" optional="hide"/>
                                        <field name="jumlah_qty_target" optional="hide"/>
                                        <field name="jumlah_qty_target_persen" optional="hide"/>
                                        <field name="jumlah_new_cust_target" optional="hide"/>
                                        <field name="jumlah_new_cust_target_persen" optional="hide"/>
                                        <field name="state" widget="badge" />
                                        <field name="create_uid" optional="hide"/>
                                        <field name="write_uid" optional="hide"/>
                                        <field name="create_date" optional="hide"/>
                                </tree>
                        </field>
                </record>

                <record id="view_rute_sale_form" model="ir.ui.view">
                        <field name="name">rute_sale.form</field>
                        <field name="model">rute.sale</field>
                        <field name="type">form</field>
                        <field name="priority" eval="8"/>
                        <field name="arch" type="xml">
                                <form string="rute_sale">
                                        <header>
                                                <button string="Set to draft" icon="" states="confirm" type="object" name="action_draft"/>
                                                <button string="Confirm" icon="" states="draft" type="object" name="action_confirm" class="oe_highlight"/>
                                                <button string="Post" icon="" states="open" type="object" name="action_post" class="oe_highlight"/>
                                                <!-- <button string="Clearing" icon="" states="posted" type="object" name="action_clearing" class="oe_highlight"/> -->
                                                <button string="Cancel" icon="" type="object" name="action_cancel" attrs="{'invisible': [('state','in', ['draft','close'])]}"/>
                                                <button string="Reject" icon="" states="open" type="object" name="action_reject"/>
                                                <field name="state" widget="statusbar"/>

                                        </header>
                                        <sheet>
                                                <div class="oe_button_box" name="button_box">
                                                        <button class="oe_stat_button" name="action_view_ketepatan" help="Ketepatan Sales" icon="fa-pie-chart">
                                                                <div class="o_field_widget o_stat_info">
                                                                        <span class="o_stat_value">
                                                                                <field name="persen_tepat" widget="statinfo" nolabel="1"/>
                                                                        %</span>
                                                                        <span class="o_stat_text">Ketepatan</span>
                                                                </div>

                                                        </button>
                                                        <button class="oe_stat_button" name="action_view_list_customer" help="Melihat List Toko" icon="fa-building">
                                                                <field name="jumlah_toko" widget="statinfo" string="Toko"/>
                                                        </button>
                                                        <button class="oe_stat_button" name="action_view_picking" type="object" help="Melihat Jumlah Picking" icon="fa-truck" attrs="{'invisible':[('state', '!=', 'confirm')]}">
                                                                <field name="picking_count" widget="statinfo" string="Transer"/>
                                                        </button>
                                                        <button class="oe_stat_button" name="action_view_new_customer" help="Melihat Customer Baru" icon="fa-users">
                                                                <field name="new_customer" widget="statinfo" string="New Customer"/>
                                                        </button>
                                                </div>

                                                <div class="oe_title">
                                                        <h1>
                                                                <field name="name" readonly="1"/>
                                                        </h1>
                                                </div>
                                                <group string = "">

                                                        <group>
                                                                <field name="config_id" invisible="1" />
                                                                <field name="date_actual" />
                                                                <field name="warehouse_id" string="Stock Point" options="{'no_open': True, 'no_create': True}" />
                                                                <label for="jalur_id" string="Jalur"/>
                                                                <div class="o_row no-gutters d-flex">
                                                                        <field name="jalur_id" options="{'no_open': True, 'no_create': True}" />
                                                                        <button name="action_load_jwk" type="object" icon="fa-refresh"/>
                                                                </div>
                                                                <field name="vehicle_id" options="{'no_open': True, 'no_create': True}" />
                                                                <!-- <field name="kontrabon_id" options="{'no_open': True, 'no_create': True}"/> -->
                                                        </group>
                                                        <group>
                                                                <field name="date_plan"/>
                                                                <field name="datetime_out" />
                                                                <field name="date_pending" />
                                                                <field name="datetime_in" />
                                                        </group>
                                                </group>

                                                <group string ="Responsible">
                                                        <group>
                                                                <field name="sales_id" options="{'no_open': True, 'no_create': True}"/>
                                                                <field name="driver_id" options="{'no_open': True, 'no_create': True}" />
                                                        </group>
                                                        <group>
                                                                <field name="helper_id" options="{'no_open': True, 'no_create': True}"/>
                                                        </group>
                                                </group>

                                                <group string ="Summary">
                                                        <group>
                                                                <field name="jumlah" />
                                                                <field name="amount_rute" />
                                                                <field name="jumlah_kunjungan" />
                                                                <field name="count_pay" />
                                                        </group>
                                                        <group>
                                                                <field name="persen_kunjungan" />
                                                                <field name="amount_pay" />
                                                                <field name="persen_tepat"/>
                                                                <field name="product_category_ids" widget="many2many_tags" invisible="1"/>
                                                        </group>
                                                </group>
                                                <notebook>
                                                        <page string="Customer">
                                                                <field name="rute_cust_ids">
                                                                        <tree string="Customer" editable="bottom">
                                                                                <field name="partner_id" options="{'no_open': True, 'no_create': True}"/>
                                                                                <!-- <field name="cust_type"/> -->
                                                                                <field name="property_product_pricelist" />
                                                                                <field name="move_id" options="{'no_open': True, 'no_create': True}"/>
                                                                                <field name="amount_via_sales" />
                                                                                <field name="datetime_start" />
                                                                                <field name="datetime_end" />
                                                                                <field name="partner_latitude" />
                                                                                <field name="partner_longitude" />
                                                                                <field name="pay_via_sales" />
                                                                                <field name="move_amount" />
                                                                                <field name="state_visit_id" />
                                                                                <field name="akurasi" />
                                                                                <field name="tepat_tidak" />
                                                                                <field name="currency_id" invisible="1" />
                                                                        </tree>
                                                                </field>
                                                        </page>
                                                        <page string="New Customer">
                                                                <field name="rute_new_cust_ids">
                                                                        <tree string="New Customer">
                                                                                <field name="partner_name" />
                                                                                <field name="partner_alamat" />
                                                                                <field name="partner_telp" />
                                                                                <field name="partner_cp" />
                                                                                <field name="create_date" string="Datetime" />
                                                                                <field name="partner_latitude" />
                                                                                <field name="partner_longitude" />
                                                                                <field name="partner_image1" />
                                                                        </tree>
                                                                </field>
                                                        </page>
                                                        <page string="Finish Good">
                                                                <field name="line_fg_ids">
                                                                        <tree editable="bottom">
                                                                                <field name="location_id" invisible="0"/>
                                                                                <field name="product_id" options="{'no_open': True, 'no_create': True}" domain="[('categ_id', 'in', parent.product_category_ids)]"/>
                                                                                <field name="image_1920" widget="image" class="oe_avatar oe_left" options="{'preview_image':'image_128'}"/>
                                                                                <field name="default_code"/>
                                                                                <field name="qty_onhand"/>
                                                                                <field name="product_uom_qty" sum="Total"/>
                                                                                <field name="product_uom_id"/>
                                                                        </tree>
                                                                </field>
                                                        </page>
                                                        <page string="SIBA">
                                                                <field name="line_siba_ids">
                                                                        <tree editable="bottom">
                                                                                <field name="location_id" invisible="0"/>
                                                                                <field name="product_id" options="{'no_open': True, 'no_create': True}" domain="[('categ_id', 'in', parent.product_category_ids)]"/>
                                                                                <field name="default_code"/>
                                                                                <field name="qty_onhand"/>
                                                                                <field name="product_uom_qty" sum="Total"/>
                                                                                <field name="product_uom_id"/>
                                                                        </tree>
                                                                </field>
                                                        </page>
                                                        <page string="Return">
                                                                <field name="line_return_ids">
                                                                        <tree editable="bottom">
                                                                                <field name="location_id" invisible="0"/>
                                                                                <field name="product_id" options="{'no_open': True, 'no_create': True}" domain="[('categ_id', 'in', parent.product_category_ids)]"/>
                                                                                <field name="default_code"/>
                                                                                <field name="qty_onhand"/>
                                                                                <field name="product_uom_qty" sum="Total"/>
                                                                                <field name="product_uom_id"/>
                                                                        </tree>
                                                                </field>
                                                        </page>
                                                        <page string="Expense">
                                                                <field name="expense_ids" attrs="{'readonly': [('state', '!=', 'done')]}">
                                                                        <tree editable="bottom">
                                                                                <field name="expense_id"/>
                                                                                <field name="quantity"/>
                                                                        </tree>
                                                                </field>
                                                                <!-- 
                                                                <field name="out_latitude" />
                                                                <field name="out_longitude" />
                                                                <field name="in_latitude" />
                                                                <field name="in_longitude" /> -->

                                                        </page>
                                                </notebook>
                                                <notebook>
                                                        <page string="Details">
                                                                <field name="line_ids" invisible="1"/>
                                                                <field name="rute_lines">
                                                                        <tree>
                                                                                <field name="location_id" invisible="0"/>
                                                                                <field name="product_id" domain="[('categ_id', 'in', parent.product_category_ids)]"/>
                                                                                <field name="default_code"/>
                                                                                <field name="qty_onhand"/>
                                                                                <field name="price_unit"/>
                                                                                <field name="product_uom_qty" sum="Total"/>
                                                                                <field name="product_uom_id"/>
                                                                        </tree>
                                                                </field>
                                                        </page>
                                                        <!-- <page string="Details">
                                                                <field name="line_ids" invisible="1"/>
                                                                <field name="group_ids">
                                                                        <tree>
                                                                                <field name="product_id" domain="[('categ_id', 'in', parent.product_category_ids)]"/>
                                                                                <field name="default_code"/>
                                                                                <field name="price_unit"/>
                                                                                <field name="product_uom_qty" sum="Total"/>
                                                                                <field name="product_uom_id"/>
                                                                        </tree>
                                                                </field>
                                                        </page> -->
                                                </notebook>
                                        </sheet>
                                        <div class="oe_chatter">
                                                <field name="message_follower_ids"/>
                                                <field name="activity_ids"/>
                                                <field name="message_ids"/>
                                        </div>
                                </form>
                        </field>
                </record>


        </data>
</openerp>