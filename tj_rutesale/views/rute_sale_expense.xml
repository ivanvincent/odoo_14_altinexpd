<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="rute_sale_expense_tree">
            <field name="name">rute.sale.expense.tree</field>
            <field name="model">rute.sale.expense</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name" required="1"/>
                    <field name="code"/>
                    <field name="account_id"/>
                    <field name="description"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="rute_sale_expense_form">
            <field name="name">rute.sale.expense.form</field>
            <field name="model">rute.sale.expense</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="account_id"/>
                                <field name="description"/>
                                <field name="is_active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="rute_sale_expense_action">
            <field name="name">Expense</field>
            <field name="res_model">rute.sale.expense</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="rute_sale_expense_menu" name="Expense" parent="rute_sale_config_menu" action="rute_sale_expense_action"/>


    </data>
</odoo>