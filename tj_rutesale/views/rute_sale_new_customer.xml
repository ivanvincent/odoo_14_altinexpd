<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_rute_new_customer_form" model="ir.ui.view">
            <field name="name">rute_new_customer.form</field>
            <field name="model">rute.sale.new.cust</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="New Cust">
                    <sheet>

                        <group col="4" string = "Group 1">
                            <field name="rute_id"/>
                            <field name="partner_name"/>
                            <field name="partner_alamat"/>
                            <field name="partner_telp" />
                            <field name="partner_cp" />
                            <field name="partner_latitude" />
                            <field name="partner_longitude" />
                            <field name="partner_image1" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_new_cust_tree" model="ir.ui.view">
            <field name="name">new_cust.tree</field>
            <field name="model">rute.sale.new.cust</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="New Customer">
                    <field name="rute_id"/>
                    <field name="date_plan_rute_sale"/>
                    <field name="partner_name"/>
                    <field name="partner_alamat"/>
                    <field name="partner_telp" />
                    <field name="partner_cp" />
                    <field name="partner_latitude" />
                    <field name="partner_longitude" />
                    <field name="partner_image1" />
                </tree>
            </field>
        </record>

    </data>
</odoo>