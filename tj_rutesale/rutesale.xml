<openerp>
        <data>
                <record id="view_rute_sale_tree" model="ir.ui.view">
                        <field name="name">rute_sale.tree</field>
                        <field name="model">rute.sale</field>
                        <field name="type">tree</field>
                        <field name="priority" eval="8"/>
                        <field name="arch" type="xml">
                                <tree string="rute_sale">
                                        <field name="name"/>
                                        <field name="date_plan"/>
                                        <field name="date_actual" />
                                        <field name="date_pending" />
                                        <field name="group_id" />
                                        <field name="sales_id" />
                                        <field name="persen_kunjungan" />
                                        <field name="persen_tepat" />
                                        <field name="driver_id" />
                                        <field name="helper_id" />
                                        <field name="category" />
                                        <field name="kontrabon_id" />
                                        <field name="jumlah" />
                                        <field name="amount_rute" />
                                        <field name="count_pay" />
                                        <field name="amount_pay" />
                                        <field name="jumlah_qty_target" />
                                        <field name="jumlah_qty_target_persen" />
                                        <field name="jumlah_new_cust_target" />
                                        <field name="jumlah_new_cust_target_persen" />
                                        <field name="state" />
                                </tree>
                        </field>
                </record>

                <record id="view_rute_sale_form" model="ir.ui.view">
                        <field name="name">rute_sale.form</field>
                        <field name="model">rute.sale</field>
                        <field name="type">form</field>
                        <field name="priority" eval="8"/>
                        <field name="arch" type="xml">
                                <form string="rute_sale">
                                        <header>
                                                <button string="Confirm" icon="" states="draft" type="object" name="action_confirm" class="oe_highlight"/>
                                                <button string="Post" icon="" states="open" type="object" name="action_post" class="oe_highlight"/>
                                                <!-- <button string="Clearing" icon="" states="posted" type="object" name="action_clearing" class="oe_highlight"/> -->
                                                <button string="Cancel" icon="" type="object" name="action_cancel" attrs="{'invisible': [('state','in', ['draft','close'])]}"/>
                                                <button string="Reject" icon="" states="open" type="object" name="action_reject"/>

                                                <field name="state" widget="statusbar"/>

                                        </header>
                                        <sheet>

                                                <group col="4" string = "Group 1">
                                                        <field name="name"/>
                                                        <field name="state" />
                                                        <field name="date_actual" />
                                                        <field name="kontrabon_id" />
                                                        <field name="date_plan"/>
                                                        <field name="datetime_out" />
                                                        <field name="date_pending" />
                                                        <field name="datetime_in" />
                                                </group>

                                                <group col="4" string = "Group 2">
                                                        <field name="category" />
                                                        <field name="sales_id" />
                                                        <field name="group_id" />
                                                        <field name="driver_id" />
                                                        <field name="cust_type" />
                                                        <field name="new_customer" />
                                                        <field name="helper_id" />
                                                </group>

                                                <group col="4" string = "Group 3">
                                                        <field name="jumlah" />
                                                        <field name="jumlah_toko" />
                                                        <field name="amount_rute" />
                                                        <field name="jumlah_kunjungan" />
                                                        <field name="count_pay" />
                                                        <field name="persen_kunjungan" />
                                                        <field name="amount_pay" />
                                                        <field name="persen_tepat"/>
                                                </group>




                                                <notebook>
                                                        <page string="Customer">
                                                                <field name="rute_cust_ids">
                                                                        <tree string="Customer">
                                                                                <field name="partner_id" />
                                                                                <field name="state_visit_id" />
                                                                                <field name="pay_via_sales" />
                                                                                <field name="amount_via_sales" />
                                                                                <field name="so_id" />
                                                                                <field name="so_amount" />
                                                                                <field name="datetime_start" />
                                                                                <field name="datetime_end" />
                                                                                <field name="partner_latitude" />
                                                                                <field name="partner_longitude" />
                                                                                <field name="akurasi" />
                                                                                <field name="tepat_tidak" />
                                                                                <field name="currency_id" invisible="1" />
                                                                        </tree>
                                                                </field>
                                                        </page>
                                                        <page string="Information">

                                                                <field name="out_latitude" />
                                                                <field name="out_longitude" />
                                                                <field name="in_latitude" />
                                                                <field name="in_longitude" />

                                                        </page>
                                                        <page string="New Customer">
                                                                <field name="rute_new_cust_ids">
                                                                        <tree string="New Customer">
                                                                                <field name="partner_name" />
                                                                                <field name="partner_alamat" />
                                                                                <field name="partner_telp" />
                                                                                <field name="partner_cp" />
                                                                                <field name="create_date" string="Datetime" />
                                                                                <field name="partner_latitude" />
                                                                                <field name="partner_longitude" />
                                                                                <field name="partner_image1" />
                                                                        </tree>
                                                                </field>
                                                        </page>
                                                        <page string="Kontrabon">
                                                                <field name="rute_kontra_ids">
                                                                        <tree string="Kontrabon">
                                                                                <field name="partner_id" />
                                                                                <field name="inv_id" />
                                                                                <field name="pay_via_sales" />
                                                                                <field name="amount_via_sales" />
                                                                                <field name="datetime_start" />
                                                                                <field name="datetime_end" />
                                                                                <field name="partner_latitude" />
                                                                                <field name="partner_longitude"/>
                                                                        </tree>
                                                                </field>
                                                        </page>
                                                        <page string="Note">
                                                                <!--    <field name="pakan_ids">
                                                                                <tree string="Pakan">
                                                                                        <field name="jenis_benang" />
                                                                                        <field name="kd_benang" />
                                                                                        <field name="nama_benang" />
                                                                                </tree>
                                                                        </field> -->
                                                        </page>
                                                </notebook>
                                        </sheet>
                                </form>
                        </field>
                </record>


