<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="pull_mysql_tree">
            <field name="name">pull.mysql.wizard.tree</field>
            <field name="model">pull.mysql.wizard</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="pull_mysql_form">
            <field name="name">pull.mysql.wizard.form</field>
            <field name="model">pull.mysql.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <widget name="web_ribbon" title="Disconnected" bg_color="bg-danger" attrs="{'invisible': [('is_connected', '=', True)]}"/>
                        <widget name="web_ribbon" title="Connected" bg_color="bg-danger" attrs="{'invisible': [('is_connected', '!=', True)]}"/>
                        <group>
                            <group>
                                <field name="start_date"/>
                                <field name="warehouse_code" invisible="0"/>
                                <field name="warehouse_id" options="{'no_open': True, 'no_create': True}" readonly="1"/>
                            </group>
                            <group>
                                <field name="end_date"/>
                                <field name="location_id" options="{'no_open': True, 'no_create': True}" readonly="1"/>
                                <field name="is_connected" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <!-- <button name="action_pull" string="Pull" type="object" class="oe_highlight" attrs="{'invisible':[('warehouse_code', '=', 'GDGU')]}"/> -->
                        <button name="action_pull" string="Pull" type="object" class="oe_highlight" attrs="{'invisible':[('warehouse_code', '=', 'GDGK')]}"/>
                        <!-- <button name="action_pull_greige" string="Pull" type="object" class="oe_highlight" attrs="{'invisible':[('warehouse_code', '!=', 'GDGU')]}"/> -->
                        <button name="action_pull_greige" string="Pull" type="object" class="oe_highlight" attrs="{'invisible':[('warehouse_code', '!=', 'GDGK')]}"/>
                        <button name="action_cancel" string="Roll Back" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel" type="special"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="pull_mysql_action">
            <field name="name">Pull MySql</field>
            <field name="res_model">pull.mysql.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        
        <menuitem id="menu_pull_mysql" action="pull_mysql_action" name="Pull Pro App" parent="stock.menu_stock_root" sequence="10" groups="group_pull_mysql_wizard_manager,group_pull_mysql_wizard_user"/>
    </data>
</odoo>