<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="pull_cron_om_tree">
            <field name="name">pull.cron.om.tree</field>
            <field name="model">pull.cron.om</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="np"/>
                    <field name="name"/>
                    <field name="tanggal"/>
                    <field name="kd_plg"/>
                    <field name="nama_pelanggan"/>
                    <field name="kd_brg"/>
                    <field name="kd_design"/>
                    <field name="pita"/>
                    <field name="sablon"/>
                    <field name="handling"/>
                    <field name="warna"/>
                    <field name="merek"/>
                    <field name="jenis_transaksi"/>
                    <field name="tot_quantity"/>
                    <field name="satuan_om"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="pull_cron_om_form">
            <field name="name">pull.cron.om.form</field>
            <field name="model">pull.cron.om</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="np"/>
                                <field name="name"/>
                                <field name="tanggal"/>
                                <field name="kd_plg"/>
                                <field name="kd_brg"/>
                                <field name="kd_design"/>
                                <field name="pita"/>
                                <field name="tot_quantity"/>
                                <field name="nb"/>
                            </group>
                            <group>
                                <field name="nama_pelanggan"/>
                                <field name="alamat"/>
                                <field name="sablon"/>
                                <field name="handling"/>
                                <field name="warna"/>
                                <field name="merek"/>
                                <field name="pembayaran"/>
                                <field name="jenis_transaksi"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Details">
                                <field name="line_ids">
                                    <tree edit="false">
                                        <field name="no_om"/>
                                        <field name="id_pesanan" invisible="1"/>
                                        <field name="harga_warna"/>
                                        <field name="warna"/>
                                        <field name="kd_brg"/>
                                        <field name="quantity" sum="quantity"/>
                                        <field name="satuan_mkt"/>
                                        <field name="ket_warna"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="pull_cron_om_action">
            <field name="name">Order Marketing</field>
            <field name="res_model">pull.cron.om</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record model="ir.ui.view" id="pull_cron_om_wizard_form">
            <field name="name">pull.om.wizard.form</field>
            <field name="model">pull.om.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="start_date"/>
                            </group>
                            <group>
                                <field name="end_date"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button type="object" name="action_pull" string="Pull" class="oe_highlight"/>
                                    or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="pull_cron_wizard_action" model="ir.actions.act_window">
            <field name="name">Pull Order Marketing</field>
            <field name="res_model">pull.om.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>

        </record>


        <menuitem id="main_pull_om_acc_menu" parent="account.menu_finance" name="Order Marketing"/>

        <menuitem id="main_pull_cron_om_acc" action="pull_cron_om_action" name="Order Marketing" parent="main_pull_om_acc_menu" sequence="1" groups="group_pull_cron_om_manager"/>

        <menuitem id="main_pull_cron_om_acc_wizard" action="pull_cron_wizard_action" name="Pull Order Marketing" parent="main_pull_om_acc_menu" sequence="2" groups="group_pull_cron_om_manager"/>


        <menuitem id="main_pull_om_menu" parent="stock.menu_stock_root" name="Order Marketing"/>

        <menuitem id="main_pull_cron_om" action="pull_cron_om_action" name="Order Marketing" parent="main_pull_om_menu" sequence="1" groups="group_pull_cron_om_manager"/>

        <menuitem id="main_pull_cron_om_wizard" action="pull_cron_wizard_action" name="Pull Order Marketing" parent="main_pull_om_menu" sequence="2" groups="group_pull_cron_om_manager"/>


    </data>
</odoo>