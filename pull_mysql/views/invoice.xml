<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="invoice_temp_view_tree">
            <field name="name">invoice.temp.tree</field>
            <field name="model">invoice.temp</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="name"/>
                    <field name="tanggal"/>
                    <field name="no_om"/>
                    <field name="kd_plg"/>
                    <field name="nama_plg"/>
                    <field name="no_lpb"/>
                    <field name="kelompok"/>
                    <field name="surat_jalan"/>
                    <field name="kd_sales"/>
                    <field name="kd_jalur"/>
                    <field name="nota"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="invoice_temp_view_form" model="ir.ui.view">
            <field name="name">invoice_temp.view.form</field>
            <field name="model">invoice.temp</field>
            <field name="arch" type="xml">
                <form string="" create="false">
                    <sheet>
                        <group>
                            <group readonly="1">
                                <field name="name"/>
                                <field name="tanggal"/>
                                <field name="no_om"/>
                                <field name="kd_plg"/>
                                <field name="nama_plg"/>
                                <field name="no_lpb"/>
                            </group>
                            <group readonly="1">
                                <field name="kelompok"/>
                                <field name="surat_jalan"/>
                                <field name="kd_sales"/>
                                <field name="kd_jalur"/>
                                <field name="nota"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Details">
                                <field name="line_ids" readonly="1">
                                    <tree>
                                        <field name="kd_brg"/>
                                        <field name="quantity"/>
                                        <field name="satuan_harga"/>
                                        <field name="qty_tukar"/>
                                        <field name="qty_retur"/>
                                        <field name="harga_retur"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="invoice_temp_action">
            <field name="name">Invoice</field>
            <field name="res_model">invoice.temp</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="invoice_root_menu" name="Invoice" web_icon="pull_mysql,static/description/icon.png">
            <menuitem id="invoice_menu" name="Invoice" action="invoice_temp_action" />
        </menuitem>


    </data>
</odoo>