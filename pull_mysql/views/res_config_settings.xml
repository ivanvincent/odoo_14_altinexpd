<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mysql</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Mysql" data-key="pull_mysql" string="Mysql">
                        <h2>Mysql</h2>
                        <div class="row mt16 o_settings_container" name="devices_setting_container">
                            <div class="col-12 col-lg-6  o_setting_box" id="mysql" title="Integration With Mysql">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Host</span>
                                    <div class="text-muted">
                                        <field name="mysql_host"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6  o_setting_box">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Username</span>
                                    <div class="text-muted">
                                        <field name="mysql_username"/>
                                    </div>
                                </div>

                            </div>
                            <div class="col-12 col-lg-6  o_setting_box">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Port</span>
                                    <div class="text-muted">
                                        <field name="mysql_port" widget="integer"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6  o_setting_box">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Password</span>
                                    <div class="text-muted">
                                        <field name="mysql_password" password="True"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6  o_setting_box">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Database</span>
                                    <div class="text-muted">
                                        <field name="mysql_database"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6  o_setting_box">
                                <div class="o_setting_right_pane">
                                    <button name="check_mysql_connection" icon="fa-arrow-right" type="object" string="Check Connection" class="btn-link o_web_settings_access_rights"/>
                                </div>
                            </div>

                        </div>

                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>