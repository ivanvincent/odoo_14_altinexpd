<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="pull_cron_js_tree">
            <field name="name">pull.cron.sj.tree</field>
            <field name="model">pull.cron.sj</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="tanggal"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="om"/>
                    <field name="dep"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="pull_cron_js_greige_tree">
            <field name="name">pull.cron.sj.greige.tree</field>
            <field name="model">pull.cron.sj.greige</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false">
                    <field name="tanggal"/>
                    <field name="name"/>
                    <field name="amount_roll" sum="Total Roll"/>
                    <field name="amount_total" sum="Total"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="pull_cron_js_form">
            <field name="name">pull.cron.sj.form</field>
            <field name="model">pull.cron.sj</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="tanggal"/>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="npwp"/>
                                <!-- <field name="nama_pelanggan"/> -->
                                <field name="alamat"/>
                            </group>
                            <group>
                                <field name="om"/>
                                <field name="kd_plg"/>
                                <field name="dep"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Line">
                                <field name="line_ids">
                                    <tree>
                                        <field name="kd_brg"/>
                                        <field name="nama_pelanggan"/>
                                        <field name="nama_barang"/>
                                        <field name="no_warna"/>
                                        <field name="cone"/>
                                        <field name="quantity"/>
                                        <field name="satuan"/>
                                        <field name="qty_kg"/>
                                        <field name="qty_meter"/>
                                        <field name="qty_yard"/>
                                        <field name="gramasi_greige" optional="hide"/>
                                        <field name="lebar_greige" optional="hide"/>
                                        <field name="gramasi_finish" optional="hide"/>
                                        <field name="lebar_finish" optional="hide"/>
                                        <field name="grade"/>
                                        <field name="harga"/>
                                        <field name="ket_om"/>
                                        <field name="om"/>
                                    </tree>

                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="pull_cron_js_greige_form">
            <field name="name">pull.cron.sj.greige.form</field>
            <field name="model">pull.cron.sj.greige</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="tanggal"/>
                                <field name="amount_roll"/>
                            </group>
                            <group>
                                <field name="name"/>
                                <field name="amount_total"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Line">
                                <field name="line_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="tanggal_prod"/>
                                        <field name="tanggal"/>
                                        <field name="product_id"/>
                                        <field name="std_potong"/>
                                        <field name="dep"/>
                                        <field name="kd_kain"/>
                                        <field name="gramasi_finish"/>
                                        <field name="gramasi_greige"/>
                                        <field name="kelompok"/>
                                        <field name="lusi"/>
                                        <field name="pakan"/>
                                        <field name="barcode"/>
                                        <field name="no_mesin"/>
                                        <field name="no_beam"/>
                                        <field name="pic"/>
                                        <field name="lebar"/>
                                        <field name="quantity" sum="Total"/>
                                        <field name="grade"/>
                                        <field name="keterangan"/>
                                    </tree>

                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="pull_sj_wizard_form">
            <field name="name">pull.sj.wizard.form</field>
            <field name="model">pull.sj.wizard</field>
            <field name="arch" type="xml">
                <form create="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="start_date"/>
                            </group>
                            <group>
                                <field name="end_date"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_pull" string="Pull" type="object" class="oe_highlight"/>
                        <button name="action_rollback" string="Roll Back" type="object" class="oe_highlight" groups="pull_mysql.group_pull_mysql_wizard_rollback" />
                        <button string="Cancel" class="oe_link" special="cancel" type="special"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="pull_cron_js_action">
            <field name="name">Surat Jalan</field>
            <field name="res_model">pull.cron.sj</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="pull_cron_js_greige_action">
            <field name="name">Surat Jalan Greige</field>
            <field name="res_model">pull.cron.sj.greige</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="pull_js_wizard_action" model="ir.actions.act_window">
            <field name="name">Tarik Surat Jalan</field>
            <field name="res_model">pull.sj.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>




        <menuitem id="main_pull_cron_js" parent="stock.menu_stock_root" name="Surat Jalan"/>
        <menuitem id="main_pull_cron_js_greige" parent="main_pull_cron_js" action="pull_cron_js_greige_action" name="Surat Jalan Greige"/>
        <menuitem id="sub_pull_cron_js" parent="main_pull_cron_js" action="pull_cron_js_action" name="Surat Jalan Temp"/>
        <menuitem id="sub_pull_sj_wizard" parent="main_pull_cron_js" action="pull_js_wizard_action" name="Tarik Surat Jalan"/>


        <menuitem id="main_pull_cron_sj_inv" groups="account.group_account_invoice" parent="account.menu_finance_receivables" action="pull_js_wizard_action" name="Tarik Surat Jalan"/>

    </data>
</odoo>