<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="workorder_daily_wizard_form" model="ir.ui.view">
            <field name="name">workorder.daily.wizard.form</field>
            <field name="model">workorder.daily.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <!-- <field name="workcenter_id"/> -->
                            <!-- <field name="scanner" widget="qrscanner" nolabel="1"/> -->
                            <field name="scanner" nolabel="1"/>
                            <field name="date" attrs="{'invisible':[('scanner', '=', False)]}"/>
                            <field name="employee_id" attrs="{'invisible':[('scanner', '=', False)]}"/>
                            <field name="quantity" attrs="{'invisible':[('scanner', '=', False)]}"/>
                            <field name="machine_id" attrs="{'invisible':[('scanner', '=', False)]}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" type="object" string="Confirm"/>
                        <button name="cancel" type="special" string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="workorder_daily_wizard_action" model="ir.actions.act_window">
            <field name="name">Wo Daily</field>
            <field name="res_model">workorder.daily.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>


</odoo>
