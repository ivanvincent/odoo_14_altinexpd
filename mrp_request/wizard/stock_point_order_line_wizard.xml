<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="stock_point_order_line_wizard_form" model="ir.ui.view">
            <field name="name">stock.point.order.line.wizard.form</field>
            <field name="model">stock.point.order.line.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <separator string="existing request to update:" />
                        <newline />
                        <group>
                            <field name="request_id"/>
                        </group>
                        <notebook>
                            <page string="Details">
                                <field name="order_line_ids">
                                    <tree editable="bottom">
                                        <field name="order_id"/>
                                        <field name="product_id"/>
                                        <field name="default_code"/>
                                        <field name="quantity" sum="Total"/>
                                        <field name="product_uom_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="action_create_request" string="Process" type="object" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_stock_point_order_line_make_mrp_request" model="ir.actions.act_window">
            <field name="name">Create Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.point.order.line.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_point_order_line_wizard_form" />
            <field name="target">new</field>
            <field name="binding_model_id" ref="stock_point_order.model_stock_point_order_line" />
        </record>


    </data>
</odoo>