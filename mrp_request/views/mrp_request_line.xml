<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="mrp_request_line_tree">
            <field name="name">mrp.request.line.tree</field>
            <field name="model">mrp.request.line</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="request_id"/>
                    <field name="request_date"/>
                    <field name="product_categ_id"/>
                    <field name="line_product_id"/>
                    <field name="product_id"/>
                    <field name="name" optional="hide"/>
                    <field name="default_code"/>
                    <field name="qty_onhand"/>
                    <field name="product_uom_qty" sum="Total"/>
                    <field name="product_uom_id"/>
                    <!-- <field name="capacity"/> -->
                    <field name="konversi_butir"/>
                    <field name="satuan_id"/>
                    <field name="product_qty_conv"/>
                    <field name="product_qty_est" sum="Total"/>
                    <field name="product_qty_est_conv" sum="Total"/>
                    <field name="product_orig_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="mrp_request_line_product_tree">
            <field name="name">mrp.request.line.product.tree</field>
            <field name="model">mrp.request.line.product</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="request_id"/>
                    <field name="line_product_id"/>
                    <field name="product_ids" widget="many2many_tags"/>
                    <field name="konversi_butir"/>
                    <field name="qty_conv"/>
                    <!-- <field name="capacity"/> -->
                    <field name="qty_production" sum="Total"/>
                    <field name="satuan_id"/>
                    <field name="qty_production_conv"/>
                    <field name="product_uom_id" sum="Total"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="mrp_request_line_form">
            <field name="name">mrp.request.line.form</field>
            <field name="model">mrp.request.line</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="request_id"/>
                                <field name="request_date"/>
                                <field name="line_product_id"/>
                                <field name="product_id"/>
                                <field name="name" optional="hide"/>
                                <field name="default_code"/>
                                <field name="product_uom_qty" sum="Total"/>
                            </group>
                            <group>
                                <field name="product_uom_id"/>
                                <field name="konversi_butir"/>
                                <!-- <field name="capacity"/> -->
                                <field name="satuan_id"/>
                                <field name="product_qty_conv"/>
                                <field name="product_qty_est"/>
                                <field name="product_qty_est_conv"/>
                                <field name="product_orig_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="mrp_request_line_product_form">
            <field name="name">mrp.request.line.product.form</field>
            <field name="model">mrp.request.line.product</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="line_product_id"/>
                                <field name="product_ids" widget="many2many_tags"/>
                                <field name="konversi_butir"/>
                                <field name="qty_conv"/>
                            </group>
                            <group>
                                <!-- <field name="capacity"/> -->
                                <field name="qty_production"/>
                                <field name="satuan_id"/>
                                <field name="qty_production_conv"/>
                                <field name="product_uom_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="mrp_request_line_pivot_view" model="ir.ui.view">
            <field name="name">mrp.request.line</field>
            <field name="model">mrp.request.line</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="request_date" type="row"/>
                    <field name="order_id" type="row"/>
                    <field name="product_id" type="row"/>
                    <field name="product_qty_est" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="mrp_request_line_product_pivot_view" model="ir.ui.view">
            <field name="name">mrp.request.line.product</field>
            <field name="model">mrp.request.line.product</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="request_date" type="row"/>
                    <field name="line_product_id" type="row"/>
                    <field name="qty_production" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="mrp_request_line_view_graph" model="ir.ui.view">
            <field name="name">mrp.request.line.view.graph</field>
            <field name="model">mrp.request.line</field>
            <field name="arch" type="xml">
                <graph string="Manufacture Request Analysis" sample="1" disable_linking="1">
                    <field name="order_id" type="row"/>
                    <field name="product_qty_est" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="mrp_request_line_product_view_graph" model="ir.ui.view">
            <field name="name">mrp.request.line.product.view.graph</field>
            <field name="model">mrp.request.line.product</field>
            <field name="arch" type="xml">
                <graph string="Manufacture Request Analysis" sample="1" disable_linking="1">
                    <field name="line_product_id" type="row"/>
                    <field name="qty_production" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="mrp_request_line_view_calender" model="ir.ui.view">
            <field name="name">mrp.request.line.view.calender</field>
            <field name="model">mrp.request.line</field>
            <field name="arch" type="xml">
                <calendar string="Calendar View" date_start="request_date" color="order_id">
                    <field name="order_id" filters="1"/>
                    <field name="product_qty_est"/>
                </calendar>
            </field>
        </record>

        <record id="mrp_request_line_product_view_calender" model="ir.ui.view">
            <field name="name">mrp.request.line.product.view.calender</field>
            <field name="model">mrp.request.line.product</field>
            <field name="arch" type="xml">
                <calendar string="Calendar View" date_start="request_date" color="line_product_id">
                    <field name="line_product_id" filters="1"/>
                    <field name="qty_production"/>
                </calendar>
            </field>
        </record>


        <record model="ir.actions.act_window" id="mrp_request_line_action">
            <field name="name">Mrp Planned</field>
            <field name="res_model">mrp.request.line</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('request_id','!=',False)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('mrp_request.mrp_request_line_tree')}),
                (0, 0, {'view_mode': 'pivot', 'view_id': ref('mrp_request.mrp_request_line_pivot_view')}),
                (0, 0, {'view_mode': 'calendar', 'view_id': ref('mrp_request.mrp_request_line_view_calender')}),
                (0, 0, {'view_mode': 'graph', 'view_id': ref('mrp_request.mrp_request_line_view_graph')}),
                ]"/>
        </record>

        <record model="ir.actions.act_window" id="mrp_request_line_product_action">
            <field name="name">Mrp Planned By Line</field>
            <field name="res_model">mrp.request.line.product</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('request_id','!=',False)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('mrp_request.mrp_request_line_product_tree')}),
                (0, 0, {'view_mode': 'pivot', 'view_id': ref('mrp_request.mrp_request_line_product_pivot_view')}),
                (0, 0, {'view_mode': 'calendar', 'view_id': ref('mrp_request.mrp_request_line_product_view_calender')}),
                (0, 0, {'view_mode': 'graph', 'view_id': ref('mrp_request.mrp_request_line_product_view_graph')}),
                ]"/>
        </record>


        <menuitem id="menu_mrp_request_line" name="Planning" parent="main_mrp_request" sequence="3">
            <menuitem id="submenu_mrp_request_line" name="Planning" action="mrp_request_line_action" />
            <menuitem id="submenu_mrp_request_line_product" name="Planning By Line" action="mrp_request_line_product_action" />
        </menuitem>


    </data>
</odoo>