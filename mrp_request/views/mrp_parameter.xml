<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="mrp_parameter_tree">
            <field name="name">mrp.parameter.tree</field>
            <field name="model">mrp.parameter</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="uom_id" options="{'no_open': True, 'no_create': True}"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="mrp_parameter_form">
            <field name="name">mrp.parameter.form</field>
            <field name="model">mrp.parameter</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="uom_id" options="{'no_open': True, 'no_create': True}"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="mrp_parameter_action">
            <field name="name">Parameters</field>
            <field name="res_model">mrp.parameter</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="menu_mrp_parameter" name="Parameters" parent="mrp.menu_mrp_configuration" groups="base.group_system" action="mrp_parameter_action" />

    </data>
</odoo>