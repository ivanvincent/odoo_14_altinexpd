<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="mrp_waste_view_tree">
            <field name="name">mrp.waste.tree</field>
            <field name="model">mrp.waste</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="production_id"/>
                    <field name="workorder_id"/>
                    <field name="waste_categ_id"/>
                    <field name="product_id"/>
                    <field name="product_uom_qty"/>
                    <field name="uom_id"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="mrp_waste_view_form">
            <field name="name">mrp.waste.form</field>
            <field name="model">mrp.waste</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="production_id" options="{'no_open': True, 'no_create': True}"/>
                                <field name="workorder_id" options="{'no_open': True, 'no_create': True}"/>
                                <field name="waste_categ_id" options="{'no_open': True, 'no_create': True}"/>
                            </group>
                            <group>
                                <field name="product_id" options="{'no_open': True, 'no_create': True}"/>
                                <field name="product_uom_qty"/>
                                <field name="uom_id" options="{'no_open': True, 'no_create': True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="mrp_waste_view_action">
            <field name="name">Waste</field>
            <field name="res_model">mrp.waste</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="main_mrp_waste_view" name="MRP Waste" sequence="14" parent="mrp.menu_mrp_reporting" action="mrp_waste_view_action" />

    </data>
</odoo>