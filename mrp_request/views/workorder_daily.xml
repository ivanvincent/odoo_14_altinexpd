<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="workorder_daily_form" model="ir.ui.view">
            <field name="name">workorder.daily.form</field>
            <field name="model">workorder.daily</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="barcode_scan" type="object" string="Scan" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group name="name">
                            <field name="date"/>
                            <field name="employee_id"/>
                            <center>
                                <field name="scanner" widget="qrscanner" invisible="1"/>
                            </center>
                        </group>
                        <notebook>
                            <page string="Workorder Line">
                                <field name="mrp_workorder_line_ids">
                                    <tree>
                                        <field name="date"/>
                                        <field name="workcenter_id" options="{'no_open': True, 'no_create': True}"/>
                                        <field name="machine_id" options="{'no_open': True, 'no_create': True}"/>
                                        <field name="no_machine"/>
                                        <field name="location_id" options="{'no_open': True, 'no_create': True}"/>
                                        <field name="employee_id" options="{'no_open': True, 'no_create': True}"/>
                                        <field name="shift"/>
                                        <field name="product_uom_qty"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="workorder_daily_tree" model="ir.ui.view">
            <field name="name">workorder.daily.tree</field>
            <field name="model">workorder.daily</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="employee_id"/>
                </tree>
            </field>
        </record>

        <record id="workorder_daily_action" model="ir.actions.act_window">
            <field name="name">Workorder Daily</field>
            <field name="res_model">workorder.daily</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="workorder_daily_menu"
            name="Workorder Daily"
            action="workorder_daily_action"
            parent="mrp.mrp_planning_menu_root"
            sequence="12"/>
    
    </data>
    

</odoo>
