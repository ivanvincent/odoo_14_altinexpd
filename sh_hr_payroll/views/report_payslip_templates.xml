<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_payslip">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Pay Slip</h2>
                    <p t-field="o.name"/>

                    <table class="table table-sm table-bordered">
                        <tr>
                            <td><strong>Name</strong></td>
                            <td><span t-field="o.employee_id"/></td>
                            <td><strong>Jabatan</strong></td>
                            <td><span t-field="o.employee_id.job_id"/></td>
                            <td><strong>NIK</strong></td>
                            <td><span t-field="o.employee_id.identification_id"/></td>
                        </tr>
                    </table>

                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Number of Days</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.worked_days_line_ids" t-as="line">
                                <td><span t-field="line.name"/></td>
                                <td><span t-field="line.number_of_days"/></td>
                            </tr>
                        </tbody>
                    </table>

                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <!-- <th>Code</th> -->
                                <th>Name</th>
                                <!-- <th>Quantity/rate</th> -->
                                <!-- <th>Amount</th> -->
                                <th>Catatan</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                                <tr t-foreach="o.line_ids.filtered(lambda line: line.appears_on_payslip and line.code != 'HRN')" t-as="line">
                                <!-- <td><span t-field="line.code"/></td> -->
                                <td><span t-field="line.name"/></td>
                                <td>
                                    <t t-if="line.name == '02.4. Bonus Bulanan'">
                                        <t t-foreach="o.input_line_ids" t-as="i">
                                            <t t-if="i.name == 'Bonus Bulanan'">
                                                <span t-field="i.note"/>
                                            </t>
                                        </t>
                                    </t>
                                    <t t-if="line.name == '05.2. Bonus Tahunan'">
                                        <t t-foreach="o.input_line_ids" t-as="i">
                                            <t t-if="i.name == 'Bonus Tahunan'">
                                                <span t-field="i.note"/>
                                            </t>
                                        </t>
                                    </t>
                                    <t t-if="line.name == '08.1. Potongan Resmi'">
                                        <t t-foreach="o.input_line_ids" t-as="i">
                                            <t t-if="i.name == 'Potongan Resmi'">
                                                <span t-field="i.note"/>
                                            </t>
                                        </t>
                                    </t>
                                </td>
                                <!-- <td><span t-field="line.quantity"/></td> -->
                                <!-- <td><span t-esc="line.amount" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_id.currency_id}"/></td> -->
                                <td><span t-esc="line.total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_id.currency_id}"/></td>

                            </tr>
                        </tbody>
                    </table>

                    <!-- <p class="text-right"><strong>Authorized signature</strong></p> -->
                </div>
            </t>
        </t>
    </t>
</template>
</odoo>
