<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_report_salary_gs" model="report.paperformat">
            <field name="name">Report Salary To GS</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_width">320</field>
            <field name="page_height">190</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">2</field>
            <field name="margin_right">2</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">9</field>
            <field name="dpi">110</field>
        </record>


        <record id="action_report_salary_gs" model="ir.actions.report">
            <field name="name">Laporan GS</field>
            <field name="model">hr.payslip</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sh_hr_payroll.report_salary_gs</field>
            <field name="report_file">sh_hr_payroll.report_salary_gs</field>
            <field name="print_report_name">Laporan gs</field>
            <field name="binding_model_id" ref="model_hr_payslip" />
            <field name="binding_type">report</field>
            <field name="paperformat_id" eval="paperformat_report_salary_gs" />
        </record>

        <template id="report_salary_gs">
            <t t-call="web.basic_layout">
                <div class="page">
                    <center>
                    <h3><b>LAPORAN GAJI KE GITA SARANA</b></h3>
                    </center>
                    
                        <br/>
                    <table class="table-condensed" style="font-size : 20px" width="100%">
                    <thead>
                        <tr class="text-center">
                        <th style="border : 1px solid black; color : white;" rowspan="2">kolom kosong</th>
                        <th style="border : 1px solid black" rowspan="2">Gaji Pokok</th>
                        <th style="border : 1px solid black" colspan="6">Total Tunjangan</th>
                        <th style="border : 1px solid black" colspan="3">Total Iuran BPJS (Perusahaan)</th>
                        <th style="border : 1px solid black" colspan="2">Komponen Tidak Teratur (KTT)</th>
                        <th style="border : 1px solid black" rowspan="2">Gaji Bruto</th>
                        <th style="border : 1px solid black" colspan="4">Total Pengurang</th>
                        <th style="border : 1px solid black" rowspan="2">Gaji Bersih Bulanan</th>
                        <th style="border : 1px solid black" rowspan="2">Gaji Bersih Akumulasi</th>
                        <th style="border : 1px solid black" rowspan="2">PPh 21 Cicilan Sebulan</th>
                        <th style="border : 1px solid black" rowspan="2">PPh 21 Cicilan setelah melampaui PTKP</th>
                        <th style="border : 1px solid black" rowspan="2">PPh 21 SPT</th>
                        <th style="border : 1px solid black" rowspan="2">PPh 21 Kurang Bayar</th>
                        <th style="border : 1px solid black" rowspan="2">Take Home Pay</th>
                        </tr>
                        <tr class="text-center">
                        <th style="border : 1px solid black">Tunjangan Keahlian</th>
                        <th style="border : 1px solid black">Tunjangan Shift 3</th>
                        <th style="border : 1px solid black">Bonus Proyek</th>
                        <th style="border : 1px solid black">Bonus Bulanan</th>
                        <th style="border : 1px solid black">Tunjangan Kesehatan Non BPJS</th>
                        <th style="border : 1px solid black">Tunjangan Bensin</th>
                        <th style="border : 1px solid black">BPJS Kesehatan (Perusahaan)</th>
                        <th style="border : 1px solid black">BPJS JKK (Perusahaan)</th>
                        <th style="border : 1px solid black">BPJS JKM (Perusahaan)</th>
                        <th style="border : 1px solid black">THR</th>
                        <th style="border : 1px solid black">Bonus Tahunan</th>
                        <th style="border : 1px solid black">BPJS JHT (Karyawan)</th>
                        <th style="border : 1px solid black">BPJS JP (Karyawan)</th>
                        <th style="border : 1px solid black">Biaya Jabatan</th>
                        <th style="border : 1px solid black">Potongan Resmi</th>
                        
                        </tr>
                    </thead>
                    </table>
                </div>
            </t>
        </template>
    </data>
</odoo>