<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="reporting_shift_tree">
            <field name="name">reporting.mrp.shift.tree</field>
            <field name="model">reporting.mrp.shift</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="reporting_shift_form">
            <field name="name">reporting.mrp.shift.form</field>
            <field name="model">reporting.mrp.shift</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_calculate" string="Calculate" type="object" icon="fa-history" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" class="oe_inline" placeholder="Report Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="start_date" />
                                <field name="end_date"/>
                            </group>
                            <group>
                                <field name="shift"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Detail">
                                <field name="line_ids">
                                    <tree>
                                        <field name="sale_id"/>
                                        <field name="partner_id"/>
                                        <field name="production_id"/>
                                        <field name="product_id"/>
                                        <field name="color_id"/>
                                        <field name="machine_id"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                        <field name="shift" widget="badge"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="reporting_shift_action">
            <field name="name">Reporting shift</field>
            <field name="res_model">reporting.mrp.shift</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="menu_reporting_shift" name="By Shift" parent="reporting.main_reporting_production" action="reporting_shift_action" />

    </data>
</odoo>