<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="reporting_purchase_order_tree">
            <field name="name">reporting.purchase.order.tree</field>
            <field name="model">reporting.purchase.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="reporting_purchase_order_form">
            <field name="name">reporting.purchase.order.form</field>
            <field name="model">reporting.purchase.order</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_calculate" type="object" string="Calculate" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="start_date"/>
                            </group>
                            <group>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Details">
                                <field name="line_ids">
                                    <tree>
                                        <field name="purchase_id"/>
                                        <field name="partner_id"/>
                                        <field name="po_date"/>
                                        <field name="po_qty" sum="Total"/>
                                        <field name="po_received" sum="Total"/>
                                        <field name="po_remain_qty" sum="Total"/>
                                        <field name="pr_qty" sum="Total"/>
                                        <field name="rr_qty" sum="Total"/>
                                    </tree>
                                    <form>

                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="purchase_id"/>
                                                    <field name="partner_id"/>
                                                    <field name="po_date"/>
                                                    <field name="po_qty"/>
                                                </group>
                                                <group>
                                                    <field name="po_received" />
                                                    <field name="po_remain_qty" />
                                                    <field name="pr_qty" />
                                                    <field name="rr_qty" />
                                                </group>
                                            </group>
                                            <notebook>
                                                <page string="history">
                                                    <field name="history_ids">
                                                        <tree>
                                                            <field name="pr_id"/>
                                                            <field name="rr_id"/>
                                                            <field name="location_id"/>
                                                            <field name="product_id"/>
                                                            <field name="specification"/>
                                                            <field name="pr_qty" sum="Total"/>
                                                            <field name="rr_qty" sum="Total"/>
                                                            <field name="product_uom_id"/>
                                                        </tree>
                                                        <form>
                                                            <sheet>
                                                                <group>
                                                                    <group>
                                                                        <field name="pr_id"/>
                                                                        <field name="rr_id"/>
                                                                        <field name="location_id"/>
                                                                    </group>
                                                                    <group>
                                                                        <field name="product_id"/>
                                                                        <field name="specification"/>
                                                                        <field name="pr_qty"/>
                                                                        <field name="rr_qty"/>
                                                                        <field name="rr_qty"/>
                                                                    </group>
                                                                </group>
                                                            </sheet>
                                                        </form>
                                                    </field>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="reporting_purchase_order_action">
            <field name="name">Purchase Order Report</field>
            <field name="res_model">reporting.purchase.order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="reporting_stock_request_at_po" name="Reporting Request" parent="purchase.purchase_report" action="reporting_purchase_order_action" />



    </data>
</odoo>