<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="reporting_workorder_tree">
            <field name="name">reporting.mrp.workorder.tree</field>
            <field name="model">reporting.mrp.workorder</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="reporting_workorder_form">
            <field name="name">reporting.mrp.workorder.form</field>
            <field name="model">reporting.mrp.workorder</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_calculate" string="Calculate" type="object" icon="fa-history" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" class="oe_inline" placeholder="Report Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="start_date" />
                            </group>
                            <group>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Detail">
                                <field name="line_ids" readonly="1">
                                    <tree >
                                        <field name="sale_id"/>
                                        <field name="partner_id"/>
                                        <field name="production_id"/>
                                        <field name="product_id"/>
                                        <field name="color_id"/>
                                        <field name="workorder_id" invisible="1"/>
                                        <field name="workcenter_id"/>
                                        <field name="machine_id"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="reporting_workorder_action">
            <field name="name">Reporting workorder</field>
            <field name="res_model">reporting.mrp.workorder</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="main_reporting_production" name="Production" parent="reporting.reporting_menu"/>

        <menuitem id="menu_reporting_workorder" name="Rencana Kerja Jet Dyeing" parent="main_reporting_production" action="reporting_workorder_action" />


    </data>
</odoo>