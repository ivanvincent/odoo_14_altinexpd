<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="reporting_stock_lot_tree">
            <field name="name">reporting.stock.lot.tree</field>
            <field name="model">reporting.stock.lot</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="location_id"/>
                    <field name="inventory_id"/>
                    <field name="product_category_id"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record model="ir.ui.view" id="reporting_stock_lot_search">
            <field name="name">reporting.stock.lot.search</field>
            <field name="model">reporting.stock.lot</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="location_id"/>
                    <!-- <filter name="fl_draft" string="Draft" domain="[('state','=', 'draft')]"/>
                  <group>
                      <filter name="gr_pay" string="Bayar Via" context="{'group_by':'payment_method'}"/>
                  </group> -->
                </search>
            </field>
        </record>

