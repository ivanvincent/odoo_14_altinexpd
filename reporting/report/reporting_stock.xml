<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paper_format_reporting_stock" model="report.paperformat">
            <field name="name">Reporting Stock</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <!-- <field name="page_height">0</field>
            <field name="page_width">0</field> -->
            <field name="orientation">Portrait</field>
            <field name="margin_top">45</field>
            <field name="margin_bottom">25</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <report string="Reporting Stock" id="action_reporting_stock" model="reporting.stock" report_type="qweb-pdf"
            name="reporting.reporting_stock" file="reporting.reporting_stock" />

        <record id="action_reporting_stock" model="ir.actions.report">
            <field name="paperformat_id" eval="paper_format_reporting_stock" />
        </record>

        <template id="reporting_stock">
            <t t-call="web.html_container">
                <t t-call="my_report.template_print">
                    <div class="page">
                        <t t-foreach="docs" t-as="o">
                            <div style="font-size : 22px" class="text-center">
                              <span>Tanggal Periode</span>
                              <span>:</span>
                              <span t-field="o.start_date" />
                              <span>-</span>
                              <span t-field="o.end_date" />
                            </div>
                            <table class="table-condensed ; font-size : 18px" width="1000px">
                                <thead>
                                    <tr>
                                        <th style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-center">Product Category</th>
                                        <th style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-center">Kode Barang</th>
                                        <th style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-center">Product</th>
                                        <th style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-center">Variasi</th>
                                        <th style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-center">Uom</th>
                                        <th style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-center">Start</th>
                                        <th style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-center">Qty In</th>
                                        <th style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-center">Qty Out</th>
                                        <th style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-center">Return In</th>
                                        <th style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-center">Return Out</th>
                                        <th style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-center">Adjustment In</th>
                                        <th style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-center">Adjustment Out</th>
                                        <th style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-center">Balance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.line_ids" t-as="l">
                                        <tr>
                                            <td style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-left">
                                                <span t-field="l.categ_id"/>
                                            </td>
                                            <td style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-left">
                                                <span t-field="l.product_code"/>
                                            </td>
                                            <td style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-left">
                                                <span t-field="l.product_id.name"/>
                                            </td>
                                            <td style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-left">
                                                <span t-field="l.variasi"/>
                                            </td>
                                            <td style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-left">
                                                <span t-field="l.uom_id"/>
                                            </td>
                                            <td style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-right">
                                                <span t-esc="'{0:,.2f}'.format(float(l.qty_start))"/>
                                            </td>
                                            <td style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-right">
                                                <span t-esc="'{0:,.2f}'.format(float(l.qty_in))"/>
                                            </td>
                                            <td style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-right">
                                                <span t-esc="'{0:,.2f}'.format(float(l.qty_out))"/>
                                            </td>
                                            <td style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-right">
                                                <span t-esc="'{0:,.2f}'.format(float(l.return_in))"/>
                                            </td>
                                            <td style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-right">
                                                <span t-esc="'{0:,.2f}'.format(float(l.return_out))"/>
                                            </td>
                                            <td style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-right">
                                                <span t-esc="'{0:,.2f}'.format(float(l.adjustment_in))"/>
                                            </td>
                                            <td style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-right">
                                                <span t-esc="'{0:,.2f}'.format(float(l.adjustment_out))"/>
                                            </td>
                                            <td style="border : 1px solid black ; padding-left : 10px ; padding-right : 10px" class="text-right">
                                                <span t-esc="'{0:,.2f}'.format(float(l.qty_balance))"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </template>

    </data>
</odoo>