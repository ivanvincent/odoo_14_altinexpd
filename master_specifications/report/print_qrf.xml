<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record model="report.paperformat" id="paperformat_print_qrf">
            <field name="name">paperformat.receipt.a4</field>
            <field name="default" eval="False" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">45</field>
            <field name="margin_bottom">10</field>
            <field name="margin_right">7</field>
            <field name="margin_left">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <record id="action_qrf_report" model="ir.actions.report">
                <field name="name">Quotation Request Form Report</field>
                <field name="model">quotation.request.form</field>
                <field name="report_name">master_specifications.print_qrf</field>
                <field name="report_file">master_specifications.print_qrf</field>
                <field name="print_report_name">'%s' % object.name</field>
                <field name="binding_model_id" ref="model_quotation_request_form"/>
                <field name="binding_type">report</field>
                <field name="paperformat_id" eval="paperformat_print_qrf"/>
        </record>

        <template id="print_qrf">
            <t t-call="web.basic_layout">
                <style>
                    table-data {
                        border: 1px solid black;
                        text-align: center;
                        margin-bottom: 1rem;
                        border-collapse: collapse;
                    }

                    .table-data th,
                    .table-data td {
                        border: 1px solid black;
                        padding: 0;
                        border-collapse: collapse;
                    }
                </style>
                <t t-foreach="docs" t-as="doc">
                    <t t-if="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id" />
                    </t>
                    <t t-if="not o or not 'company_id' in o">
                        <t t-set="company" t-value="res_company" />
                    </t>


                    <!-- <div class="header"> -->
                        <div class="row mt32">
                            <div class="col-6">
                                <div class="col-xs-1" style="margin-left: -10px">
                                    <img src="/web/binary/company_logo"
                                        style="width : 250px; height:65px; padding-top:-4px;" align="left" />
                                </div>
                            </div>
                            <div class="col-6" style="margin-top: 20px">
                            <span style="text-align: right; font-size: 20px">QUOTATION REQUEST FORM REPORT</span>
                            </div>
                        </div>
                        <br />
                        <div class="row mt32">
                            <div class="col-6">
                                <div style="border: 1px solid black; border-radius: 0px;">
                                    <span
                                        style="padding-left:10px; padding-bottom:5px; font-size:16px; height:1px; margin:0; padding-top:0; padding-bottom:0;"><strong>PT.
                                            ALTINEX</strong></span><br />
                                    <!--<div class="line" style="border-bottom: thin solid #222;"/>-->
                                    <span
                                        style="padding-left:10px; font-size:14px; height:1px; margin:0; padding-top:0; padding-bottom:0;">Jalan
                                        Panghegar No.7, Mekarmulya, Gedebage, Bandung 40614</span><br />
                                    <span
                                        style="padding-left:10px; font-size:14px; height:1px; margin:0; padding-top:0; padding-bottom:0;">Telepon
                                        : (022)87880241 / (022)87880243 </span><br />
                                    <span
                                        style="padding-left:10px; font-size:14px; height:1px; margin:0; padding-top:0; padding-bottom:0;">Fax
                                        : (022)7803989 </span>
                                </div>
                            </div>
                            <!-- <div class="col-1" /> -->
                            <div class="col-6">
                                <div style="border: 1px solid black; border-radius: 0px; font-size:16px;">
                                    <table class="table-condensed" width="100%">
                                        <tr>
                                            <td width="20%" style=" padding-left:10px;">Tanggal</td>
                                            <td>
                                                <span>:</span>
                                                <span t-field="doc.date"
                                                    t-options="{&quot;widget&quot;: &quot;date&quot;,&quot;format&quot;: &quot;dd/MM/yyyy&quot;}" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td width="20%" style="padding-left:10px;">Nomor</td>
                                            <td>
                                                <span>:</span>
                                                <span t-field="doc.name" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td width="40%" style="padding-left:10px;">Berlaku
                                                Sampai
                                            </td>
                                            <td>
                                                <span>:</span>
                                                <!-- <span t-field="doc.tanggal_berlaku"
                                                    t-options="{&quot;widget&quot;: &quot;date&quot;,&quot;format&quot;: &quot;dd/MM/yyyy&quot;}" /> -->
                                            </td>
                                        </tr>
                                        <tr>
                                            <td width="20%" style="padding-left:10px;">Mesin</td>
                                            <td>
                                                <span>:</span>
                                                <span t-field="doc.machine_id.name" />
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row mt32" style="margin-top:6px;">
                            <div class="col-7">
                                <div style="border: 1px solid black; border-radius: 0px; font-size:14px">
                                    <table class="table-condensed" width="100%">
                                        <tr>
                                            <td width="13%" style="padding-left:px;">Kepada</td>
                                            <td>
                                                <span>:</span>
                                                <span class="font-weight-bold" t-field="doc.partner_id" /> <br />
                                                <!-- <span t-field="doc.partner_id.street" style="padding:0;" /><br /> -->
                                                <!-- <span></span> -->
                                            </td>
                                        </tr>
                                        <tr>
                                            <td width="13%" style="padding-left:5px;">Attn</td>
                                            <td>
                                                <span>:</span>
                                                <!-- <span t-esc="doc.up_kpd.name" /> -->
                                            </td>
                                        </tr>
                                        <tr>
                                            <td width="13%" style="padding-left:5px;">Email</td>
                                            <td>
                                                <span>:</span>
                                                <!-- <span t-esc="doc.up_kpd.email" /> -->
                                            </td>
                                        </tr>
                                        <tr>
                                            <td width="13%" style=" padding-left:5px;">Perihal</td>
                                            <td>
                                                <span>:</span>
                                                <span t-esc="doc.perihal" />
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                        </div>

                        <br />

                        <div class="row mt32">
                            <div class="col-12">
                        
                            <table width="100%" class="table-data"
                                style="border: 1px solid black; text-align: center; margin-bottom: 1rem; border-collapse: collapse; font-size: 14px;">
                                <thead>
                                    <tr>
                                        <td style="border : 1px solid black" class="text-center">
                                            <span><strong>Jenis</strong></span>
                                        </td>
                                        <td  style="border : 1px solid black" class="text-center">
                                            <span><strong>Description</strong></span>
                                        </td>
                                        <td  style="border : 1px solid black" class="text-center">
                                            <span><strong>Spesifikasi</strong></span>
                                        </td>
                                        <td  style="border : 1px solid black" class="text-center">
                                            <span><strong>Nama Spesifikasi</strong></span>
                                        </td>
                                        <td  style="border : 1px solid black" class="text-center">
                                            <span><strong>Desc</strong></span>
                                        </td>
                                        <td  style="border : 1px solid black" class="text-center">
                                            <span><strong>Price Unit</strong></span>
                                        </td>
                                        <td  style="border : 1px solid black" class="text-center">
                                            <span><strong>Quantity</strong></span>
                                        </td>
                                        <td  style="border : 1px solid black" class="text-center">
                                            <span><strong>Sub Total</strong></span>
                                        </td>
                                    </tr>
                                </thead>
                                <tbbody>
                                   <t t-foreach="doc.line_ids" t-as="line">
                                       <tr>
                                           <td style="border : 1px solid black" class="text-center">
                                               <strong>
                                                   <a style="color: #000 !important;" t-esc="line.jenis_id.name" view-type="form" res-model="master.jenis" t-att-res-id="line.jenis_id.id"/>
                                               </strong>
                                           </td>
                                           <td style="border : 1px solid black" width="20%">
                                               <strong>
                                                   <a style="color: #000 !important;" t-esc="line.name" view-type="form"/>
                                               </strong>
                                           </td>
                                           <td>
                                           </td>
                                           <td>
                                           </td>
                                           <td>
                                           </td>
                                           <td style="border : 1px solid black" class="text-right" width="11%">Rp.
                                               <strong>
                                                   <span t-esc="'{0:,.0f}'.format(line.price_unit)"/>
                                               </strong>
                                           </td>
                                           <td style="border : 1px solid black" class="text-center">
                                               <strong>
                                                   <span t-esc="line.quantity"/>
                                               </strong>
                                           </td>
                                           <td style="border : 1px solid black" class="text-right" width="11%">Rp.
                                               <strong>
                                                   <span t-esc="'{0:,.0f}'.format(line.sub_total)"/>
                                               </strong>
                                           </td>

                                       </tr>
                                        
                                       <t t-set="name_spec" t-value=""/>
                                       <tr t-foreach="line.line_spec_ids.sorted(key=lambda b: b.specifications_id.spec_id.name)" t-as="spec">
                                           <td class="text-center">
                                           </td>
                                           <td class="text-center">
                                           </td>
                                           <t t-set="len_spec" t-value="len(line.line_spec_ids.filtered(lambda x: x.specifications_id.spec_id.name == spec.specifications_id.spec_id.name))"/>
                                           <t t-if="name_spec != spec.specifications_id.spec_id.name">
                                             <td style="border : 1px solid black" class="text-center" t-att-rowspan="len_spec">
                                               <span t-esc="spec.specifications_id.spec_id.name"/>
                                             </td>
                                             <t t-set="name_spec" t-value="spec.specifications_id.name"/>
                                           </t>
                                           <td style="border : 1px solid black" class="text-center">
                                               <span t-esc="spec.specifications_id.desc"/>
                                           </td>
                                           <td style="border : 1px solid black" class="text-center">
                                               <span t-esc="spec.spect_name"/>
                                           </td>
                                           <td style="border : 1px solid black" class="text-right" width="11%">Rp.
                                               <span t-esc="'{0:,.0f}'.format(spec.harga)"/>
                                           </td>
                                           <td>
                                           </td>
                                           <td>
                                              
                                           </td>
                                       </tr>
                                   </t>
                                </tbbody>
                                
                            </table>
                            </div>
                        </div>


                        <div class="row">
                            <br />
                            <span style="text-align: left; font-size: 16px; padding-left:30px;">Hormat Kami,</span>
                            <br /><br /><br /><br />
                            <span
                                style="text-align: left; font-size: 16px; padding-left:30px; height:0.5px; margin:0; padding-top:0; padding-bottom:0; background-color:none;">Novi
                                Lidya</span><br />
                            <span
                                style="text-align: left; font-size: 16px; padding-left:30px; height:0.5px; margin:0; padding-top:0; padding-bottom:0; background-color:none;">Sales
                                Admin</span><br />
                            <span
                                style="text-align: left; font-size: 16px; padding-left:30px; height:0.5px; margin:0; padding-top:0; padding-bottom:0; background-color:none;">+6289661966550</span><br />
                            <span
                                style="text-align: left; font-size: 16px; padding-left:30px; height:0.5px; margin:0; padding-top:0; padding-bottom:0; background-color:none;">PT.ALTINEX</span><br />
                            <span
                                style="text-align: left; font-size: 16px; padding-left:30px; height:0.5px; margin:0; padding-top:0; padding-bottom:0; background-color:none;">sales@altinex.co</span><br />
                        </div>



                    <!-- </div> -->

                    <br /><br />

                </t>
            </t>
        </template>



    </data>
</odoo>