<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="master_opc_form" model="ir.ui.view">
            <field name="name">master.opc.form</field>
            <field name="model">master.opc</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="type"/>
                                <field name="opc_id"/>
                            </group>
                            <group>
                                <field name="fabric_code"/>
                                <field name="handling_id"/>
                                <field name="category_design"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="line">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="qty"/>
                                        <field name="uom_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="master_opc_tree" model="ir.ui.view">
            <field name="name">master.opc.tree</field>
            <field name="model">master.opc</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="opc_id"/>
                    <field name="line_ids"/>
                </tree>
            </field>
        </record>

        <record id="master_opc_lab_action" model="ir.actions.act_window">
            <field name="name">Master Opc Lab</field>
            <field name="res_model">master.opc</field>
            <field name="context">{'default_type': 'lab'}</field>
            <field name="domain">[('type', '=', 'lab')]</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="master_opc_finish_action" model="ir.actions.act_window">
            <field name="name">Master Opc Finish</field>
            <field name="res_model">master.opc</field>
            <field name="context">{'default_type': 'finish'}</field>
            <field name="domain">[('type', '=', 'finish')]</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="master_opc_lab_menu"
            name="Master Opc Lab"
            action="master_opc_lab_action"
            parent="menu_master"
            sequence="240"/>

        <menuitem
            id="master_opc_finish_menu"
            name="Master Opc Finish"
            action="master_opc_finish_action"
            parent="menu_master"
            sequence="241"/>
    
    </data>
    

</odoo>
