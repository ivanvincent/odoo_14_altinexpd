<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="process_chemical_type_tree">
            <field name="name">process.chemical.type.tree</field>
            <field name="model">process.chemical.type</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="process_chemical_type_form">
            <field name="name">process.chemical.type.form</field>
            <field name="model">process.chemical.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="process_chemical_type_action">
            <field name="name">Process Chemical Type</field>
            <field name="res_model">process.chemical.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="brightness_color_menu" name="Process Chemical Type" action="process_chemical_type_action" parent="menu_master"/>

    </data>
</odoo>