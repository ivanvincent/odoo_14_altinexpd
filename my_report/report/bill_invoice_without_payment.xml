<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record model="report.paperformat" id="paperformat_bill_invoice_without_payment">
            <field name="name">Bill Invoice Without Payment</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_width">210</field>
            <field name="page_height">300</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">0</field>
            <field name="margin_right">5</field>
            <field name="margin_left">5</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <report id="action_report_bill_invoice_without_payment" model="account.move" string="Bill Invoices Without Payment"
                report_type="qweb-pdf" name="my_report.report_bill_invoice_without_payment" file="my_report.report_bill_invoice_without_payment" />
        
        <record id="action_report_bill_invoice_without_payment" model="ir.actions.report">
            <field name="paperformat_id" eval="paperformat_bill_invoice_without_payment" />
        </record>
        
        <template id="report_bill_invoice_without_payment">
             <t t-call="web.basic_layout">
              <t t-foreach="docs" t-as="o">
                
                <div class="header">
                        <div class="row mt32">
                            <div class="col-6">
                              <div class="col-xs-1" style="margin-left: -10px">
                                <img src="/web/binary/company_logo" style="width : 100px; height:100px; padding-top:2px;" align="left"/>
                              </div>
                              </div>
                              <div class="col-6">
                              <div class="col-xs-8 col-xs-offset-1 font-small" align="right">
                                <span style="padding-left:10px; padding-bottom:5px; font-size:18px"><strong>PT. ALTINEX</strong></span><br/>
                                <!--<div class="line" style="border-bottom: thin solid #222;"/>-->
                                <span style="padding-left:10px; font-size:16px">Jl. Panghegar No.7, Kota Bandung, 40613</span><br/>
                                <span style="padding-left:10px; font-size:16px">JAWA BARAT - INDONESIA</span>
                              </div>
                            </div>
                            <!--<div class="col-5" align="right">-->
                            <!--        <span style="padding-right:10px; padding-bottom:5px; font-size:23px; font-weight: bold; background-color:  #3498DB;">-->
                            <!--          <strong>REQUEST FOR QUOTATION</strong></span><br/>-->
                            <!--        <span t-field="o.name" style="padding-right:10px; padding-bottom:5px; font-size:22px; background-color:  #3498DB;"/>-->
                            <!--</div>-->
                        </div>
                        <br/>
                        <div class="row mt32">
                          <div class="col-12">
                            <h4 class="text-center">
                                  <b>BILL INVOICE</b>
                            </h4>
                            <h5 class="text-center">
                                  <span t-field="o.name" style="padding-right:10px; padding-bottom:5px; font-size:22px; align:center" />
                            </h5>
                          </div>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    
                    <div class="line" style="border-bottom: thin solid #DCDCDC;"/>
                    <br/>
                    
                            <div class="row">
                                <div class="col-6">
                                    <table border="1" style="font-size:16px" width="100%">
                                        <tr style="padding-bottom:0;">
                                            <td style="padding-bottom:0; font-size:16px;"><strong>Vendor</strong></td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                            <td style="padding-bottom:0; padding-left:5px; font-size:16px; padding-right:5px;"> <span t-field="o.partner_id"/></td>
                                            <!--<td style="padding-bottom:0; padding-left:5px; font-size:16px; padding-right:5px;"> <span t-field="o.date_start" t-field-options="{&quot;format&quot;: &quot;dd-MMM-yyyy&quot;}"/></td>-->
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:16px;"><strong>Address</strong></td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                            <!--<td style="padding-bottom:0; padding-left:5px; font-size:16px;"><span t-field="o.requested_by"/></td>-->
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:16px;"><strong>Phone</strong></td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                            <!--<td style="padding-bottom:0; padding-left:5px; font-size:16px;"><span t-field="o.assigned_to" /></td>-->
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-6" style="background-color: #E6E6FA;">
                                    <table border="1" style="font-size:16px" width="100%">
                                        <tr style="padding-bottom:0;">
                                            <td style="padding-bottom:0; font-size:16px;"><strong>Bill Date</strong></td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                            <td style="padding-bottom:0; padding-left:5px; font-size:16px; padding-right:5px;"> <span t-field="o.invoice_date"/></td>
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:16px;"><strong>Accounting Date</strong></td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                            <td style="padding-bottom:0; padding-left:5px; font-size:16px;"><span t-field="o.date"/></td>
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:16px;"><strong>Due Date</strong></td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                            <td style="padding-bottom:0; padding-left:5px; font-size:16px;"><span t-field="o.invoice_payment_term_id"/></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                    
                    <table class="table table-condensed" style="margin-top:10px; font-size:15px;">
                                <thead>
                                    <th>No</th>
                                    <th>Product</th>
                                    <th>Description</th>
                                    <th>Qty</th>
                                    <th>Unit</th>
                                    <th>Price Unit</th>
                                    <th>Amount</th>
                                </thead>
                                <tbody>
                                    <t t-set="no" t-value="1"/>
                                    <tr t-foreach="o.invoice_line_ids" t-as="line">
                                        <td style="padding-bottom: 3px; padding-top: 3px;">
                                            <span t-esc="no"/>
                                            <t t-set="no" t-value="no + 1"/>
                                        </td>
                                        <td style="padding-bottom: 3px; padding-top: 3px;">
                                            <span t-field="line.product_id"/>
                                        </td>
                                        <td style="padding-bottom: 3px; padding-top: 3px;">
                                            <span t-field="line.name"/>
                                        </td>
                                        <td style="padding-bottom: 3px; padding-top: 3px;">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td style="padding-bottom: 3px; padding-top: 3px;">
                                            <span t-field="line.product_uom_id"/>
                                        </td>
                                        <td style="padding-bottom: 3px; padding-top: 3px;" align="right">
                                            <span t-field="line.price_unit"/>
                                            <!--<span t-field="line.date_required" t-field-options="{&quot;format&quot;: &quot;dd-MMM-yyyy&quot;}"/>-->
                                        </td>
                                        <td style="padding-bottom: 3px; padding-top: 3px;" align="right">
                                            <span t-field="line.price_subtotal"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            
                            <br/>
                            <br/>
                            
                            <div class="row">
                            <div class="col-6">
                              <span>NOTE : </span>
                              </div>
                            <div class="col-6">
                              <table class="table table-condensed" width="100%" style="font-size:16px;">
                                <!--<t t-foreach="o.invoice_line_ids" t-as="line" style="background-color: #E6E6FA;">-->
                                <tr style="padding-bottom:0; background-color: #E6E6FA;" align="right">
                                    <td style="padding-bottom: 3px; padding-top: 3px; background-color: #E6E6FA;"><strong>Untaxed Amount</strong></td>
                                    <td style="padding-bottom: 3px; padding-top: 3px; padding-left:5px; font-size:16px; padding-right:5px;"> 
                                      <span t-field="o.amount_untaxed"/> 
                                    </td>
                                </tr>
                                <tr style="padding-bottom:0; background-color: #E6E6FA;" align="right">
                                    <td style="padding-bottom: 3px; padding-top: 3px; background-color: #E6E6FA;"><strong>Tax</strong></td>
                                    <td style="padding-bottom: 3px; padding-top: 3px; padding-left:5px; font-size:16px; padding-right:5px;" align="right">
                                      <span t-widget="tax-group-custom-field"/> 
                                      <!--<span t-field="o.amount_by_group"/>-->
                                    </td>
                                </tr>
                                <tr style="padding-bottom:0; background-color: #E6E6FA;" align="right">
                                    <td style="padding-bottom: 3px; padding-top: 3px; background-color: #E6E6FA;"><strong>Total</strong></td>
                                    <td style="padding-bottom: 3px; padding-top: 3px; padding-left:5px; font-size:16px; padding-right:5px;" align="right"> 
                                      <span t-field="o.amount_total"/> 
                                    </td>
                                </tr>
                                <tr style="padding-bottom:0; background-color: #E6E6FA;" align="right">
                                    <td style="padding-bottom: 3px; padding-top: 3px; background-color: #E6E6FA;"><strong>Amount On</strong></td>
                                    <td style="padding-bottom: 3px; padding-top: 3px; padding-left:5px; font-size:16px; padding-right:5px;" align="right"> 
                                      <span t-field="o.amount_residual"/> 
                                    </td>
                                </tr>
                                <!--</t>-->
                              </table>
                           </div>
                      </div>
                      
                      <br/>
                      <br/>
                      
                      <table class="table table-condensed" width="100%" style="font-size:13px;">
                            <thead>
                                <tr>
                                    <td>
                                        <center>
                                            MENYETUJUI,
                                            <br /><br /><br /><br /><br />
                                            <span>(</span>
                                            <span style="padding-left: 65px; padding-right: 65px;"></span>
                                            <span>)</span>

                                        </center>
                                    </td>
                                    <td>
                                        <center>
                                            DIMINTA OLEH,
                                            <br /><br /><br /><br /><br />
                                            <span>(</span>
                                            <span style="padding-left: 65px; padding-right: 65px;"></span>
                                            <span>)</span>
                                        </center>
                                    </td>
                                </tr>
                            </thead>
                        </table>
                      
                      
                      
