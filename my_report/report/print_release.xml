<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record model="report.paperformat" id="pengeluaran_a5">
            <field name="name">paperformat.pengeluaran.a5</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_width">210</field>
            <field name="page_height">140</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">5</field>
            <field name="margin_right">5</field>
            <field name="margin_left">5</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <report id="action_report_stock_picking_release" model="stock.picking" string="Print Release"
            report_type="qweb-pdf" name="my_report.report_stock_picking_release"
            file="my_report.report_stock_picking_release" />

        <record id="action_report_stock_picking_release" model="ir.actions.report">
            <field name="paperformat_id" eval="pengeluaran_a5" />
        </record>

        <template id="report_stock_picking_release">
            <t t-call="web.basic_layout">
                <style>
                    .table-data,
                    .table-data th {
                        border: 1px solid black;
                    }

                    .table-data .tr-body td {
                        border-left: 1px solid black;
                        border-right: 1px solid black;
                        padding-top: 5px;
                        padding-bottom: 5px;
                    }

                    .tr-foot .td-foot {
                        border: 1px solid black;
                    }
                </style>
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <div class="title text-center">
                            <h5 class="font-weight-bold">BON PENGELUARAN BARANG</h5>
                        </div>
                        <table class="table-condensed" width="100%">
                            <tr>
                                <td width="15%">No Bukti</td>
                                <td width="2%">:</td>
                                <td width="45%">
                                    <span t-field="doc.name" />
                                </td>
                                <td t-if="doc.picking_type_id.warehouse_id.id != 7" width="15%">Pelanggan</td>
                                <td t-if="doc.picking_type_id.warehouse_id.id != 7" width="3%">:</td>
                                <td t-if="doc.picking_type_id.warehouse_id.id != 7" width="20%">
                                    <span t-field="doc.partner_id.name" />
                                </td>
                            </tr>
                            <tr>
                                <td>Tanggal Keluar</td>
                                <td>:</td>
                                <td>
                                    <span t-field="doc.scheduled_date" />
                                </td>
                                <td width="15%">Keterangan</td>
                                <td width="3%">:</td>
                                <td width="20%" />
                            </tr>
                            <tr>
                                <td>Departemen</td>
                                <td>:</td>
                                <td>
                                    <span t-field="doc.location_dest_id.location_id" />
                                </td>
                                <td>Source Document</td>
                                <td>:</td>
                                <td>
                                    <span t-if="doc.picking_type_id.warehouse_id.id != 7" t-field="doc.origin" />
                                </td>
                            </tr>
                        </table>
                        <table t-if="doc.picking_type_id.warehouse_id.id != 7" class="table-data table-condensed"
                            width="1000px">
                            <thead>
                                <tr class="text-center">
                                    <th>NO</th>
                                    <th>KODE</th>
                                    <th>NAMA BARANG</th>
                                    <th>QTY</th>
                                    <th>SAT</th>
                                    <th>KETERANGAN</th>
                                    <th>NO PB</th>
                                    <th>No Mesin</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="no" t-value="0" />
                                <t t-set="tot_qty" t-value="0" />
                                <tr t-foreach="doc.move_ids_without_package" t-as="line" class="tr-body">
                                    <t t-set="no" t-value="no + 1" />
                                    <t t-set="tot_qty" t-value="tot_qty + line.quantity_done" />
                                    <td class="text-center">
                                        <span t-esc="no" />
                                    </td>
                                    <td style="padding-left : 10px">
                                        <span t-field="line.product_id.default_code" />
                                    </td>
                                    <td style="padding-left : 10px">
                                        <span t-field="line.product_id.name" />
                                    </td>
                                    <td class="text-right pr-2">
                                        <span t-esc="'{0:,.4f}'.format(float(line.quantity_done))" />
                                    </td>
                                    <td style="padding-left : 10px">
                                        <span t-field="line.product_uom" />
                                    </td>
                                    <td style="padding-left : 10px">
                                        <span t-field="line.x_ket" />
                                    </td>
                                    <td />
                                    <td />
                                </tr>
                            </tbody>
                        </table>

                        <!--BENANG-->
                        <table t-if="doc.picking_type_id.warehouse_id.id == 7" class="table-data table-condensed"
                            width="1000px">
                            <thead>
                                <tr class="text-center">
                                    <th>NO</th>
                                    <th>KODE</th>
                                    <th>NAMA BARANG</th>
                                    <th>VARIASI</th>
                                    <th>LOT</th>
                                    <th>SUPPLIER</th>
                                    <th>QTY</th>
                                    <th>SAT</th>
                                    <th>KETERANGAN</th>
                                    <th>NO PB</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="no" t-value="0" />
                                <t t-set="tot_qty" t-value="0" />
                                <tr t-foreach="doc.move_line_ids_without_package" t-as="line" class="tr-body">
                                    <t t-set="no" t-value="no + 1" />
                                    <t t-set="tot_qty" t-value="tot_qty + line.qty_done" />
                                    <td class="text-center">
                                        <span t-esc="no" />
                                    </td>
                                    <td style="padding-left : 5px" class="text-left">
                                        <span t-field="line.product_id.default_code" />
                                    </td>
                                    <td style="padding-left : 5px" class="text-left">
                                        <span t-field="line.product_id.name" />
                                    </td>
                                    <td style="padding-left : 5px" class="text-left">
                                        <span t-field="line.variasi" />
                                    </td>
                                    <td style="padding-left : 5px" class="text-left">
                                        <span t-field="line.lot_id.name" />
                                    </td>
                                    <td style="padding-left : 5px" class="text-left">
                                        <span t-field="line.supplier_id" />
                                    </td>
                                    <td style="padding-right : 5px" class="text-right">
                                        <span t-esc="'{0:,.4f}'.format(float(line.qty_done))" />
                                    </td>
                                    <td style="padding-left : 5px" class="text-left">
                                        <span t-field="line.product_uom_id" />
                                    </td>
                                    <td style="padding-left : 5px" class="text-left">
                                        <span t-field="line.keterangan" />
                                    </td>
                                    <td style="padding-left : 5px" class="text-left">
                                        <span t-field="doc.request_requisition_id" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!--<div class="footer">-->
                        <div class="row text-center" style="margin-top : 20px">
                            <div class="col-4">
                                <span>Dibuat Oleh</span>
                                <br />
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')" />
                                <br />
                                <span class="d-block mt-5">( <span t-field="doc.user_id" />)</span>
                            </div>
                            <div class="col-4">
                                <span>Disetujui Oleh</span>
                                <br />
                                <span />
                                <br />
                                <span class="d-block mt-5">(______________)</span>
                            </div>
                            <div class="col-4">
                                <span>Nama Jelas Wajib Dicantumkan</span>
                                <br />
                                <span>Diterima Oleh</span>
                                <br />
                                <span class="d-block mt-5">(______________)</span>
                            </div>
                        </div>
                        <!--</div>-->
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>