<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <report
            id="action_report_purchase_request"
            model="purchase.request"
            string="Print Purchase Request"
            report_type="qweb-pdf"
            name="my_report.report_purchase_request"
            file="my_report.report_purchase_request"
        />
    
        <template id="report_purchase_request">
             <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <!-- <t t-if="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id"></t>
                    </t>
                    <t t-if="not o or not 'company_id' in o">
                        <t t-set="company" t-value="res_company"></t>
                    </t> -->
                    <div class="header">
                        <div class="row mt32">
                            
                            <div class="col-7">
                              <div class="col-xs-1" style="margin-left: -10px">
                                <img src="/web/binary/company_logo" style="width : 100px; height:100px; padding-top:2px;" align="left"/>
                              </div>
                              <div class="col-xs-8 col-xs-offset-1 font-small">
                                <span style="padding-left:10px; padding-bottom:5px; font-size:18px"><strong>PT. ALTINEX</strong></span><br/>
                                <!--<div class="line" style="border-bottom: thin solid #222;"/>-->
                                <span style="padding-left:10px; font-size:16px">Jl. Panghegar No.7, Kota Bandung, 40613</span><br/>
                                <span style="padding-left:10px; font-size:16px">JAWA BARAT - INDONESIA</span>
                              </div>
                            </div>
                            <div class="col-5" align="right">
                                    <span style="padding-right:10px; padding-bottom:5px; font-size:23px; font-weight: bold"><strong>PURCHASE REQUEST</strong></span><br/>
                                    <span style="padding-right:10px; font-size:21px">No. </span>
                            </div>
                        </div>
                    </div>
                    
                   <div class="line" style="border-bottom: thin solid #DCDCDC;"/>
                        
                    
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <div class="row">
                                <div class="col-6">
                                    <table border="1" style="font-size:16px" width="50%">
                                        <tr style="padding-bottom:0;">
                                            <td style="padding-bottom:0; font-size:16px;"><strong>Date</strong></td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                            <td style="padding-bottom:0; padding-left:5px; font-size:16px; padding-right:5px;"> <span t-field="o.date_start" t-field-options="{&quot;format&quot;: &quot;dd-MMM-yyyy&quot;}"/></td>
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:16px;"><strong>PR NO</strong></td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                            <td style="padding-bottom:0; padding-left:5px; font-size:16px;"><span t-field="o.name"/></td>
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:16px;"><strong>Requested</strong></td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                            <td style="padding-bottom:0; padding-left:5px; font-size:16px;"><span t-field="o.requested_by"/></td>
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:16px;"><strong>Approver</strong></td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                            <td style="padding-bottom:0; padding-left:5px; font-size:16px;"><span t-field="o.assigned_to" /></td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-6" style="font-size:16px">
                                    <table border="1" style="font-size:13px" width="50%">
                                        <tr style="padding-bottom:0;">
                                            <td style="padding-bottom:0; font-size:16px;"><strong>Source Document</strong></td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                            <td style="padding-bottom:0; padding-left:5px; font-size:16px; padding-right:5px;"> <span t-field="o.origin"/></td>
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:16px;"><strong>Description</strong></td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                            <td style="padding-bottom:0; padding-left:5px; font-size:16px;"><span t-field="o.description"/></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                  
                              <table class="table table-condensed" style="margin-top:10px; font-size:15px;">
                                <thead>
                                    <th>No</th>
                                    <th>Product</th>
                                    <th>Description</th>
                                    <th>Qty</th>
                                    <th>Unit</th>
                                    <th>Request Date</th>
                                    <!--<th>Estimated Cost</th>-->
                                </thead>
                                <tbody>
                                    <t t-set="no" t-value="1"/>
                                    <tr t-foreach="o.line_ids" t-as="line" style="background-color: #E6E6FA;">
                                        <td style="padding-bottom: 3px; padding-top: 3px;">
                                            <span t-esc="no"/>
                                            <t t-set="no" t-value="no + 1"/>
                                        </td>
                                        <td style="padding-bottom: 3px; padding-top: 3px;">
                                            <span t-field="line.product_id"/>
                                        </td>
                                        <td style="padding-bottom: 3px; padding-top: 3px;">
                                            <span t-field="line.name"/>
                                        </td>
                                        <td style="padding-bottom: 3px; padding-top: 3px;">
                                            <span t-field="line.product_qty"/>
                                        </td>
                                        <td style="padding-bottom: 3px; padding-top: 3px;">
                                            <span t-field="line.product_uom_id"/>
                                        </td>
                                        <td style="padding-bottom: 3px; padding-top: 3px;">
                                            <span t-field="line.date_required" t-field-options="{&quot;format&quot;: &quot;dd-MMM-yyyy&quot;}"/>
                                        </td>
                                        <!--<td>-->
                                        <!--    <span t-field="line.estimated_cost"/>-->
                                        <!--</td>-->
                                    </tr>
                                </tbody>
                            </table>
                            <br/>
                            <br/>
                            
                           
                            
                            <table class="table table-condensed" width="100%" style="font-size:13px;">
                            <thead>
                                <tr>
                                    <td>
                                        <center>
                                            MENYETUJUI,
                                            <br /><br /><br /><br /><br />
                                            <span>(</span>
                                            <span style="padding-left: 65px; padding-right: 65px;"></span>
                                            <span>)</span>

                                        </center>
                                    </td>
                                    <td>
                                        <center>
                                            DIMINTA OLEH,
                                            <br /><br /><br /><br /><br />
                                            <span>(</span><span class="pl-5 pr-5"
                                                t-field="o.requested_by" /><span>)</span>
                                        </center>
                                    </td>
                                    
                                </tr>
                            </thead>
                        </table>

                        <div class="line" style="border-bottom: thin solid #DCDCDC;"/>
                        </div>
                   </t> 
                </t>
            </t>
        </template>
    
    </data>
    

</odoo>
