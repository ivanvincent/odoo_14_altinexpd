<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <report
            id="action_report_purchase_request"
            model="purchase.request"
            string="Print Purchase Request"
            report_type="qweb-pdf"
            name="my_report.report_purchase_request"
            file="my_report.report_purchase_request"
        />
    
        <template id="report_purchase_request">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <!-- <t t-if="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id"></t>
                    </t>
                    <t t-if="not o or not 'company_id' in o">
                        <t t-set="company" t-value="res_company"></t>
                    </t> -->
                    <div class="header">
                        <div class="row mt32">
                            <div class="col-12">
                                <div class="col-xs-1" style="margin-left: -10px">
                                    <img src="/web/binary/company_logo" style="width : 120px; height:120px; padding-top:-10px;"
                                        align="left" />
                                </div>
                                <div class="col-xs-8 col-xs-offset-1 font-small">
                                    <span style="padding-left:10px; padding-bottom:5px;"><strong>PT. MULTI STAR RUKUN ABADI</strong></span><br />
                                    <div class="line" style="border-bottom: thin solid #222;"></div>
                                    <span style="padding-left:10px;">Jl. Rancajigang No 200 Majalaya - Bandung 40382</span><br />
                                    <span style="padding-left:10px;">Telp (022) 5951602</span><br />
                                    <span style="padding-left:10px;">JAWA BARAT - INDONESIA</span>
                                    <!-- <span style="padding-left:10px;"><u><strong>PT. KOMODO TEXTILE</strong></u></span><br />
                                    <span style="padding-left:10px;">JL. RAYA LASWI NO. 2</span><br />
                                    <span style="padding-left:10px;">Telp. (022) 7949009 Fax. (022) 7949008</span><br />
                                    <span style="padding-left:10px;">JAWA BARAT - INDONESIA</span> -->
                                </div>
                            </div>
                            <hr style="width:100%;text-align:left;margin-left:0"/>
                        </div>
                    </div>
                    <t t-call="web.external_layout">
                        <div class="page">
                            <center><span style="display:block; text-align: center; font-size: 20px; padding-bottom: 20px;"><strong>PURCHASE REQUEST</strong></span></center>
                            <div class="row">
                                <div class="col-6">
                                    <table border="1" style="font-size:13px" width="50%">
                                        <tr style="padding-bottom:0;">
                                            <td style="padding-bottom:0; font-size:13px;"><strong>Date</strong></td>
                                            <td style="padding-bottom:0; font-size:13px;"> : </td>
                                            <td style="padding-bottom:0; padding-left:5px; font-size:13px; padding-right:5px;"> <span t-field="o.date_start" t-field-options="{&quot;format&quot;: &quot;dd-MMM-yyyy&quot;}"/></td>
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:13px;"><strong>PR NO</strong></td>
                                            <td style="padding-bottom:0; font-size:13px;"> : </td>
                                            <td style="padding-bottom:0; padding-left:5px; font-size:13px;"><span t-field="o.name"/></td>
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:13px;"><strong>Requested</strong></td>
                                            <td style="padding-bottom:0; font-size:13px;"> : </td>
                                            <td style="padding-bottom:0; padding-left:5px; font-size:13px;"><span t-field="o.requested_by"/></td>
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:13px;"><strong>Approver</strong></td>
                                            <td style="padding-bottom:0; font-size:13px;"> : </td>
                                            <td style="padding-bottom:0; padding-left:5px; font-size:13px;"><span t-field="o.assigned_to" /></td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-6" style="font-size:13px">
                                    <table border="1" style="font-size:13px" width="50%">
                                        <tr style="padding-bottom:0;">
                                            <td style="padding-bottom:0; font-size:13px;"><strong>Source Document</strong></td>
                                            <td style="padding-bottom:0; font-size:13px;"> : </td>
                                            <td style="padding-bottom:0; padding-left:5px; font-size:13px; padding-right:5px;"> <span t-field="o.origin"/></td>
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:13px;"><strong>Description</strong></td>
                                            <td style="padding-bottom:0; font-size:13px;"> : </td>
                                            <td style="padding-bottom:0; padding-left:5px; font-size:13px;"><span t-field="o.description"/></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                              <table class="table table-condensed" style="margin-top:10px;">
                                <thead>
                                    <th>No</th>
                                    <th>Nama Barang</th>
                                    <th>Description</th>
                                    <th>Qty</th>
                                    <th>Request Date</th>
                                    <th>Estimated Cost</th>
                                </thead>
                                <tbody>
                                    <t t-set="no" t-value="1"/>
                                    <tr t-foreach="o.line_ids" t-as="line">
                                        <td>
                                            <span t-esc="no"/>
                                            <t t-set="no" t-value="no + 1"/>
                                        </td>
                                        <td>
                                            <span t-field="line.product_id"/>
                                        </td>
                                        <td>
                                            <span t-field="line.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.product_qty"/>
                                        </td>
                                        <td>
                                            <span t-field="line.date_required" t-field-options="{&quot;format&quot;: &quot;dd-MMM-yyyy&quot;}"/>
                                        </td>
                                        <td>
                                            <span t-field="line.estimated_cost"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <table class="table-condensed" width="100%">
                            <thead>
                                <tr>
                                    <!-- <td class="text-right" colspan="3">BANDUNG, <span t-field="o.request_date" /></td> -->
                                </tr>
                                <tr>
                                    <td>
                                        <center>
                                            MENYETUJUI,
                                            <br /><br /><br /><br /><br />
                                            <span>(</span><span
                                                style="padding-left: 65px; padding-right: 65px;"></span><span>)</span>

                                        </center>
                                    </td>
                                    <td>
                                        <center>
                                            DIMINTA OLEH,
                                            <br /><br /><br /><br /><br />
                                            <span>(</span><span class="pl-5 pr-5"
                                                t-field="o.requested_by" /><span>)</span>
                                        </center>
                                    </td>
                                    <!-- <td>
                                        <center>
                                            YANG MEMERLUKAN,
                                            <br /><br /><br /><br /><br />
                                            <span>(</span><span>)</span>
                                        </center>
                                    </td> -->
                                </tr>
                            </thead>
                        </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    
    </data>
    

</odoo>
