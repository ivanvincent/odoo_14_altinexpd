<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="report.paperformat" id="paperformat_report_staff">
            <field name="name">Report Staff</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_width">70</field>
            <field name="page_height">100</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">5</field>
            <field name="margin_right">5</field>
            <field name="margin_left">5</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
        </record>

        <report id="action_report_staff" model="hr.employee" string="Print ID Card Staff" report_type="qweb-pdf" name="my_report.report_staff" file="my_report.report_staff" />

        <record id="action_report_staff" model="ir.actions.report">
            <field name="paperformat_id" eval="paperformat_report_staff" />
        </record>

        <template id="report_staff">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
                </t>
                <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
                </t>
            <img t-if="company.background_badge" t-att-src="'data:image/png;base64,%s' % to_text(company.background_badge)" style="max-height: 435px;">
                <div class="front" style="margin-top: -510px">
                <div class="pic2" style="margin-top: -70px;">
                    <center>
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height: 180px; max-width: 350px;"/>
                    </center>
                </div>
                <div class="pic2" style="margin-top: -60px;">
                    <center>
                        <img t-attf-src="data:image/*;base64,{{o.image_1920}}" width="150px" height="200px"/>
                        <img alt="Barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(o.barcode or ''), 700, 150)" style="width:100%;height:4rem; padding-top: 1rem;"/>
                    </center>
                </div>
                <div>
                    <center>
                    <span t-esc="str(o.name).upper()" style="font-size: 1.7rem;"/><br/>
                    <span t-field="o.barcode" style="font-size: 1rem;"/><br/>
                    <span t-field="o.job_id" style="font-size: 1rem;"/><br/>
                    <span style="font-size: 1.1rem; font-weight:bold;">Punch &amp; Dies Division</span>
                    </center>
                </div>
                </div>
            </img>
            </t>
        </t>
        </template>

    </data>


</odoo>