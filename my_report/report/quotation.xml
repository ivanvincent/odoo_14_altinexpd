<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <report
            id="action_report_quotation"
            model="sale.order"
            string="Print Quotation"
            report_type="qweb-pdf"
            name="my_report.report_quotation"
            file="my_report.report_quotation"
        />

        <template id="report_quotation">
         <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="header">
                            <div class="row mt32">
                                <div class="col-12">
                                    <div class="col-xs-2" style="margin-left: -10px">
                                        <img src="/web/binary/company_logo" style="width : 300px; height:150px; padding-top:-10px;" align="left"/>
                                    </div>
                                    <div class="col-xs-7 col-xs-offset-1 font-small">
                                        <span style="padding-left:10px; font-size:30px;"><u><strong>PT. ALTINEX</strong></u></span><br/>
                                        <span style="padding-left:10px; font-size:25px;">Jl. Panghegar no.7, Mekarmulya, Gedebage, Bandung 40614</span><br/>
                                        <span style="padding-left:10px; font-size:25px;">JAWA BARAT - INDONESIA</span> <br/>
                                        <span style="padding-left:10px; font-size:25px;">(022) 87880241</span>
                                    </div>
                                </div>
                                <hr style="width:100%;text-align:left;margin-left:0"/>
                            </div>
                        </div>
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="text-center" style="background-color: #E6E6FA;">
                                <h4><b>Sale Order</b></h4>
                                <h4><b>Nomor : <span t-field="o.name"/> <br/></b></h4>
                            </div>
                            <br/>
                            <div class="row" style="margin-bottom: 20px;">
                                <div class="col-6">
                                    <table border="1" style="font-size:16px" width="75%">
                                        <tr style="padding-bottom:0;">
                                            <td style="padding-bottom:0; font-size:16px;">ORDER DATE</td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                            <td style="padding-bottom:0; font-size:16px; padding-right:5px;"> <span t-field="o.date_order" t-field-options="{&quot;format&quot;: &quot;dd-MMM-yyyy&quot;}"/></td>
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:16px;">Kepada</td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                            <td style="padding-bottom:0; font-size:16px;"><span t-field="o.partner_id.name"/></td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-6" style="font-size:16px">
                                    <table border="1" style="font-size:16px" width="75%">
                                        <tr style="padding-bottom:0;">
                                            <td style="padding-bottom:0; font-size:16px;">Attention</td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                            <!--<td style="padding-bottom:0; font-size:16px; padding-right:5px;"> <span t-field="o.date_order" t-field-options="{&quot;format&quot;: &quot;dd-MMM-yyyy&quot;}"/></td>-->
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:16px;">PAYMENT TERM</td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                            <td style="padding-bottom:0; font-size:16px; text-transform: uppercase;"><span t-field="o.payment_term_id.name"/></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            
                        </div>
                        <table class="table table-condesed" style="margin-top: 20px;">
                            <thead>
                                <th>NO</th>
                                <th>PRODUCT</th>
                                <th>QUANTITY</th>
                                <th>UOM</th>
                                <th>UNIT PRICE</th>
                                <th>TAXES</th>
                                <th>SUB TOTAL</th>
                            </thead>
                            <tbody>
                                <t t-set="no" t-value="1"/>
                                <tr t-foreach="o.order_line" t-as="line">
                                    <td><span t-esc="no"/> <t t-set="no" t-value="no + 1"/></td>
                                    <td><span t-field="line.product_id.name"/></td>
                                    <td><span t-field="line.product_uom_qty"/></td>
                                    <td><span t-field="line.product_uom.name"/></td>
                                    <td><span t-field="line.price_unit"/></td>
                                    <td><span t-field="line.tax_id.name"/></td>
                                    <td><span t-field="line.price_subtotal"/></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="clearfix" name="so_total_summary">
                            <div id="total" class="row" name="total">
                                <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                    <table class="table table-sm">
                                        <tr class="border-black o_subtotal" style="">
                                            <td name="td_amount_untaxed_label"><strong>Subtotal</strong></td>
                                            <td name="td_amount_untaxed" class="text-right">
                                                <span t-field="o.amount_untaxed"/>
                                            </td>
                                        </tr>
                                        <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                            <tr style="">
                                                <t t-if="amount_by_group[5] == 1 and o.amount_untaxed == amount_by_group[2]">
                                                    <td name="td_amount_by_group_label_3">
                                                        <span t-esc="amount_by_group[0]"/>
                                                        <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.pricelist_id.currency_id}"/></span>
                                                    </td>
                                                    <td name="td_amount_by_group_3" class="text-right o_price_total">
                                                        <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.pricelist_id.currency_id}"/>
                                                    </td>
                                                </t>
                                                <t t-else="">
                                                    <td name="td_amount_by_group_label">
                                                        <span t-esc="amount_by_group[0]"/>
                                                    </td>
                                                    <td name="td_amount_by_group" class="text-right o_price_total">
                                                        <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.pricelist_id.currency_id}"/>
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                        <tr class="border-black o_total">
                                            <td name="td_amount_total_label"><strong>Total</strong></td>
                                            <td name="td_amount_total" class="text-right">
                                                <span t-field="o.amount_total"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        
                        <br/>
                        <div class="line" style="border-bottom: thin solid #222;"></div>
                        <br/>
                        
                        <div class="page">

                        <div class="row" style="margin-bottom: 20px;">
                        <div class="col-12">
                            <tr><td><span><b>Harga Belum Termasuk PPn</b></span></td></tr>
                        </div>
                        </div>
                            
                        <div class="row" style="margin-bottom: 20px;">
                                <div class="col-3">
                                    <table border="1" style="font-size:16px" width="75%">
                                        <tr style="padding-bottom:0;">
                                            <td style="padding-bottom:0; font-size:16px;">Note</td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:16px;">Penyerahan</td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:16px;"><b>Toleransi</b></td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td> <br/>
                                        </tr> 
                                        <tr><td style="color: white">test</td></tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:16px;">Pembayaran</td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td> 
                                        </tr>
                                        <tr>
                                            <td style="padding-bottom:0; font-size:16px;">Penawaran berlaku</td>
                                            <td style="padding-bottom:0; font-size:16px;"> : </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-10" style="font-size:16px">
                                    <table border="1" style="font-size:16px" width="75%">
                                        <tr style="padding-bottom:0;">
                                            <td style="padding-bottom:0; font-size:16px; color: white">test</td>
                                        </tr>
                                        <tr style="padding-bottom:0;">
                                            <td style="padding-bottom:0; font-size:16px; color: white">test</td>
                                        </tr>
                                        <tr style="padding-bottom:0;">
                                            <td style="padding-bottom:0; font-size:16px; color: white">test</td>
                                        </tr>
                                        <tr style="padding-bottom:0;">
                                            <td style="padding-bottom:0; font-size:16px;"/>
                                        </tr>
                                        <tr style="padding-bottom:0;">
                                            <td style="padding-bottom:0; font-size:16px;">
                                                <b>Setiap pesanan harus dilebihkan min 1 pcs (khusus punch) untuk cadangan</b> <br/>
                                                <b>Toleransi kirim minimal sejumlah station maesin (dikurangi cadangan)</b>
                                            </td>
                                        </tr>
                                        <tr style="padding-bottom:0;">
                                            <td style="padding-bottom:0; font-size:16px;">50% DP, 50% Barang siap kirim</td>
                                        </tr>
                                        <tr style="padding-bottom:0;">
                                            <td style="padding-bottom:0; font-size:16px;">30 hari setelah tanggal surat penawaran ini</td>
                                        </tr>
                                    </table>
                                </div>
                        </div>
                        <div class="row" style="margin-bottom: 20px;">
                            <div class="col-12">
                                <tr><td><span><b>Demikian hal yang ingin kami sampaikan, atas perhatiannya kami ucapkan terima kasih</b></span></td></tr>
                            </div>
                        </div>
                        </div>

                        <br/>
                        
                        <div class="row">
                        <div class="col-6 text-center">
                        </div>
                        <div class="col-6 text-center">
                            Menyetujui <br/><br/><br/><br/>
                            (_______________________)
                        </div>
                        
                    </div>
                </t>
            </t>    
        </t>
        </template>

    </data>
    

</odoo>
