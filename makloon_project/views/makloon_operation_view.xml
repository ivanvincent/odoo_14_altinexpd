<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_makloon_operation_tree" model="ir.ui.view">
            <field name="name">makloon.operation.tree</field>
            <field name="model">makloon.operation</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Makloon Operation">
                    <field name="name"/>
                    <field name="sequence" />
                    <field name="purchase_category_id"/>
                </tree>
            </field>
        </record>

        <!-- search -->
		<record id="makloon_operation_search" model="ir.ui.view">
			<field name="name">makloon_operation_search</field>
			<field name="model">makloon.operation</field>
			<field name="arch" type="xml">
				<search string="Search Makloon Operations">
	                <field name="name"/>
	            </search>
			</field>
		</record>

        <!-- form -->
        <record id="makloon_operation_form" model="ir.ui.view">
            <field name="name">makloon_operation_form</field>
            <field name="model">makloon.operation</field>
            <field name="arch" type="xml">
                <form string="operation">
                	<header>
						<!--<button name="action_move" states="done" type="object" string="Create Move" class="oe_highlight" icon="fa-cube"/>-->
                		<!--<button name="action_request" states="draft" type="object" string="Approve" icon="fa-check" />-->
						<!--<button name="action_cancel" states="done" type="object" string="Cancel" icon="fa-close"/>-->
						<!--<button name="action_reset_to_draft" states="cancel" type="object" string="Reset To Draft" icon="fa-undo"/>-->
                		<!--<field name="state" widget="statusbar" />-->
						<!--statusbar_visible="draft,done"-->
                	</header>
                	<sheet>
                		<div class="oe_title">
                           <!--<h1>-->
                           	<!--<field name="name" readonly="1"/>-->
                           <!--</h1>-->
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="sequence"/>
                                <field name="purchase_category_id"/>
                            </group>
                        </group>
						<notebook>
							<page string="Operation Lines">
								<field name="order_line" editable="bottom">
                                    <tree string="Operation Lines" >
                                        <field name="product_material_id" />
                                        <field name="product_category_id" />
                                        <field name="name" />
                                    </tree>
								</field>
							</page>
	                    </notebook>
                        <notebook>
                        <page string="Berita Acara">
                            <field name="berita_acara_line" >
                                <tree string="Berita Acara Lines" editable="bottom">
                                    <field name="name" />
                                </tree>
                            </field>
                        </page>
                        </notebook>
                	</sheet>
					 <!--<div class="oe_chatter">-->
                	 	<!--&lt;!&ndash; <field name="message_follower_ids" widget="mail_followers"/> &ndash;&gt;-->
                        <!--<field name="message_ids" widget="mail_thread"/>-->
                    <!--</div>-->
                </form>
            </field>
        </record> 


    </data>
</openerp>