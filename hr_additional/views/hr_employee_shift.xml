<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="hr_employee_shift_tree">
            <field name="name">hr.employee.shift.tree</field>
            <field name="model">hr.employee.shift</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View -->
        <record model="ir.ui.view" id="hr_employee_shift_form">
            <field name="name">hr.employee.shift.form</field>
            <field name="model">hr.employee.shift</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="hr_employee_shift_action">
            <field name="name">Shift</field>
            <field name="res_model">hr.employee.shift</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="hr_menu_employee_shift"
            action="hr_employee_shift_action"
            parent="hr.menu_human_resources_configuration"
            sequence="3"
            groups="base.group_no_one"/>

    </data>
</odoo>