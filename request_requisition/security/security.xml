<odoo>

    <record model="ir.module.category" id="module_category_equest_requisition">
        <field name="name">Requset Requisition</field>
        <!-- <field name="parent_id" ref="base.module_category_purchase_management" /> -->
        <field name="sequence">20</field>
    </record>

    <record id="group_request_requisition_user" model="res.groups">
        <field name="name">Request Requisition / User</field>
        <field name="category_id" ref="module_category_equest_requisition" />
    </record>


    <record id="group_request_requisition_user_vehicle" model="res.groups">
        <field name="name">Request Requisition / Vehicle</field>
        <field name="category_id" ref="module_category_equest_requisition" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>


    <record id="group_request_requisition_location_only" model="res.groups">
        <field name="name">Request Requisition / Location Only</field>
        <field name="category_id" ref="module_category_equest_requisition" />
    </record>

    <record id="group_request_requisition_issued" model="res.groups">
        <field name="name">Request Requisition / Issued</field>
        <field name="category_id" ref="module_category_equest_requisition" />
        <field name="implied_ids" eval="[(4, ref('group_request_requisition_user'))]"/>
    </record>

    <record id="group_request_requisition_manager" model="res.groups">
        <field name="name">Request Requisition / Manager</field>
        <field name="category_id" ref="module_category_equest_requisition" />
        <field name="implied_ids" eval="[(4, ref('group_request_requisition_user'))]"/>
    </record>

    <record id="group_request_requisition_print_user" model="res.groups">
        <field name="name">Print RR User</field>
        <field name="category_id" ref="module_category_equest_requisition" />
        <field name="implied_ids" eval="[(4, ref('group_request_requisition_user'))]"/>
    </record>

    <record id="group_request_requisition_print_manager" model="res.groups">
        <field name="name">Print RR Manager</field>
        <field name="category_id" ref="module_category_equest_requisition" />
        <field name="implied_ids" eval="[(4, ref('account.group_account_manager'))]"/>
    </record>

    <record id="filter_rr_warehouse" model="ir.rule">
        <field name="name">Filter Warehouse</field>
        <field name="model_id" search="[('model','=','request.requisition')]" model="ir.model"/>
        <field name="groups" eval="[(4, ref('group_request_requisition_manager'))]"/>
        <field name="domain_force">[('warehouse_id','in', [ p.id for p in user.default_warehouse_ids ])]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="request_requisition_location_only_rule" model="ir.rule">
        <field name="name">Location Only</field>
        <field name="model_id" search="[('model','=','request.requisition')]" model="ir.model"/>
        <field name="groups" eval="[(4, ref('group_request_requisition_location_only'))]"/>
        <field name="domain_force">[('requested_by','=', user.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>


</odoo>