<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <report string="Print Purchase Request BB" 
        id="action_print_purchase_request_bb" 
        model="purchase.request" 
        report_type="qweb-pdf" 
        name="report_print.print_purchase_request_bb" 
        file="report_print.print_purchase_request_bb" />

        <template id="print_purchase_request_bb">
            <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div class="text-center">
                        <h3><b>BUKTI PERMINTAAN PEMBELIAN</b></h3>
                    </div>

                    <div class="row">
                        <div class="col-2">
                            No Dok. <br/>
                            Tanggal <br/>
                            Tujuan <br/>
                            Keterangan <br/>
                        </div>
                        <div class="col-6">
                            : <span t-field="o.name"/> <br/>
                            : <span t-field="o.date_start"/> <br/>
                            : PEMBELIAN <span t-field="o.po_categ_id"/> <br/>
                            : <span t-field="o.description"/> <br/>
                        </div>
                        <div class="col-8"></div>
                    </div><br/>

                    <table class="table-condensed" width="100%">
                            <tr class="text-center">
                                <th style="border : 1px solid black" width="5%">
                                    <center>No</center>
                                </th>
                                <th style="border : 1px solid black" width="15%">
                                    <center>Kode</center>
                                </th>
                                <th style="border : 1px solid black" width="15%">
                                    <center>Nama Barang</center>
                                </th>
                                <th style="border : 1px solid black" width="10%">
                                    <center>Spesifikasi</center>
                                </th>
                                <th style="border : 1px solid black" width="5%">
                                    <center>Pemakaian/Hari</center>
                                </th>
                                <th style="border : 1px solid black" width="10%">
                                    <center>Quantity</center>
                                </th>
                                <th style="border : 1px solid black" width="5%">
                                    <center>Satuan</center>
                                </th>
                                <th style="border : 1px solid black" width="10%">
                                    <center>Stock</center>
                                </th>
                                <th style="border : 1px solid black" width="10%">
                                    <center>Sisa PO</center>
                                </th>
                                <th style="border : 1px solid black" width="10%">
                                    <center>Request Date</center>
                                </th>
                                <th style="border : 1px solid black" width="15%">
                                    <center>Keterangan</center>
                                </th>
                            </tr>

                            <tr t-foreach="o.line_ids" t-as="line" height="3px">
                                <td style="border : 1px solid black;" class="text-center">
                                    <span t-esc="line_index + 1"/></td>
                                <td style="border : 1px solid black ; padding-left : 10px" class="text-left">
                                    <span t-field="line.product_id.default_code"/></td>
                                <td style="border : 1px solid black ; padding-left : 10px" class="text-left">
                                    <span t-field="line.product_id.name"/></td>
                                <td style="border : 1px solid black ; padding-left : 10px" class="text-left">
                                    <span t-field="line.specifications"/></td>
                                <td style="border : 1px solid black ; padding-right : 10px" class="text-right">
                                    <span t-field="line.product_id.usage_daily"/></td>
                                <td style="border : 1px solid black ; padding-right : 10px" class="text-right">
                                    <span t-field="line.product_qty"/></td>
                                <td style="border : 1px solid black" class="text-center">
                                    <span t-field="line.product_uom_id"/></td>
                                <td style="border : 1px solid black ; padding-right : 10px" class="text-right">
                                    <span t-field="line.qty_on_hand"/></td>
                                <td style="border : 1px solid black ; padding-right : 10px" class="text-right">
                                    <span/></td>
                                    <td style="border : 1px solid black" class="text-center">
                                    <span t-field="line.date_required"/></td>
                                <td style="border : 1px solid black ; padding-left : 10px" class="text-left">
                                    <span t-field="line.note"/></td>
                            </tr>
                    </table>
                    <br/>

                    <div class="row">
                        <div class="col-6 text-center">
                            Pembuat Data <br/>
                            <span t-field="o.date_start"></span><br/><br/><br/>
                            (<span t-field="o.requested_by"></span>)
                        </div>
                        <!-- <div class="col-3 text-center">
                            Penerima <br/><br/><br/><br/>
                            (_______________________)
                        </div> -->
                        <div class="col-6 text-center">
                            Menyetujui <br/><br/><br/><br/>
                            (_______________________)
                        </div>
                        
                    </div>

                </div>
            </t>
            </t>
        </template>
    
    </data>
    

</odoo>
