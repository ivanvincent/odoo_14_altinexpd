<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <report string="Print Purchase Order1" 
        id="action_print_purchase_order" 
        model="purchase.order" 
        report_type="qweb-pdf" 
        name="report_print.print_purchase_order" 
        file="report_print.print_purchase_order" />

        <template id="print_purchase_order">
            <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div class="text-center">
                        <h3><b>PURCHASE ORDER</b></h3>
                        <h5><span t-field="o.name"/></h5>
                    </div>

                    <div class="row">
                        <div class="col-2">
                            Kepada <br/>
                            Suuplier` <br/>
                            Alamat <br/>
                        </div>
                        <div class="col-2">
                            : <span t-field="o.partner_id"/> <br/>
                            : <span t-field="o.partner_id" /> <br/>
                            <!-- : <span t-field="o.note"/> <br/> -->
                        </div>
                        <div class="col-8"></div>
                    </div><br/>

                    <table class="table table-condensed table-striped table-bordered">
                            <tr>
                                <td>No</td>
                                <td>Nama Barang</td>
                                <td>Spek</td>
                                <td>Qty</td>
                                <td>Satuan</td>
                                <td>@Harga</td>
                                <td>PPN</td>
                                <td>Jumlah</td>
                            </tr>

                            <tr t-foreach="o.order_line" t-as="line">
                                <td><span t-esc="line_index + 1"/></td>
                                <td><span t-field="line.product_id"/></td>
                                <!-- <td><span t-field="line.specifications"/></td> -->
                                <td><span t-field="line.product_qty"/></td>
                                <td><span t-field="line.product_uom"/></td>
                                <td><span t-field="line.price_unit"/></td>
                                <td><span t-field="o.amount_tax"/></td>
                                <td><span t-field="o.amount_total"/></td>
                            </tr>
                    </table>
                    <br/>

                    <div class="row">
                        <div class="col-3 text-center">
                            Penerima <br/><br/><br/><br/>
                            (_______________________)
                        </div>
                        <div class="col-6"></div>
                        <div class="col-3 text-center">
                            Pembuat Data <br/>
                            <span t-field="o.date_approve"></span><br/><br/><br/>
                            <!-- (<span t-field="o.requested_by"></span>) -->
                        </div>
                    </div>

                </div>
            </t>
            </t>
        </template>
    
    </data>
    

</odoo>
