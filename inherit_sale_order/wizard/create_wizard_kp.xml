<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="create_wizard_kp_form" model="ir.ui.view">
            <field name="name">create.wizard.kp.form</field>
            <field name="model">create.wizard.kp</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="mesin_id" invisible="1"/>
                                <field name="date_kp"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Line">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="so_line_id"/>
                                        <field name="sale_id"/>
                                        <field name="qty_order"/>
                                        <field name="qty_sisa"/>
                                        <field name="qty_proses"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <footer>
                            <button name="action_create_kp" type="object" string="Create Kartu Proses" class="oe_highlight"/>
                            <button name="cancel" type="special" special="cancel" string="Cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="create_wizard_kp_action" model="ir.actions.act_window">
            <field name="name">Create Kartu Proses</field>
            <field name="res_model">create.wizard.kp</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="create_wizard_kp_form"/>
        </record>

        <record id="action_open_wizard_kp" model="ir.actions.act_window">
            <field name="name">Create Kartu Proses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.wizard.kp</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_sale_order_line" />
            <field name="binding_view_types">list</field>
            <field name="view_id" ref="create_wizard_kp_form"/>
        </record>
    
    </data>
    

</odoo>
