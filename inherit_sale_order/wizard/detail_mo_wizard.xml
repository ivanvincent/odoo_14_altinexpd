<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="detail_mo_wizard_form" model="ir.ui.view">
        <field name="name">detail_mo_wizard.form</field>
        <field name="model">detail.mo.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <field name="mrp_production_ids" readonly="1">
                        <tree>
                            <field name="name" decoration-bf="1"/>
                            <field name="date_planned_start" readonly="1" widget="remaining_days"/>
                            <field name="date_deadline" widget="remaining_days" />
                            <!-- <field name="product_id"/> -->
                            <!-- <field name="product_qty" sum="Total Qty" string="Quantity"/> -->
                            <!-- <field name="product_uom_id" string="Uom" groups="uom.group_uom"/> -->
                            <!-- <field name="workorder_id"/> -->
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="cancel" type="special" string="Close" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="detail_mo_wizard_action" model="ir.actions.act_window">
        <field name="name">Detail Manufacturing Order</field>
        <field name="res_model">detail.mo.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="detail_mo_wizard_form"/>
        <field name="target">new</field>
    </record>

</odoo>
