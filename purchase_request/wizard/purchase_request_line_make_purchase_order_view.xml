<odoo>
    <record id="view_purchase_request_line_make_purchase_order" model="ir.ui.view">
        <field name="name">Purchase Request Line Make Purchase Order</field>
        <field name="model">purchase.request.line.make.purchase.order</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Create PO">
                <!-- <separator string="Existing RFQ to update:" />
                <newline />
                <group>
                    <field name="sync_data_planned" />
                </group> -->
                <newline />
                <separator string="New PO details:" />
                <newline />
                <group>
                    <field name="purchase_order_id" invisible="1" domain="[('partner_id', '=', supplier_id)]" />
                    <field name="supplier_id" />
                    <!-- <field name="supplier_id2" /> -->
                    <field name="po_category_id" attrs="{'invisible':[('purchase_order_id', '!=', False)],'required': [('purchase_order_id', '=', False)]}"/>
                </group>
                <newline />
                <group>
                    <field name="item_ids" nolabel="1" colspan="2">
                        <tree string="Details" editable="bottom" create="false">
                            <field name="line_id" options="{'no_open': true}" invisible="1" />
                            <!-- <button name="action_shot_list_price" type="object" string="List Price" class="oe_highlight"/> -->
                            <field name="request_id" attrs="{'readonly': True}" />
                            <field name="product_id" readonly="1" force_save="1" />
                            <!-- <field name="lot_id"/> -->
                            <field name="name" readonly="1" force_save="1"/>
                            <field name="specifications" readonly="1" force_save="1"/>
                            <!-- <field name="no_komunikasi" /> -->
                            <field name="product_qty" readonly="0"/>                            
                            <field name="outstanding_po"/>                        
                            <field name="status_po" readonly="1" force_save="1"/>
                            <field name="conversion" readonly="1" force_save="1"/>                            
                            <field name="qty_pr"/>                            
                            <field name="product_uom_id" groups="uom.group_uom" readonly="1" force_save="1"/>
                            
                            <!-- <field name="keep_description" widget="boolean_toggle" /> -->
                        </tree>
                    </field>
                </group>
                <newline />
                <footer>
                    <button name="make_purchase_order" string="Create PO" type="object" class="oe_highlight" />
                    <button special="cancel" string="Cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_purchase_request_line_make_purchase_order" model="ir.actions.act_window">
        <field name="name">Create PO</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.request.line.make.purchase.order</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_purchase_request_line_make_purchase_order" />
        <field name="target">new</field>
        <field name="binding_model_id" ref="purchase_request.model_purchase_request_line" />
    </record>
</odoo>
