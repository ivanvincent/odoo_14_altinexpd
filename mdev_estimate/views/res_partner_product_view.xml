<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="mdev_res_partner_product_tree" model="ir.ui.view">
            <field name="name">res.partner.product.tree</field>
            <field name="model">res.partner.product</field>
            <field name="arch" type="xml">

                <tree string="Customer Products" import="false" >

                    <field name="cust_int_code" />
                    <field name="cust_ext_code" optional="show" />
                    <field name="customer_id" />
                    <field name="cust_type" optional="hide" string="Type" />
                    <field name="cust_address" optional="hide" />
                    <field name="cust_city" optional="hide" />
                    <field name="cust_cluster" optional="hide" />

                    <field name="cust_acc" optional="show" string="Account" />
                    <field name="cust_div" optional="hide" string="Division" />
                    <field name="cust_group" optional="hide" string="Grouping" />
                    <field name="prod_int_code" optional="show" />
                    <field name="product_id" />
                    <field name="prod_categ" optional="hide" />
                    <field name="prod_uom_code" optional="hide" />
                    <field name="ext_code" optional="hide" />
                    <field name="schedule" optional="show" />
                    <field name="product_active" />
                    <field name="ord_qty" />
                    <field name="min_qty" />
                    <field name="max_qty" />

                </tree>
            </field>
        </record>

        <record id="mdev_res_partner_product_form" model="ir.ui.view">
            <field name="name">res.partner.product.form</field>
            <field name="model">res.partner.product</field>
            <field name="arch" type="xml">
                <form string="Partners Product Form" >
                    <sheet>

                        <widget name="web_ribbon" text="Disabled" bg_color="bg-danger" attrs="{'invisible': [('product_active', '=', True)]}"/>
                        <group col="4" >
                            <field name="customer_id" colspan="4" domain="[('active','!=',False),('customer_rank', '>', 0)]" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}" />
                            <field name="cust_int_code" />
                            <field name="cust_ext_code" />
                            <field name="cust_address" />
                            <field name="cust_city" />
                            <field name="cust_acc" />
                            <field name="cust_div" />
                            <field name="cust_group" />
                            <field name="cust_type" string="Type" />
                            <separator colspan="4" string="" />
                            <field name="product_id" colspan="4" domain="[('sale_ok', '=', True),('bom_ids', '!=', False)]" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}" />
                            <field name="prod_int_code" />
                            <field name="ext_code" />
                            <field name="prod_categ" />
                            <field name="prod_uom_code" />
                        </group>

                        <group>
                            <field name="schedule" />
                            <field name="product_active" />
                        </group>
                       
                        <group col="6" >
                            <field name="ord_qty" options="{'type': 'number', 'step': 1}" />
                            <field name="min_qty" options="{'type': 'number', 'step': 1}" />
                            <field name="max_qty" options="{'type': 'number', 'step': 1}" />
                        </group>

                        <label for="remark" />
                        <field name="remark" placeholder="internal note..." />
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>                    
                </form>
            </field>
        </record>

        <record id='mdev_res_partner_product_search' model='ir.ui.view' >
            <field name="name">res.partner.product.search</field>
            <field name="model">res.partner.product</field>
            <field name="arch" type="xml">
                <search string="Partners Product Search">

                    <field name="customer_id" />
                    <field name="cust_int_code" />
                    <field name="cust_ext_code" />
                    <field name="cust_city" />
                    <field name="cust_group" />
                    <field name="cust_div" />
                    <separator/>
                    <field name="product_id" />
 
                    <filter string="My Documents" name="filter_mydocument" domain="[('create_uid', '=', uid)]"/>
<!-- 
                    <separator/>
                    <filter string="Customer MT" name="filter_cust_mt" domain="[('cust_type','=','mt')]" />
                    <filter string="Customer GT" name="filter_cust_gt" domain="[('cust_type','=','gt')]" />
                    <filter string="Customer PO" name="filter_cust_po" domain="[('cust_type','=','po')]" />
                    <filter string="Customer RO" name="filter_cust_ro" domain="[('cust_type','=','ro')]" />
                    <filter string="Customer TO" name="filter_cust_to" domain="[('cust_type','=','to')]" />
 -->
                    <separator />
                    <filter name="active" string="Active" domain="[('product_active', '=', True)]"/>
                    <filter name="inactive" string="Disabled" domain="[('product_active', '=', False)]"/>

                    <group expand="0" string="Group By">

                        <filter string="Customer" name="group_customer" domain="[]" context="{'group_by':'customer_id'}"/>
                        <filter string="Type" name="group_cust_type" domain="[]" context="{'group_by':'cust_type'}"/>
                        <separator/>
                        <filter string="Product" name="group_product" domain="[]" context="{'group_by':'product_id'}"/>
                        <separator/>
                        <filter string="Account" name="group_acc" domain="[]" context="{'group_by':'cust_acc'}"/>
                        <filter string="Division" name="group_div" domain="[]" context="{'group_by':'cust_div'}"/>
                        <filter string="Group" name="group_group" domain="[]" context="{'group_by':'cust_group'}"/>
                        <separator/>
                        <filter string="Prod. UoM" name="group_uom" domain="[]" context="{'group_by':'prod_uom_code'}"/>

                    </group>

                </search>
            </field>
        </record>

        <record id="mdev_res_partner_product_action" model="ir.actions.act_window">
            <field name="name">Customer Products</field>
            <field name="res_model">res.partner.product</field>
            <field name="view_mode">tree,pivot,graph,form</field>
            <field name="context">{
                                    'search_default_filter_mydocument':1,
                                }
            </field>
            <field name="domain">[]</field>
        </record>

        <record id="res_partner_product_action_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="mdev_res_partner_product_tree"/>
            <field name="act_window_id" ref="mdev_res_partner_product_action"/>
        </record>

        <menuitem id="res_partner_product_menu" action="mdev_res_partner_product_action" parent="est_template_menu" sequence="2"/>

    </data>
</odoo>
