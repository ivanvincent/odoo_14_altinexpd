<?xml version="1.0"?>
<odoo>

    <record id="mdev_estimate_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='sales_purchases']/group/group[@name='sale']" position="before">
                <group name="estimate_cust" string="Estimate" >
                    <field name="customer_type" />
                    <field name="estimate_tmpl" />
                </group>
            </xpath>

        </field>
    </record>

</odoo>
