        <record id="mdev_res_partner_details_action" model="ir.actions.act_window">
            <field name="name">Customer Details</field>
            <field name="res_model">res.partner.jalur.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                                    'search_default_filter_customer':1,
