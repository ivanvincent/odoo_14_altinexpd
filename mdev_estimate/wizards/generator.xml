<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record model="ir.ui.view" id="estimate_generator_wizard">
        <field name="name">Generator</field>
        <field name="model">estimate.generator.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Estimate Generator">
                <group col="4">
                    <field name="transaction_date"/>
                    <field name="transaction_type"/>
                </group>
                <group>
                    <field name="cust_acc_id" />
                    <field name="cust_div_id" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}" />
                    <field name="cust_group_id" attrs="{'invisible':[('cust_div_id', '=', False)]}" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}" />
                    <field name="cust_jalur_id" attrs="{'invisible':[('cust_group_id', '=', False)]}" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}" />
                    <field name="cust_cluster_id" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}" />
                </group>
                <group col="4">
                    <field name="target_delivered_date" />
                    <field name="jwk" readonly="1" />
                </group>
                <group>
                    <field name="estimate_template"/>
                    <field name="default_ord_qty" readonly="1" />
                </group>

                <footer>
                    <button name="generate" string="Generate" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>    