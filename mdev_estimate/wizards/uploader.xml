<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record model="ir.ui.view" id="estimate_uploader_wizard">
        <field name="name">Uploader</field>
        <field name="model">estimate.uploader.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
				<form string="Upload a XLS file">
					<group col="4" >
						<field name="state_type" />						
						<field name="batch_limit" readonly="1" />
					</group>
					<group col="4" string="Estimate Template File">
						<field name="xls_file" colspan="4" />
					</group>

                	<separator string="Proses akan menimpa bila data berikut sama (Est.Date, Type, Dlv.Date, Acc.Cust dan Estimator) dan status bukan DONE" />
					<footer>
						<button name="upload_xls_file" type="object"
								string="Process" class="oe_highlight"/>
						<button special="cancel" string="Cancel"/>
					</footer>
				</form>
        </field>
    </record>

</odoo>    