<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record model="ir.ui.view" id="estimate_confirm_wizard">
        <field name="name">Confirm</field>
        <field name="model">estimate.confirm.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Estimate Confirmation">
                <label for="reason" />
                <field name="reason" />
                <footer>
                    <button name="confirm" string="Process" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="estimate_validate_wizard">
        <field name="name">Validate</field>
        <field name="model">estimate.validate.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Estimate Validation">
                <label for="reason" />
                <field name="reason" />
                <footer>
                    <button name="validate" string="Process" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record model="ir.ui.view" id="estimate_settodraft_wizard">
        <field name="name">Set to Draft</field>
        <field name="model">estimate.settodraft.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Estimate Set-to-Draft">
                <label for="reason" />
                <field name="reason" />
                <footer>
                    <button name="settodraft" string="Process" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="estimate_cancel_wizard">
        <field name="name">Cancel</field>
        <field name="model">estimate.cancel.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Estimate Cancelation">
                <label for="reason" />
                <field name="reason" />
                <footer>
                    <button name="cancel" string="Process" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>    