<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record model="ir.ui.view" id="cust_group_update_wizard">
        <field name="name">Update Data</field>
        <field name="model">cust.group.update.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Customer Grouping - Update">
                <group>
                    <field name="update_type" widget="radio"/>
                </group>

                <group string="Updated Value" >

                    <field name="cust_type" attrs="{'invisible':[('update_type', '!=', 'type')]}" />
                    <field name="cust_cdlv" attrs="{'invisible':[('update_type', '!=', 'cust_tdlv')]}" options="{'type': 'number', 'step': 1}" />
                    <field name="cust_acc" attrs="{'invisible':[('update_type', '!=', 'account')]}" />
                    <field name="cust_div" attrs="{'invisible':[('update_type', '!=', 'division')]}" />
                    <field name="cust_group" attrs="{'invisible':[('update_type', '!=', 'group')]}" />
                    <field name="cust_cluster" attrs="{'invisible':[('update_type', '!=', 'cluster')]}" />
                    <field name="cust_gdlv" attrs="{'invisible':[('update_type', '!=', 'group_tdlv')]}" options="{'type': 'number', 'step': 1}" />
                    <field name="cust_route" attrs="{'invisible':[('update_type', '!=', 'route')]}" />
                    <field name="cust_sales" attrs="{'invisible':[('update_type', '!=', 'sales')]}" />
                    <field name="cust_dschdl" attrs="{'invisible':[('update_type', '!=', 'schedule')]}" />
                    <field name="cust_hschdl" attrs="{'invisible':[('update_type', '!=', 'hour')]}" widget="float_time" />

                </group>
<!-- 
                <label for="reason" />
                <field name="reason" />
 -->
                <footer>
                    <button name="update" string="Process" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_cust_group_update" 
        name="Update" 
        res_model="cust.group.update.wizard" 
        binding_model="res.partner.jalur.line" 
        view_mode="form" 
        target="new" 
        binding_views="list" />

</odoo>    