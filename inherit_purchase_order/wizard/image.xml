<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        
        <record id="purchase_order_view_form_wizard" model="ir.ui.view">
            <field name="name">purchase.order.wizard</field>
            <field name="model">purchase.order.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="image_ids">
                                <tree editable="bottom">
                                    <field name="id"/>
                                    <field name="image_binary" widget="image" class="oe_avatar" readonly="0"/>
                                    <field name="image_desc"/>
                                </tree>
                            </field>
                        </group>
                        <footer>
                            <button name="preview" string="Preview" type="object" class="oe_highlight" />
                        or
                            <button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
                    </sheet>

                </form>
            </field>
        </record>

    </data>
</odoo>