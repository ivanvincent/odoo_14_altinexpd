<odoo>
    <data>
        <record id="view_partner_kategori2_form" model="ir.ui.view">
            <field name="name">res.partner.kategori2.form</field>
            <field name="model">res.partner.kategori2</field>
            <field name="arch" type="xml">
                <form string="Partner Kategori 2">
                    <sheet>
                        <group>
                            <group>
                                <field name="kategori1_id"/>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_partner_kategori2_tree" model="ir.ui.view">
            <field name="name">res.partner.kategori2.tree</field>
            <field name="model">res.partner.kategori2</field>
            <field name="arch" type="xml">
                <tree string="Partner Kategori 2">
                    <field name="kategori1_id"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="view_partner_kategori2_search" model="ir.ui.view">
            <field name="name">res.partner.kategori2.search</field>
            <field name="model">res.partner.kategori2</field>
            <field name="arch" type="xml">
                <search string="Partner Kategori 2">
                    <field name="kategori1_id"/>
                    <field name="name" filter_domain="[('name','ilike',self)]" string="Name"/>
                </search>
            </field>
        </record>
        <record id="action_partner_kategori2" model="ir.actions.act_window">
            <field name="name">Partner Kategori 2</field>
            <field name="res_model">res.partner.kategori2</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_partner_kategori2_search"/>
            <field name="view_id" ref="view_partner_kategori2_tree"/>
        </record>
        <menuitem action="action_partner_kategori2" id="menu_action_partner_kategori2" parent="sale.menu_sale_config"
                  sequence="15"/>
    </data>
</odoo>