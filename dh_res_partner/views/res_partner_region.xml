<odoo>
	<data>
		<record id="view_partner_region_form" model="ir.ui.view">
			<field name="name">res.partner.region.form</field>
			<field name="model">res.partner.region</field>
			<field name="arch" type="xml">
				<form string="Partner Region">
					<sheet>
						<group>
							<group>
								<field name="name"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_partner_region_tree" model="ir.ui.view">
			<field name="name">res.partner.region.tree</field>
			<field name="model">res.partner.region</field>
			<field name="arch" type="xml">
				<tree string="Partner Region">
					<field name="name"/>
				</tree>
			</field>
		</record>
		<record id="view_partner_region_search" model="ir.ui.view">
			<field name="name">res.partner.region.search</field>
			<field name="model">res.partner.region</field>
			<field name="arch" type="xml">
				<search string="Partner Region">
					<field name="name" filter_domain="[('name','ilike',self)]" string="Name"/>
				</search>
			</field>
		</record>
		<record id="action_partner_region" model="ir.actions.act_window">
            <field name="name">Partner Region</field>
            <field name="res_model">res.partner.region</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_partner_region_search"/>
            <field name="view_id" ref="view_partner_region_tree"/>
        </record>
        <menuitem action="action_partner_region" id="menu_action_partner_region" parent="sale.menu_sale_config" sequence="15"/>
	</data>
</odoo>